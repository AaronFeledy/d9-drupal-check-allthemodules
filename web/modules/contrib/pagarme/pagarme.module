/**
 * Implements hook_help().
 */
function pagarme_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the pagarme module.
    case 'help.page.pagarme':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Integration description = Provides a Drupal Commerce payment method for Pagar.me.') . '</p>';
      return $output;

    default:
  }
}

function pagarme_commerce_order_presave($order) {
	if ($order->getState()->value == 'completed') {
		$data = pagarme_transaction_data('pagarme_order_transaction');
		if ($data) {
			foreach ($data as $key => $item) {
				$order->setData($key, $item);
			}
		}
	}
}

function pagarme_transaction_data($searcher, $data_transaction = NULL) {
  $_response = &drupal_static(__FUNCTION__, array());

  if (is_array($data_transaction)) {
    $_response[$searcher] = $data_transaction;
  }
  if (!isset($_response[$searcher])) {
    $_response[$searcher] = NULL;
  }
  return $_response[$searcher];
}