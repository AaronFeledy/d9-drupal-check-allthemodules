<?php

/**
 * @file
 * Contains editor_absolute_image_url.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function editor_absolute_image_url_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the editor_absolute_image_url module.
    case 'help.page.editor_absolute_image_url':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Allows the user to choose to use an absolute src URL for images embedded using the core wysiwyg editor.') . '</p>';
      return $output;

    default:
  }
}
