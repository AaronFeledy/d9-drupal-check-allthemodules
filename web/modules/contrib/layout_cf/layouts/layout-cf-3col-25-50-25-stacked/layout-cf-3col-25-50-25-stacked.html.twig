{#
/**
 * @file
 * Template for a 3 column panel layout.
 *
 * This template provides a three column 25%-50%-25% panel display layout, with
 * additional areas for the top and the bottom.
 *
 * Variables:
 * - $id: An optional CSS id to use for the layout.
 * - $content: An array of content, each item in the array is keyed to one
 *   panel of the layout. This layout supports the following sections:
 *   - content.top: Content in the top row.
 *   - content.left: Content in the left column.
 *   - content.middle: Content in the middle column.
 *   - content.right: Content in the right column.
 *   - content.bottom: Content in the bottom row.
 */
#}

{% set middle = content.middle|render %}
{% set left = content.left|render %}
{% set right = content.right|render %}
{% set top = content.top|render %}
{% set bottom = content.bottom|render %}

{% if (left and right) %}
  {% set layout_class = 'layout-cf-two-sidebars layout-cf-sidebar-left layout-cf-sidebar-right' %}
{% elseif (left) %}
  {% set layout_class = 'layout-cf-sidebar-left' %}
{% elseif (right) %}
  {% set layout_class = 'layout-cf-sidebar-right' %}
{% else %}
  {% set layout_class = 'layout-cf-sidebar-none' %}
{% endif %}

<!-- "{{ left }}" -->
<div class="layout-cf-3col-stacked {{ layout_class }}" {% if css_id %}{{ css_id }}{% endif %}>
  {% if top %}
    <div class="layout-cf-content-top">
      {{ top }}
    </div>
  {% endif %}

  <div class="layout-cf-content-middle">
    {{ middle }}
  </div>

  {% if left %}
    <div class="layout-cf-content-left">
      {{ left }}
    </div>
  {% endif %}

  {% if right %}
    <div class="layout-cf-content-right">
      {{ right }}
    </div>
  {% endif %}

  {% if bottom %}
    <div class="layout-cf-content-bottom">
      {{ bottom }}
    </div>
  {% endif %}
</div>
