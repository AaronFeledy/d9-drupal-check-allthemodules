/**
 * Implements hook_help().
 */
function moon_phases_help($route_name, RouteMatchInterface $route_match) {
  $output = NULL;
  switch ($route_name) {
    // Main module help for the moon_phases module.
    case 'help.page.moon_phases':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Moon Phases shows the lunar calendar for a given period.') . '</p>';
      break;

    default:
  }

  return $output;
}

