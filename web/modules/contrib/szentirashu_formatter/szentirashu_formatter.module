<?php

/**
 * @file
 * Contains szentirashu_formatter.module..
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function szentirashu_formatter_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the szentirashu_formatter module.
    case 'help.page.szentirashu_formatter':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Create custom field formatter from Scripture references to szentiras.hu') . '</p>';
      $filepath = dirname(__FILE__) . '/README.txt';
      if (file_exists($filepath)) {
        $output .= '<pre>' . file_get_contents($filepath) . '</pre>';
      }

      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function szentirashu_formatter_theme() {
  return array(
    'szentirashu_formatter' => array(
      'variables' => array(
        'reference' => NULL,
        'translation' => NULL,
        'behavior' => NULL,
        'protocol' => NULL,
      ),
    ),
  );
}
