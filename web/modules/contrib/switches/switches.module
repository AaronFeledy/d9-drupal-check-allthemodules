<?php

/**
 * @file
 * Contains switches.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function switches_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the switches module.
    case 'help.page.switches':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('A framework to create and manage configurable system toggles.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function switches_theme() {
  return [
    'switches' => [
      'render element' => 'children',
    ],
  ];
}
