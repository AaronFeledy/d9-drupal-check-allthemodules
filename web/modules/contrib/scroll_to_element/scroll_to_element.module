<?php

/**
 * @file
 */

use Drupal\scroll_to_element\SettingsHandler;

/**
 * Implement hook_page_attachments_alter
 * @param $page
 */
function scroll_to_element_page_attachments_alter(&$page) {
  $config = \Drupal::config('scroll_to_element.settings');
  $settings = new SettingsHandler($config);
  $selectors = $settings->getSelectors();
  $page['#attached']['library'][] = 'scroll_to_element/scroll_to_element';
  $page['#attached']['drupalSettings']['scroll_to_element']['elements'] = $selectors;
}

