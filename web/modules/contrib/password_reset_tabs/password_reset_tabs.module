<?php

/**
 * @file
 * Module file for Password Reset Tab.
 */

use Drupal\Core\Url;
/**
 * Implements hook_help().
 */
function password_reset_tabs_help($route_name) {
  switch ($route_name) {
    case "help.page.password_reset_tabs":
      return '<p>' . t('Password reset tabs module provides a simple UI to change password.You can access this UI <a href="@pass_reset">here</a>', array('@pass_reset' => Url::fromRoute('password_reset_tabs.provide_tabs')->toString())) . '</p>';
  }
}

/**
 * Implements hook_form_form_id_alter() for user_pass_form().
 */
function password_reset_tabs_form_user_pass_alter(&$form, \Drupal\Core\Form\FormStateInterface $form_state, $form_id) {
  $path = \Drupal\Core\Url::fromRoute("<current>")->toString();
  if (strstr($path, 'password_reset')) {
    $form['#submit'][] = 'password_reset_tabs_redirect_to_validation_tab';
    $form['#attached']['library'] = array('password_reset_tabs/tabs-js');
  }
}

/**
 * Callback for password_reset_tabs_form_user_pass_alter.
 */
function password_reset_tabs_redirect_to_validation_tab(&$form, $form_state) {
  $token_generator = \Drupal::csrfToken();
  $token = $token_generator->get('pass_valid_hash');
  $form_state->setRedirect('password_reset_tabs.validation',
      array(
        'query' => array(
          'token' => $token,
        ),
      ));
}

/**
 * Implements hook_form_form_id_alter() for user_pass_form().
 */
function password_reset_tabs_form_user_form_alter(&$form, \Drupal\Core\Form\FormStateInterface $form_state, $form_id) {
  $path = \Drupal\Core\Url::fromRoute("<current>")->toString();
  if (strstr($path, 'password_reset')) {
    $form['actions']['submit']['#submit'][]  = 'password_reset_tabs_redirect_to_done_tab';
    $form['#attached']['library'] = array('password_reset_tabs/tabs-js');
  }
}
/**
 * Callback for hook_form_form_id_alter.
 */
function password_reset_tabs_redirect_to_done_tab(&$form, $form_state) {
  $token_generator = \Drupal::csrfToken();
  $token = $token_generator->get('pass_done_hash');
  $form_state->setRedirect('password_reset_tabs.done',
      array(
        'query' => array(
          'token' => $token,
        ),
      ));
}
