<?php

/**
 * @file
 * Contains paypal_donation.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function paypal_donation_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the paypal_donation module.
    case 'help.page.paypal_donation':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Paypal Donation integration') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function paypal_donation_theme() {
  return [
    'paypal_donation' => [
      'template' => 'paypal_donation',
      'render element' => 'children',
    ],
  ];
}
