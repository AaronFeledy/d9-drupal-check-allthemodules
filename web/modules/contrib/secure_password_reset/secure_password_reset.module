use Drupal\Core\Form\FormStateInterface;

/**
 * @file
 * Module file for secure_password_reset.
 */

/**
 * Implements hook_form_FORM_ID_alter().
 */
function secure_password_reset_form_user_pass_alter(&$form, FormStateInterface $form_state) {
  $form['#validate'][0] = 'Drupal\secure_password_reset\Controller\SecurePasswordResetController::validateForm';
  $form['actions']['submit']['#validate'] = $form['#validate'];
  $form['#submit'][0] = 'Drupal\secure_password_reset\Controller\SecurePasswordResetController::submitForm';
  $form['actions']['submit']['#submit'] = $form['#submit'];

}
