<?php

/**
 * @file
 * Contains zurb_vresponsive_embed.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function zurb_responsive_embed_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the zurb_responsive_embed module.
    case 'help.page.zurb_responsive_embed':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Adds a field to show responsive video embed using Zurb Foundation') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function zurb_responsive_embed_theme() {
  return [
    'zurb_responsive_embed_formatter' => [
      'variables' => [
        'url' => NULL,
      ],
      'template' => 'zurb-responsive-embed-formatter',
    ],
    'zurb_responsive-embed_panorama_formatter' => [
      'variables' => [
        'url' => NULL,
      ],
      'template' => 'zurb-responsive-embed-panorama-formatter',
    ],
    'zurb_responsive_embed_widescreen_formatter' => [
      'variables' => [
        'url' => NULL,
      ],
      'template' => 'zurb-responsive-embed-widescreen-formatter',
    ],
  ];
}
