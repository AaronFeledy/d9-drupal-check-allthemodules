<?php

/**
 * @file
 * shield_pages module file.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function shield_pages_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.shield_pages':
      $output = '';
      $output .= '<h3>' . t('Shield Pages') . '</h3>';
      $output .= '<p>' . t('It allows the administrator to secure any page in your website by password and All the shielded pages will be accessible by users having this permission.') . '</p>';
      return ['#markup' => $output];
  }
}
