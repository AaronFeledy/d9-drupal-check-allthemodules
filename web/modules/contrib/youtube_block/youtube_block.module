<?php

/**
 * @file
 * Controls the visual building components of the Youtube Block.
 */
 
use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function youtube_block_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
      case 'help.page.youtube_block':
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('The Youtube Block module allows you to connect to a Youtube account and import recent data using Youtube feeds. The feed data is shown as a block that contains your most recent posts.  For more information, see the <a href=":online">online documentation for the YouTube Block module</a>.', [':online' => 'https://www.drupal.org/node/2713265']) . '</p>';
      $output .= '<h3>' . t('Uses') . '</h3>';
      $output .= '<p>' . t('The block configuration page lets you choose how many posts and what size they should appear in the block. The images are individually exposed to the drupal theme layer, so developers have access to all of the variables provided by the youtube api should they choose to extent the block.') . '</p';
      return $output;
  }
}

/**
 * Implements hook_theme().
 */
function youtube_block_theme() {
  return array(
    'youtube_block_image' => array(
      'variables' => array('height' => NULL,'width' => NULL, 'src' => NULL, 'href' => NULL),
      'template' => 'youtube-block-image',
    ),
  );
}