<?php
/**
 * @file
 * Install, update and uninstall functions for the token_var module.
 */

use \Drupal\Core\Link;
use \Drupal\Core\Url;

/**
 * Implements hook_install().
 */
function token_var_install() {
  $link = new Link(t('Configuration Link'), new Url('token_var.admin_config'));
  $link = $link->toString();
  drupal_set_message(
    t("Please visit @link to select variables for token replacement",
      array(
        '@link' => $link,
      )
    )
  );
}
