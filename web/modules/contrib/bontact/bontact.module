/**
 * Implementation of hook_page_attachments
 * @param array $attachments
 */
function bontact_page_attachments(array &$attachments) {
	//Bontact on .
	if (\Drupal::service('router.admin_context')->isAdminRoute()) {
		return;
	}
	
	$customerId = \Drupal::config('bontact.settings')->get('bontact_customer');
	
	$attachments['#attached']['library'][] = 'bontact/bontact';
	$attachments['#attached']['drupalSettings']['bontact']['customerId'] = $customerId;
}