<?php
/**
 * @file
 * Functions to support creating CKEditor Collapsible.
 */

/**
 * Implements hook_page_attachments_alter().
 */
function ckeditor_jsplugins_page_attachments_alter(array &$page) {
  // Attaches css assets globally.
  $page['#attached']['library'][] = 'ckeditor_jsplugins/collapsible_style';
  $page['#attached']['library'][] = 'ckeditor_jsplugins/accordion_style';
}
