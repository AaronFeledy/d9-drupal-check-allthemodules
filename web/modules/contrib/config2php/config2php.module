<?php

/**
 * @file
 * Provides a page for getting configuration in PHP array style.
 */

use Drupal\Core\Link;
use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function config2php_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.config2php':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Provides a page like the @url page for getting configuration in PHP array style.', [
        '@url' => Link::createFromRoute(t('Single export'), 'config.export_single')->toString(),
      ]) . '</p>';
      return $output;

    case 'config2php.export':
      return '<p>' . t('Choose a configuration item to display its PHP array structure.') . '</p>';
  }
}
