<?php

/**
 * @file
 * Simplenews stats module.
 */

/**
 * Implements hook_help().
 */
function simplenews_stats_help($path, $arg) {
  switch ($path) {

    case 'simplenews_stats.stats_tab':
      return '';
  }
}

/**
 * Implements hook_mail_alter().
 */
function simplenews_stats_mail_alter(&$message) {
  if ($message['module'] != 'simplenews' || !in_array($message['key'],['node','test'])) {
    return;
  }

  $ssMail = Drupal::service('simplenews_stats.mail');
  $ssMail->prepareMail($message);
}
