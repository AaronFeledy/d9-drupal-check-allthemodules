<?php

function expose_uuid_form_alter(&$form, \Drupal\Core\Form\FormStateInterface $form_state, $form_id) {

  if(!Drupal::currentUser()->hasPermission('edit uuid'))
    return;

  if ($form_state->getFormObject() instanceof \Drupal\Core\Entity\EntityFormInterface) {
    $uuid = $form_state->getBuildInfo()['callback_object']->getEntity()->uuid();

    $form['uuid'] = array(
      '#type' => 'textfield',
      '#title' => t('UUID'),
      '#default_value' => $uuid,
      '#size' => 36,
      '#maxlength' => 36,
      '#required' => TRUE,
    );

    $form['#validate'][] = 'expose_uuid_form_validate';
  }
}

function expose_uuid_form_validate($form, &$form_state) {

  $uuid = $form_state->getValue('uuid');

  if(!\Drupal\Component\Uuid\Uuid::isValid($uuid)) {
    $form_state->setErrorByName('uuid', t('Not a valid UUID'));
  }
}
