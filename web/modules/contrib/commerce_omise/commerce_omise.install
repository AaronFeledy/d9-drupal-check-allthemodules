<?php

/**
 * @file
 * Contains install and update functions for Commerce Omise.
 */

/**
 * Implements hook_requirements().
 */
function commerce_omise_requirements($phase) {
  $requirements = [];
  if ($phase == 'install') {
    if (!class_exists('\OmiseCharge')) {
      $requirements['commerce_omise_library'] = [
        'description' => t('Commerce omise requires the omise/omise-php library.'),
        'severity' => REQUIREMENT_ERROR,
      ];
    }
  }

  return $requirements;
}
