<?php

/**
 * @file
 * Steam Login hook calls.
 */

use Drupal\steam_login\UserAlter;

/**
 * Implements hook_user_format_name_alter().
 */
function steam_login_user_format_name_alter(&$name, $account) {
  $name = \Drupal::service('class_resolver')
    ->getInstanceFromDefinition(UserAlter::class)
    ->alterUserName($name, $account);
}
