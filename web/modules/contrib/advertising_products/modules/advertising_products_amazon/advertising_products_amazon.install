function advertising_products_amazon_schema() {
  $schema['advertising_products_amazon_image_data'] = array(
    'description' => 'Stores additional image data for products from amazon.com',
    'fields' => array(
      'iid' => array(
        'type' => 'serial',
        'not null' => TRUE,
        'description' => 'Primary Key: Unique image ID.',
      ),
      'pid' => array(
        'type' => 'int',
        'not null' => TRUE,
        'default' => 0,
        'description' => "product entity id",
      ),
      'url' => array(
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE,
        'default' => '',
        'description' => 'image url.',
      )
    ),
    'primary key' => array('iid'),
    'indexes' => array(
      'pid' => array('pid'),
      'url' => array('url'),
    )
