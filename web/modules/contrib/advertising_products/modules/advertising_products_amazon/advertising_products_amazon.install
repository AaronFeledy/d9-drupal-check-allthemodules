/**
 * Add advertising_products_amazon_image_data table if it does not exist
 */
function advertising_products_amazon_update_8001() {
  $database = \Drupal::database();
  if (!$database->schema()->tableExists('advertising_products_amazon_image_data')) {

    $schema = advertising_products_amazon_schema();
    $database->schema()->createTable('advertising_products_amazon_image_data', $schema['advertising_products_amazon_image_data']);
  }
}
