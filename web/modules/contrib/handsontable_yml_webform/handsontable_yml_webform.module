<?php

use Drupal\handsontable_yml_webform\Element\Handsontable;

/**
 * Implements hook_nagios().
 *
 * See https://www.drupal.org/project/nagios for details
 */
function handsontable_yml_webform_nagios() {
  $sError = Handsontable::getLibInstructionsIfNeeded(__DIR__);
  if (!$sError) {
    return [];
  }

  return [
    'handsontable_yml_webform' => [
      'status' => 2, // NAGIOS_STATUS_CRITICAL
      'type' => 'state',
      'text' => $sError,
    ],
  ];
}
