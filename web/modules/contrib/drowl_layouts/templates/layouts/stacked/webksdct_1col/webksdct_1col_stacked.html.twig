{#
/**
 * @file
 * Template for a 1 cell layout.
 *
#}
<div {{ attributes.setAttribute('id', settings.css_id).addClass('grid-x grid-margin-x', settings.css_classes) }}>
    <div class="small-12 cell">
        {% if content.top|render|trim %}
            <div class="layout-region layout-region--top">
                {{ content.top }}
            </div>
        {% endif %}
        {% if content.main|render|trim %}
            <div class="layout-region layout-region--main">
                {{ content.main }}
            </div>
        {% endif %}
        {% if content.bottom|render|trim %}
            <div class="layout-region layout-region--bottom">
                {{ content.bottom }}
            </div>
        {% endif %}
    </div>
</div>
