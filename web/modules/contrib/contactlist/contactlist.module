<?php

/**
 * @file
 * Provides a full-featured contact list functionality for Drupal.
 */

use Drupal\Core\Database\Query\AlterableInterface;

/**
 * Implements hook_query_TAG_alter for the contact_group entity
 *
 * Contact groups should not be visible to those who don't own THEM.
 */
function contactlist_query_contact_group_access_alter(AlterableInterface $query) {
  $query->condition('owner', \Drupal::currentUser()->id());
}
