<?php

/**
 * @file
 * Hidey Help module code.
 */

/**
 * Implements hook_page_attachments().
 *
 * Adds the hidey_help library to the page for any user who has the
 * 'access hidey help' permission.
 */
function hidey_help_page_attachments(array &$page) {
  if (!\Drupal::currentUser()->hasPermission('access hidey help')) {
    return;
  }

  $page['#attached']['library'][] = 'hidey_help/hidey_help';
}
