<?php

/**
 * @file
 * Contains jscrollpane.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Url;

/**
 * Implements hook_help().
 */
function jscrollpane_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.jscrollpane':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Click <a href=":demo">Sample</a> to view the basic usage of this module.', [':demo' => Url::fromRoute('jscrollpane.page')->toString()]) . '</p>';

      return $output;
  }
}

/**
 * Get the settngs value & prepare the element.
 */
function jscrollpane_page_attachments(array &$page) {
  $config = \Drupal::config('jscrollpane.settings');
  $elements = $config->get('jsp_selectors');

  $properties = [
    // Common Settings.
    'showArrows' => $config->get('showArrows'),
    'arrowScrollOnHover' => $config->get('arrowScrollOnHover'),
    'mouseWheelSpeed' => $config->get('mouseWheelSpeed'),
    'arrowButtonSpeed' => $config->get('arrowButtonSpeed'),
    'autoReinitialise' => $config->get('autoReinitialise'),
    // Vertical Settings.
    'verticalGutter' => $config->get('verticalGutter'),
    'verticalDragMinHeight' => $config->get('verticalDragMinHeight'),
    'verticalDragMaxHeight' => $config->get('verticalDragMaxHeight'),
    'verticalDragMinWidth' => $config->get('verticalDragMinWidth'),
    'verticalDragMaxWidth' => $config->get('verticalDragMaxWidth'),
    'verticalArrowPositions' => $config->get('verticalArrowPositions'),
    // Horizontal Settings.
    'horizontialGutter' => $config->get('horizontialGutter'),
    'horizontialDragMinHeight' => $config->get('horizontialDragMinHeight'),
    'horizontialDragMaxHeight' => $config->get('horizontialDragMaxHeight'),
    'horizontialDragMinWidth' => $config->get('horizontialDragMinWidth'),
    'horizontialDragMaxWidth' => $config->get('horizontialDragMaxWidth'),
    'horizontialArrowPositions' => $config->get('horizontialArrowPositions'),
  ];

  $page['#attached']['drupalSettings']['jscrollpane']['selectors'] = $elements;
  $page['#attached']['drupalSettings']['jscrollpane']['properties'] = $properties;
  $page['#attached']['library'][] = 'jscrollpane/jscrollpane.elements';
}

/**
 * Implements hook_theme().
 */
function jscrollpane_theme($existing, $type, $theme, $path) {
  return [
    'jscrollpane_sample' => ['variables' => NULL],
  ];
}
