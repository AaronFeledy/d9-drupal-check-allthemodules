use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_form_alter().
 */
function commerce_oci_checkout_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  if (strpos($form_id, 'views_form_commerce_cart_form') === 0) {
    \Drupal::service('commerce_oci_checkout.form_alter')->alterCart($form, $form_state);
  }
}

/**
 * Implements hook_theme().
 */
function commerce_oci_checkout_theme($existing, $type, $theme, $path) {
  return [
    'commerce_oci_checkout_form' => [
      'variables' => [
        'hook_url' => '',
        'items_with_fields' => [],
        'fields' => [],
        'submit_button' => '',
      ],
    ],
  ];
}
