<?php

/**
 * Implements hook_requirements().
 */
function picker_requirements($phase) {
  $requirements = [];
   if (!file_exists(DRUPAL_ROOT . '/libraries/select_picker/')) {
      $requirements['addressing_library'] = [
        'description' => t('Select picker library is required to install the picker module.'),
        'severity' => REQUIREMENT_ERROR,
      ];
    }
  return $requirements;
}