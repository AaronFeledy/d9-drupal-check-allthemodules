<?php

/**
 * @file
 * Module's hooks implementations and helper functions.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function image_link_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.image_link':
      return t('<p>Image Link is a field type that allows you to have one field that contains both an image and a link.</p>
      <p>Visit the <a href=":project_page">project page on Drupal.org</a> for more details.</p>',
        [
          ':project_page' => 'https://www.drupal.org/project/image_link',
        ]);
  }
}
