/**
 * Add label and message columns to the finding table.
 */
function healthcheck_historical_update_8001() {
  /** @var \Drupal\Core\Database\Schema $schema */
  $schema = \Drupal::database()->schema();

  $schema->addField('healthcheck_finding', 'label', [
    'type' => 'varchar_ascii',
    'length' => 256,
  ]);

  $schema->addField('healthcheck_finding', 'message', [
    'type' => 'text',
    'size' => 'big',
  ]);
}
