<?php

/**
 * @file
 * Contains css_background.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\css_background\Form\CssBackgroundEntityForm;

/**
 * Implements hook_help().
 */
function css_background_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the css_background module.
    case 'help.page.css_background':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Entity CSS background') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_inline_entity_form_entity_form_alter().
 */
function css_background_inline_entity_form_entity_form_alter(&$entity_form, &$form_state) {
  if ($entity_form['#entity_type'] == 'css_background') {
    CssBackgroundEntityForm::alterInlineEntityForm($entity_form, $form_state);
  }
}
