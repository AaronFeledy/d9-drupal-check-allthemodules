<?php

/**
 * @file
 * Contains chrome_push_notification.module functionality.
 */

/**
 * Implements hook_page_attachments().
 */
function chrome_push_notification_page_attachments(&$page) {
  $page['#attached']['html_head_link'][][] = [
    'rel' => 'manifest',
    'href' => '/manifest.json',
  ];
}

/**
 * Implements hook_page_attachments_alter().
 */
function chrome_push_notification_page_attachments_alter(array &$build) {
  $build['#attached']['library'][] = 'chrome_push_notification/service-worker';
  $build['#attached']['drupalSettings']['chrome_push_notification']['serviceWorker']['foo'] = 'bar';
}
