<?php

/**
 * @file
 * Contains phones_contact.module.
 */

use Drupal\phones_contact\Hook\Theme;
use Drupal\phones_contact\Hook\Preprocess;
use Drupal\phones_contact\Hook\Presave;
use Drupal\phones_contact\Hook\View;
use Drupal\phones_contact\Hook\ThemeSuggestionsPhonesContact;
use Drupal\phones_contact\Hook\FormPhonesContactFormAlter;
use Drupal\phones_contact\Hook\OnlinepbxClientsAlter;

/**
 * Implements hook_theme().
 */
function phones_contact_theme() {
  return Theme::hook();
}

/**
 * Implements hook_onlinepbx_clients_alter().
 */
function phones_contact_onlinepbx_clients_alter(&$clients) {
  OnlinepbxClientsAlter::hook($clients);
}

/**
 * Implements hook_entity_presave().
 */
function phones_contact_entity_presave($entity) {
  Presave::hook($entity);
}

/**
 * Implements hook_view().
 */
function phones_contact_entity_view(array &$build, $entity, $display, $view_mode) {
  View::hook($build, $entity, $view_mode);
}

/**
 * Implements hook_preprocess_node() for node.html.twig.
 */
function phones_contact_preprocess_entity(&$variables) {
  Preprocess::hook($variables);
}

/**
 * Implements hook_theme_suggestions_HOOK().
 */
function phones_contact_theme_suggestions_phones_contact(array $variables) {
  return ThemeSuggestionsPhonesContact::hook($variables);
}

/**
 * Implements hook_form_FORM_ID_alter().
 */
function phones_contact_form_phones_contact_person_add_form_alter(&$form, &$form_state, $form_id) {
  FormPhonesContactFormAlter::hook($form, $form_state, $form_id);
}

/**
 * Implements hook_form_FORM_ID_alter().
 */
function phones_contact_form_phones_contact_organization_add_form_alter(&$form, &$form_state, $form_id) {
  FormPhonesContactFormAlter::hook($form, $form_state, $form_id);
}

/**
 * Implements hook_form_FORM_ID_alter().
 */
function phones_contact_form_phones_contact_person_edit_form_alter(&$form, &$form_state, $form_id) {
  FormPhonesContactFormAlter::hook($form, $form_state, $form_id);
}

/**
 * Implements hook_form_FORM_ID_alter().
 */
function phones_contact_form_phones_contact_organization_edit_form_alter(&$form, &$form_state, $form_id) {
  FormPhonesContactFormAlter::hook($form, $form_state, $form_id);
}
