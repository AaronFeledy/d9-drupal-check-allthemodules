<?php

/**
 * @file
 * Contains search_api_bundle_boost.module.
 */


/**
 * Implements hook_search_api_solr_documents_alter().
 */
function search_api_bundle_boost_search_api_solr_documents_alter(array $documents, \Drupal\search_api\IndexInterface $index, array $items) {
  // Set document boost to boost value from them Search API item.
  $i = 0;
  foreach ($items as $item) {
    if ($boost = $item->getBoost()) {
      $documents[$i]->setBoost($boost);
    }
    $i++;
  }
}
