<?php

/**
 * @file
 * Provides functionality for views_field_percentage.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function views_field_percentage_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.views_field_percentage':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Render numeric field as percentage.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function views_field_percentage_theme($existing, $type, $theme, $path) {

  return [
    'percentage' => [
      'variables' => [
        'range_min' => '',
        'range_current' => '',
        'range_max' => '',
        'range_style_type' => '',
        'percent' => '',
        'difference' => '',
      ],
    ],
  ];
}
