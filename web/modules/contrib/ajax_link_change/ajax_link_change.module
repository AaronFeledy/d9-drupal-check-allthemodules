<?php

/**
 * @file
 * Contains ajax_link_change.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function ajax_link_change_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the ajax_link_change module.
    case 'help.page.ajax_link_change':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('This module provide Provide a ajax toggle switch field') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function ajax_link_change_theme() {
  return [
    'ajax_link_change' => [
      'variables' => [
        'id_entity' => NULL,
        'entity_type' => NULL,
        'entity_field_change' => NULL,
        'current_value' => NULL,
        'value_on' => NULL,
        'value_off' => NULL,
        'value_label_on' => NULL,
        'value_label_off' => NULL,
        'class_link' => NULL,
        'label' => NULL,
        'ajax_url' => NULL,
      ],
    ],
  ];
}
