<?php

/**
 * @file
 * Main file for Converter Tools.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function converter_tools_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.converter_tools':
      $output = '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Converter Tools is a quick and easy way to perform several automatic conversions. For more information, see the online handbook entry for <a target="_blank" href="@converter_tools">Converter Tools</a>.', ['@converter_tools' => 'https://www.drupal.org/project/converter_tools']) . '</p>';
      $output .= '<h3>' . t('Usage') . '</h3>';
      $output .= '<p>' . t('You only need to access the pages and convert. Look at the link to tools below:') . '</p>';
      return $output;
  }
}
