<?php

/**
 * @file
 * This module provides block integration with Mailchimp Popups.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function mailchimp_popup_block_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.mailchimp_popup_block':
      $filepath = dirname(__FILE__) . '/README.md';
      if (file_exists($filepath)) {
        $readme = file_get_contents($filepath);
      }
      if (!isset($readme)) {
        return NULL;
      }
      else {
        $output = '<pre>' . $readme . '</pre>';
      }
      return $output;
  }
}

/**
 * Implements hook_theme().
 */
function mailchimp_popup_block_theme($existing, $type, $theme, $path) {
  return [
    'mailchimp_popup' =>
      [
        'variables' => [
          'description' => NULL,
          'button_text' => NULL,
          'mailchimp_baseurl' => NULL,
          'mailchimp_uuid' => NULL,
          'mailchimp_lid' => NULL,
        ],
        'template' => 'mailchimp-popup',
      ],
  ];
}
