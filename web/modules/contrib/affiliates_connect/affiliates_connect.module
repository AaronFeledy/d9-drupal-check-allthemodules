<?php

/**
 * @file
 * Contains affiliates_connect.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 *
 * Main module help for the affiliates_connect module.
 */
function affiliates_connect_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {

    case 'affiliates_connect.overview':
      $template_path = drupal_get_path('module', "affiliates_connect") . "/src/templates/help.html.twig";
      $template = file_get_contents($template_path);
      $build = [
        'description' => [
          '#type' => 'inline_template',
          '#template' => $template,
        ],
      ];
      return $build;

    default:
  }

}

/**
 * Implements hook_element_info_alter().
 */
function affiliates_connect_element_info_alter(array &$types) {
  if (isset($types['table'])) {
    $types['table']['#attached']['library'][] = 'affiliates_connect/affiliates-connect';
  }
}
