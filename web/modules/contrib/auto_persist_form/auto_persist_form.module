<?php

/**
 * @file
 * Provides common functionality for auto persist form.
 */

use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_form_alter().
 */
function auto_persist_form_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  if (substr_count($form_id, 'node_')) {
    $form['#attached']['library'][] = 'auto_persist_form/garlicjs';
    $form['#attributes']['data-persist'] = 'garlic';
  }
}
