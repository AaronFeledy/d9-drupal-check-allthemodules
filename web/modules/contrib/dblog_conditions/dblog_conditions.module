/**
 * @file
 * Extends Core DBLog module to allow conditional logging.
 *
 * This module allows to define conditions to restrict the amount of logs
 * sent by Drupal to the database via the DBLog module. This can be used on
 * production environment in combination with the SysLog module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\StringTranslation\TranslatableMarkup;

/**
 * Default for matching all items, except listed.
 */
const DBLOG_CONDITIONS_DEFAULT_INCLUDE = 'all_except_listed';

/**
 * Default for only matching listed items.
 */
const DBLOG_CONDITIONS_DEFAULT_EXCLUDE = 'only_listed';



