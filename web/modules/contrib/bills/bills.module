<?php

/**
 * @file
 * Contains bills.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function bills_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the bills module.
    case 'help.page.bills':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('The bills.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function bills_theme() {
  $theme = [];
  $theme['bills'] = [
    'render element' => 'elements',
    'file' => 'bills.page.inc',
    'template' => 'bills',
  ];
  $theme['bills_content_add_list'] = [
    'render element' => 'content',
    'variables' => ['content' => NULL],
    'file' => 'bills.page.inc',
  ];
  return $theme;
}

/**
* Implements hook_theme_suggestions_HOOK().
*/
function bills_theme_suggestions_bills(array $variables) {
  $suggestions = [];
  $entity = $variables['elements']['#bills'];
  $sanitized_view_mode = strtr($variables['elements']['#view_mode'], '.', '_');

  $suggestions[] = 'bills__' . $sanitized_view_mode;
  $suggestions[] = 'bills__' . $entity->bundle();
  $suggestions[] = 'bills__' . $entity->bundle() . '__' . $sanitized_view_mode;
  $suggestions[] = 'bills__' . $entity->id();
  $suggestions[] = 'bills__' . $entity->id() . '__' . $sanitized_view_mode;
  return $suggestions;
}
