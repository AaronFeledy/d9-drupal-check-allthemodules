use Drupal\Core\Url;
use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Entity\EntityInterface;
use Drupal\Core\Entity\Display\EntityViewDisplayInterface;
use Drupal\Core\Render\Element;


const NODE_TYPE_ASSIGNMENT_QUESTION = 'pe_assignment_question';


/**
 * Implements hook_help().
 */
function pe_assignment_question_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.pe_assignment_question':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('TODO') . '</p>';
      return $output;
  }
}

/**
 * Implements hook_entity_view_display_alter().
 */
function pe_assignment_question_entity_view_display_alter(EntityViewDisplayInterface $display, $context) {
  $account = \Drupal::currentUser();
  if ($context['bundle'] == NODE_TYPE_ASSIGNMENT_QUESTION) {
    if (!$account->hasPermission('view assignment question details')) {
      if ($context['view_mode'] == 'full') {
        foreach ($display->getComponents() as $name => $options) {
          if (!in_array($name, ['body'])) {
            $display->removeComponent($name);
          }
        }
      }
    }
  }
}
