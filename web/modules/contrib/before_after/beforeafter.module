use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function beforeafter_help($route_name, RouteMatchInterface $route_match)
{
    switch ($route_name) {
        case 'help.page.beforeafter':
            $output = '';
            $output .= '<h3>' . t('Before After') . '</h3>';
            $output .= '<p>' . t('Before After Field Formatter will provide a field formatter, so that the images uploaded for an image field would be rendered as a Slider.') . '</p>';
            $output .= '<p>' . t('Visit module page for more details.') . '</p>';
            return $output;
    }
}

