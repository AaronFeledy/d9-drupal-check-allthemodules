<?php

/**
 * @file
 * Contains chatbot.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Entity\ContentEntityInterface;
use Drupal\Core\Field\BaseFieldDefinition;
use Drupal\chatbot\Entity\Chatbot;
/**
 * Implements hook_help().
 */
function chatbot_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the chatbot module.
    case 'help.page.chatbot':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Create and configure chatbots') . '</p>';
      return $output;

    default:
  }
}

/**
 * Set dynamic allowed values for the plugin field.
 *
 * @param \Drupal\Core\Field\BaseFieldDefinition $definition
 *   The field definition.
 * @param \Drupal\Core\Entity\ContentEntityInterface|null $entity
 *   The entity being created if applicable.
 * @param bool $cacheables
 *   Boolean indicating if the results are cacheable.
 *
 * @return array
 *   An array of possible key and value options.
 *
 * @see options_allowed_values()
 */
function chatbot_plugins_allowed_values(BaseFieldDefinition $definition, ContentEntityInterface $entity = NULL, $cacheable) {
  return Chatbot::getAllPluginOptions();
}
