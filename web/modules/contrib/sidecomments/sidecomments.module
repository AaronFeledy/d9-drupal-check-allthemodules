<?php

/**
 * Implements hook_form_alter().
 * @param $form
 * @param \Drupal\Core\Form\FormStateInterface $form_state
 * @param $form_id
 */
function sidecomments_form_alter(&$form, \Drupal\Core\Form\FormStateInterface $form_state, $form_id) {
   $form['sidecomments'] = array(
    '#type' => 'details',
    '#collapsible' => TRUE,
    '#collapsed' => TRUE,
    '#title' => 'SideComments'
  );

  $form['sidecomments']['enable'] = array(
    '#type' => 'checkbox',
    '#title' => 'Enable SideComments on this field.',
    '#default_value' => FALSE,
    '#description' => 'Checking this box will trigger SideComments for this field.'
  );
}