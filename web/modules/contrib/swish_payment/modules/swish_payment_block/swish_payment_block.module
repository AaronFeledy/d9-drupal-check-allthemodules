<?php

/**
 * @file
 * Contains swish_payment_block.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function swish_payment_block_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the swish_payment_block module.
    case 'help.page.swish_payment_block':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Provides a block type that can be used to initiate Swish payments on pages') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function swish_payment_block_theme() {
  return [
    'swish_payment_block' => [
      'template' => 'swish_payment_block',
      'render element' => 'children',
    ],
  ];
}
