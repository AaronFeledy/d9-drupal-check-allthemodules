<?php

/**
 * @file
 * Required hook implementations.
 */

use Drupal\Core\Render\BubbleableMetadata;

/**
 * Implements hook_token_info().
 */
function authorization_code_token_info() {
  return [
    'types' => [
      'authorization_code' => [
        'name' => t('Authorization Code'),
        'description' => t('Tokens related to Authorization Code.'),
        'needs-data' => 'node',
      ],
    ],
    'tokens' => [
      'authorization_code' => [
        'code' => [
          'name' => t("Authorization Code"),
          'description' => t("The generated authorization code."),
        ],
      ],
    ],
  ];
}

/**
 * Implements hook_tokens().
 */
function authorization_code_tokens($type, $tokens, array $data, array $options, BubbleableMetadata $bubbleable_metadata) {
  $replacements = [];

  if ($type == 'authorization_code' && isset($data['authorization_code'])) {
    $replacements[$tokens['code']] = $data['authorization_code'];
  }

  return $replacements;
}
