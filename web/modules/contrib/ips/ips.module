<?php

/**
 * @file
 * Contains ips.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function ips_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the ips module.
    case 'help.page.ips':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('The ips.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_demo_data_info().
 */
function ips_demo_data_info() {
  return [
    [
      'id' => 'ips_csv',
      'source' => [
        'path' => drupal_get_path('module', 'ips') . '/tests/data/ips.csv',
      ],
    ],
  ];
}

/**
 * Implements hook_theme().
 */
function ips_theme() {
  $theme = [];
  $theme['ips'] = [
    'render element' => 'elements',
    'file' => 'ips.page.inc',
    'template' => 'ips',
  ];
  $theme['ips_content_add_list'] = [
    'render element' => 'content',
    'variables' => ['content' => NULL],
    'file' => 'ips.page.inc',
  ];
  return $theme;
}

/**
* Implements hook_theme_suggestions_HOOK().
*/
function ips_theme_suggestions_ips(array $variables) {
  $suggestions = [];
  $entity = $variables['elements']['#ips'];
  $sanitized_view_mode = strtr($variables['elements']['#view_mode'], '.', '_');

  $suggestions[] = 'ips__' . $sanitized_view_mode;
  $suggestions[] = 'ips__' . $entity->bundle();
  $suggestions[] = 'ips__' . $entity->bundle() . '__' . $sanitized_view_mode;
  $suggestions[] = 'ips__' . $entity->id();
  $suggestions[] = 'ips__' . $entity->id() . '__' . $sanitized_view_mode;
  return $suggestions;
}
