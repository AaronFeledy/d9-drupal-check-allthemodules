<?php

/**
 * @file
 * Contains entity_log.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function entity_log_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the entity_log module.
    case 'help.page.entity_log':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Logs selected changes on entities') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function entity_log_theme() {
  return [
    'entity_log' => [
      'render element' => 'children',
    ],
  ];
}

/**
 * Implements hook_entity_update().
 */
function entity_log_entity_update(Drupal\Core\Entity\EntityInterface $entity) {
  //check if entity type and bundle is set for logging
  $fields = \Drupal::service('entity_log')->entitySetForLogging($entity);
  if($fields){
    \Drupal::service('entity_log')->logFields($entity,$fields);
  }
}
