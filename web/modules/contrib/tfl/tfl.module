<?php

/**
 * @file
 * Two factor login module.
 */

 use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function tfl_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.tfl':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t("This module allows you to login with 2 step OTP verification. So you need to create an")
        . t("account in https://2factor.in and copy the api key and save in your tfl configuration.") . '</p>';
      return $output;
  }
}

/**
 * Form alter hook.
 */
function tfl_form_alter(&$form, &$form_state, $form_id) {
  // User login override.
  if ($form_id == 'user_login_form') {
    // Load the real code only when needed.
    module_load_include('inc', 'tfl', 'tfl.admin');
    tfl_user_login_form_alter($form, $form_state);

  }
}
