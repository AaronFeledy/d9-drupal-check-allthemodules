<?php

/**
 * @file
 * Contains menu_megadrop.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Form\FormStateInterface;
use Drupal\Core\Render\Element;

/**
 * Implements hook_form_BASE_FORM_ID_alter().
 */
function menu_megadrop_form_menu_link_content_form_alter(array &$form, FormStateInterface $form_state, $form_id) {
  $menu_link = $form_state->getFormObject()->getEntity();
  $menu_name = $menu_link->menu_name->value;

  $menu_link_options = $menu_link->link->first()->options ?: [];
  $menu_link_megadrop = isset($menu_link_options['megadrop']) ? $menu_link_options['megadrop'] : 'no_megadrop';

  $form['options']['megadrop'] = [
    '#type' => 'entity_autocomplete',
    '#target_type' => 'menu_megadrop',
    '#title' => t('Megadrop'),
    '#default_value' => \Drupal::entityTypeManager()->getStorage('menu_megadrop')->load($menu_link_megadrop),
    '#size' => 80,
  ];

  $form['actions']['submit']['#submit'][] = '_menu_megadrop_menu_link_content_form_submit';
}

/**
 * Submit function for menu link add / edit form.
 */
function _menu_megadrop_menu_link_content_form_submit($form, FormStateInterface $form_state) {
  $menu_link = $form_state->getFormObject()->getEntity();
  $options = ['megadrop' => $form_state->getValue('megadrop')];
  $menu_link_options = $menu_link->link->first()->options;

  $menu_link->link->first()->options = array_merge($menu_link_options, $options);
  $menu_link->save();
}

/**
 * Implements hook_preprocess_HOOK().
 */
function menu_megadrop_preprocess_menu(&$variables) {
  foreach ($variables['items'] as $key => $item) {
    if ($megadrop_id = $item['url']->getOption('megadrop')) {
      $megadrop_entity = \Drupal::entityTypeManager()->getStorage('menu_megadrop')->load($megadrop_id);
      $variables['items'][$key]['megadrop'] = [
        'content' => \Drupal::entityManager()->getViewBuilder('menu_megadrop')->view($megadrop_entity, 'full'),
      ];
    }
  }
}

/**
 * Prepares variables for Megadrop entity templates.
 *
 * Default template: megadrop-entity.html.twig.
 *
 * @param array $variables
 *   An associative array containing:
 *   - elements: An associative array containing the user information and any
 *   - attributes: HTML attributes for the containing element.
 */
function template_preprocess_menu_megadrop(array &$variables) {
  // Helpful $content variable for templates.
  foreach (Element::children($variables['elements']) as $key) {
    $variables['content'][$key] = $variables['elements'][$key];
  }
}

/**
 * Implements hook_theme().
 */
function menu_megadrop_theme() {
  return [
    'menu_megadrop' => [
      'render element' => 'elements',
    ],
  ];
}
