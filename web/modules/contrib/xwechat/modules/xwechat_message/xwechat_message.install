        'length'        => 128,
        'not null'      => true,
        'default'       => '',
      ),
      'data' => array(
        'description'   => 'message data',
        'type'          => 'text',
        'size'          => 'big',
        'serialize'     => true,
      ),
    ),
    'primary key' => array('id'),
    'indexes' => array(
      'wid_id' => array('wid', 'id'),
      'openid_id' => array('openid', 'id'),
    ),  
  );

  return $schema;
}
