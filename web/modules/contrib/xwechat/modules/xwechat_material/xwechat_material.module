use Drupal\Core\Url;
use Pyramid\Component\WeChat\WeChat;
use Pyramid\Component\WeChat\Request;
use Pyramid\Component\WeChat\Response;

/**
 * Implements hook_xwechat_operation().
 */
function xwechat_material_xwechat_operation($links = array(), $config) {
  $links['material'] = array(
    'title' => t('Material'),
    'url' => Url::fromRoute('xwechat.material.list', ['xwechat_config' => $config['wid']]),
    'attributes' => array('target'=>'_blank'),
  );
    
  return $links;
}
