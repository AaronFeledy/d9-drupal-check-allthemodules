<?php

/**
 * @file
 *
 * xwechat_menu
 */

 use Drupal\Core\Url;

/**
 * Implements hook_xwechat_operation().
 */
function xwechat_menu_xwechat_operation($links = array(), $config) {
  $links['menu'] = array(
    'title' => t('Menu'),
    'url' => Url::fromRoute('xwechat.menu.config', ['xwechat_config' => $config['wid']]),
    'attributes' => array('target'=>'_blank'),
  );
    
  return $links;
}
