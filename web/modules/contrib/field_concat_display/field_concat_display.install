<?php

/**
 * @file
 * Functions to remove module variables during uninstall.
 *
 * Functions to find which drupal variables belong to the module.
 */

/**
 * Implements hook_uninstall().
 */
function field_concat_display_uninstall() {

  $vars = variable_get('field_concat_display_var_names', array());

  foreach ($vars as $var) {
    variable_del("field_concat_display_settings_{$var}");
  }

  variable_del('field_concat_display_var_names');
}
