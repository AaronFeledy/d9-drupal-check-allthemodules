<?php

/**
 * @file
 * The redirect deleted entities module.
 */

use Drupal\Core\Entity\EntityInterface;

/**
 * Implements hook_entity_delete().
 */
function redirect_deleted_entities_entity_delete(EntityInterface $entity) {
  /** @var \Drupal\redirect_deleted_entities\RedirectManager $redirect_manager */
  $redirect_manager = \Drupal::service('redirect_deleted_entities.redirect_manager');
  $redirect_manager->createRedirect($entity);
}
