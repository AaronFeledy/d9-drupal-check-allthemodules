<?php

/**
 * If the page is multilingual, the consumer will automatically add the
 * language to REST calls.
 *
 * @param array $variables
 * @return void
 */
function restconsumer_preprocess_html(&$variables)
{
    $variables['#attached']['drupalSettings']['path']['isMultilingual'] = Drupal::languageManager()->isMultilingual();
}
