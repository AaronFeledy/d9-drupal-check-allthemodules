<?php

/**
 * @file
 * Contains trunk8_formatter.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function trunk8_formatter_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the trunk8_formatter module.
    case 'help.page.trunk8_formatter':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Use the Trunk8 JS library to trim text') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function trunk8_formatter_theme() {
  return [
    'trunk8_formatter' => [
      'variables' => [
        'markup' => NULL,
        'numlines' => NULL,
        'fill' => NULL,
      ],
      'template' => 'trunk8-formatter',
    ],
  ];
}
