<?php

/**
 * @file
 * Drupal hooks
 */

/**
 * Implements hook_help().
 */
function minesweeper_help($path, $arg) {
  switch ($path) {
    // Help for the minesweeper menu
    case 'minesweeper':
      return '<p>' . t('On this page you can choose a game-type.') . '</p>';
  }
}

/**
 * Implements hook_theme().
 */
function minesweeper_theme($existing, $type, $theme, $path) {
  return array(
    'minesweeper_game_type' => array(
      'variables' => array('game_type' => NULL),
    ),
  );
}
