<?php

/**
 * @file
 * Contains flexible_google_cse.module.
 */

use Drupal\Core\Form\FormStateInterface;
use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function flexible_google_cse_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the flexible_google_cse module.
    case 'help.page.flexible_google_cse':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('A simple module to integrate Drupal 8 with Google Custom Search.') . '</p>';
      $output .= 'Configure this module on <a href=' . '/admin/config/search/Google_Custom_Search' . '>Configure Flexible Google Custom Search</a>';
      return $output;

    default:
  }
}

/**
 * Implements hook_form_FORM_ID_alter().
 *
 * Hide form_build_id,form_token and form_id.
 *
 * See https://www.drupal.org/node/821932#comment-6017528
 */
function flexible_google_cse_form_flexible_google_cse_search_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  unset($form['form_token']);
  unset($form['form_build_id']);
  unset($form['form_id']);
}
