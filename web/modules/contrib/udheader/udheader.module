<?php

/*
 * @file
 * Drupal Module: Ubuntu Drupal Header
 * Ubuntu Drupal Header displays a customizable block to be used
 * as a header. It cad be set to display specific headers for
 * different node types.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Url;

/**
 * Implements hook_help.
 *
 * @return string A localized string containing the help text.
 *
 * @ingroup base
 */

function udheader_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.udheader':
      $output =
        '<p>' . t('The Ubuntu Drupal Header module allows you to add a custom header to each page. The Ubuntu Drupal Theme has a Header region defined for this purpose. The <a href=":settings_page">settings page</a> allows you to add header definitions.', [':settings_page' => Url::fromRoute('entity.udheader.collection')->toString()]) . '</p>'
      . '<p>' . t('To add a header definition go to the settings page and click the Add Ubuntu Drupal Header button. Fill in the details, which are described below, and click Save.') . '</p>'
      . '<p>' . t('To edit a header definition click "edit" to the right of the definition and make the desired changes, then click Save.') . '</p>'
      . '<p>' . t('To delete a header definition click the arrow next to the "edit" button, which is to the right of the defninition you want to delete. This will reveal a menu with the "Delete" option. Click "Delete" from this menu, and confirm the deletion on the next page.') . '</p>'
      . '<p>' . t('Definition Options:')
        . '<ul>'
          . '<li>' . t('Node Type - The type of node that the header will be applied to. New node types can be genereated for this purpose.') . '</li>'
          . '<li>' . t('Left Image - The image that will appear on the left side of the header.') . '</li>'
          . '<li>' . t('Middle Image - If you pick a tall Left/Right image, you should pick the Tall image here.') . '</li>'
          . '<li>' . t('Middle Text - Text to be displayed in the center of the header.') . '</li>'
          . '<li>' . t('Right Image - The image that will will appear on the right side of the header.') . '</li>'
          . '<li>' . t('Right Text - Text to be displayed in the right side of the header.') . '</li>'
        . '</ul>'
      . '</p>';

      return $output;
  }
}

/**
 * Implements hook_theme().
 */
function udheader_theme($existing, $type, $theme, $path) {
  return [
    'udheader_block' => [
      'variables' => [
        'height' => '0px',
        'left_image' => NULL,
        'center_image' => NULL,
        'right_image' => NULL,
        'center_text' => '',
        'right_text' => '',
      ],
    ],
  ];
}
