<?php

/**
 * @file
 * Contains multisite_solr_search.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function multisite_solr_search_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the multisite_solr_search module.
    case 'help.page.multisite_solr_search':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Helps you in searching across multiple sites using solr.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function multisite_solr_search_theme() {
  return [
    'multisite_solr_search_results' => [
    'template' => 'multisite-solr-search-results',
    ],
  ];
}
