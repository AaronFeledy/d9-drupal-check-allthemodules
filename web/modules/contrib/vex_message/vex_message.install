<?php

/**
 * @file
 * Install, update and uninstall functions for the vex message module.
 */

use Drupal\user\RoleInterface;

/**
 * Implements hook_uninstall().
 */
function vex_message_install() {
  // Set permissions for anonymous user.
  user_role_grant_permissions(RoleInterface::ANONYMOUS_ID, ['view vex message']);
}

/**
 * Implements hook_uninstall().
 */
function vex_message_uninstall() {
  \Drupal::configFactory()->getEditable('vex_message.settings')->delete();
}
