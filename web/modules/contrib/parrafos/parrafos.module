use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function parrafos_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the parrafos module.
    case 'help.page.parrafos':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('a ver si sacamos algo de paragraph') . '</p>';
      return $output;

    default:
  }
}

