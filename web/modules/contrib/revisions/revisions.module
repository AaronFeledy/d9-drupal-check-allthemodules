<?php

/**
 * @file
 * This is the module to create a drop-down menu for the core toolbar.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function revisions_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.revisions':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Provides a list of revisions for all the nodes available in your website. Provides options to revert any node revision to its previous revision , delete any node revision and filter nodes revision by user name and node type from a single page.') . '</p>';
      return $output;
  }
}

