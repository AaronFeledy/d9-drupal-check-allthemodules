<?php

function sms_aliyun_requirements($phase) {
  $requirements = [];

  if (!class_exists('\Flc\Dysms\Client')) {
    $requirements['sms_alidayu_dependencies'] = [
      'title' => t('Aliyun'),
      'description' => t('Aliyun has ument Composer dependencies. Read the <a href="@url">documentation</a> on how to install them.', [
        '@url' => 'https://www.drupal.org/node/2627292',
      ]),
      'severity' => REQUIREMENT_ERROR,
    ];
  }

  return $requirements;
}
