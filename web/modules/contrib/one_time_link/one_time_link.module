<?php

/**
 * @file
 * One time link Module hooks.
 */
function one_time_link_get_user_details($uid) {
  if (empty($uid)) {
    return false;
  }
  if (preg_match('/\b[A-Z0-9._%+-]+@[A-Z0-9.-]+\.[A-Z]{2,4}\b/si', $uid)) {
    $account = user_load_by_mail($uid);
  }
  else {
    $account = user_load_by_name($uid);
  }
  return $account;
}
