<?php

/**
 * @file
 * Contains css_debuger.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function css_debuger_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the css_debuger module.
    case 'help.page.css_debuger':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('A tweet-sized debugger for visualizing your CSS layouts. Outlines every DOM element on your page a random (valid) CSS hex color.<br> By default it is turned OFF, you can turn it ON with ALT + C  you can turn it OFF by doing the same. ALT + C') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_page_attachments().
 */
function css_debuger_page_attachments(array &$page) {
  if (\Drupal::currentUser()->hasPermission('access css_debuger')) {
    $page['#attached']['library'][] = 'css_debuger/debuger-library';
  }
}
