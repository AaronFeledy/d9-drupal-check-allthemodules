<?php

/**
 * @file
 * It contains a function for adding script tag in site header.
 */

/**
 * Implements hook_page_attachments().
 */
function translate_page_attachments(array &$attachments) {
  $configs = \Drupal::config("translate.settings");
  // Get the embed_code of translate.settings config from drupal database.
  $embed_code = $configs->get("embed_code");
  if (isset($embed_code)) {
    // Creating a script object to set for header.
    $script = ['#type' => 'markup', '#markup' => t($embed_code)];
    // Adding script tag in site header.
    $attachments['#attached']['html_head'][] = [$script, 'script'];
  }
}
