<?php

/**
 * @file
 * Contains openimmo.install.
 */

/**
 * Implements hook_install().
 */
function openimmo_install() {
  $queue = \Drupal::queue('openimmo_fetch_tasks', TRUE);
  $queue->createQueue();
}

/**
 * Implements hook_uninstall().
 */
function openimmo_uninstall() {
  \Drupal::state()->delete('openimmo.last_fetch_time');

  $queue = \Drupal::queue('openimmo_fetch_tasks');
  $queue->deleteQueue();
}
