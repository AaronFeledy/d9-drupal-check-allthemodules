use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function ebourgognegdd_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the ebourgognegdd module.
    case 'help.page.ebourgognegdd':
      $output = '';
      $output .= '<h3>' . t("À propos") . '</h3>';
      $output .= '<p>' . t("Permet d'insérer des Guides e-bourgogne.") . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function ebourgognegdd_theme() {
  $theme = [];

  return $theme;
}

/**
 * Implements hook_page_attachments_alter() to be able to pass php var to ckeditor javascript plugin.
 */
function ebourgognegdd_page_attachments_alter(&$page) {
  // $page['#attached']['library'][] = 'ebourgognetf/ebourgognetf';.
  // We retrieve the value of the variable setted in the ConfigForm.
  $config = \Drupal::configFactory()->getEditable('core.site_information');

  // And pass them to "drupalSettings" to be available in javascript.
  $page['#attached']['drupalSettings']['ebourgogne_gdd']['ebou_gdd_bo_api_url'] = $config->get('ebou_gdd_bo_api_url');
  $page['#attached']['drupalSettings']['ebourgogne_gdd']['ebou_gdd_fo_api_url'] = $config->get('ebou_gdd_fo_api_url');
  $page['#attached']['drupalSettings']['ebourgogne_gdd']['organism_id'] = $config->get('ebourgognegdd_organism_id');
  $page['#attached']['drupalSettings']['ebourgogne_gdd']['ebou_api_key'] = $config->get('ebourgognegdd_api_key');
}
