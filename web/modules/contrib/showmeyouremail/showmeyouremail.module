<?php

/**
 * @file
 * Contains showmeyouremail.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Url;

/**
 * Implements hook_help().
 */
function showmeyouremail_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the showmeyouremail module.
    case 'help.page.showmeyouremail':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('A module that displays the user\'s email address on their profile page.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_entity_view().
 */
function showmeyouremail_user_view(array &$build, \Drupal\Core\Entity\EntityInterface $entity, \Drupal\Core\Entity\Display\EntityViewDisplayInterface $display, $view_mode, $langcode) {
  if (\Drupal::currentUser()->hasPermission('view user email addresses on user profiles')) {
    $mail = $build['#user']->{'getEmail'}();
    $element = array(
      '#type' => 'link',
      '#title' => $mail,
      '#url' => Url::fromUri('mailto:' . $mail),
    );
    $build['showmeyouremail'] = array(
      '#type' => 'item',
      '#mail' => $element,
      '#theme' => 'showmeyouremail',
    );
  }
}

/**
 * Implements hook_theme().
 */
function showmeyouremail_theme() {
  $theme = [
    'showmeyouremail' => [
      'variables' => [
        'attributes' => [],
        'mail' => array(
          'render element' => 'link',
        ),
      ],
    ]
  ];

  return $theme;
}
