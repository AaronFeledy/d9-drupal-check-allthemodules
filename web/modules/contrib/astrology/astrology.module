  return [
    'astrology' => [
      'variables' => [
        'formatter' => 'day',
        'signs' => NULL,
        'blank_msg' => NULL,
      ],
    ],
    'astrology-text' => [
      'variables' => [
        'formatter' => 'day',
        'sign_info' => NULL,
        'sign' => [],
        'date_format' => NULL,
        'astrology_text' => [],
        'about_sign_summary' => NULL,
        'post_date' => NULL,
        'weeks' => NULL,
        'for_date' => NULL,
        'date_range_sign' => NULL,
      ],
    ],
    'astrology-sign-text' => [
      'variables' => [
        'sign' => [],
