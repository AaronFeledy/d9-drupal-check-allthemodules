use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function astrology_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.astrology':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('This module creates a default astrology named
      "Zodiac", which consists 12 astrological signs, namely Aries, Taurus,
      Gemini, Cancer, Leo, Virgo, Libra, Scorpio, Sagittarius, Capricorn,
      Aquarius and Pisces.') . '</p>';
      $output .= '<p>' . t('In order to use this module functionality, site
      administrator need to add text for each sign and for each format. It also
      creates a block to display astrological data.
      For more information, see the <a href=":astrology_docs"> online
      documentation for the Astrology module</a>.', [
        ':astrology_docs' =>
        'https://www.drupal.org/docs/8/modules/astrology',
      ]) . '</p>';

      return $output;
  }
}

