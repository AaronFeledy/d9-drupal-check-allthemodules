<?php

/**
 * @file
 * Contains main module hooks.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_theme().
 */
function rwd_menu_theme() {
  return [
    'rwd_menu' => [
      'variables' => ['items' => [], 'css' => TRUE],
      'template' => 'rwd-menu',
      'file' => 'rwd_menu.theme.inc',
    ],
  ];
}

/**
 * Implements hook_help().
 */
function rwd_menu_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.rwd_menu':
      $filepath = dirname(__FILE__) . '/README.txt';
      if (file_exists($filepath)) {
        $readme = file_get_contents($filepath);
        $output = '<pre>' . $readme . '</pre>';

        return $output;
      }
  }
}
