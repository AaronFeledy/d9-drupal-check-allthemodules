use Drupal\Core\Entity\EntityInterface;
use Drupal\yac_referral\ReferralHandlers;

/**
 * Implements hook_ENTITY_TYPE_insert().
 */
function crm_referral_user_insert(EntityInterface $entity) {
  $affiliate = ReferralHandlers::isAffiliate($entity);
  $hasCode = ReferralHandlers::hasReferralCode($entity);
  if ($hasCode && !$entity->hasRole('affiliate')) {
    $entity->addRole('affiliate');
    $entity->save();
  }
}
