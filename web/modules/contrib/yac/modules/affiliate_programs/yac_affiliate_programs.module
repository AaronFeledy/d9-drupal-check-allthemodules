<?php

/**
 * @file
 * Contains yac_affiliate_programs.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function crm_affiliate_programs_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the referral_program module.
    case 'help.page.yac_affiliate_programs':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Add referral programs to your Yac') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function crm_affiliate_programs_theme() {
  return [
    'referral_program' => [
      'render element' => 'children',
    ],
  ];
}
