<?php

/**
 * @file
 * Contains affiliate.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function crm_affiliate_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the affiliate module.
    case 'help.page.affiliate':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Add Affiliate role and other related functionalities') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function crm_affiliate_theme() {
  return [
    'affiliate' => [
      'render element' => 'children',
    ],
  ];
}
