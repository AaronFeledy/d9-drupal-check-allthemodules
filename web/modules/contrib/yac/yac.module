<?php

/**
 * @file
 * Configuration system that lets allowed users to mody the behavior of Yac.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_toolbar_alter().
 */
function crm_toolbar_alter(&$items) {
  $items['administration']['#attached']['library'][] = 'yac/toolbar';
}

/**
 * Implements hook_help().
 */
function crm_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the yac module.
    case 'help.page.yac':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('My Awesome Module') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function crm_theme() {
  return [
    'yac' => [
      'render element' => 'children',
    ],
  ];
}
