<?php

/**
 * @file
 * Hook implementations of commerce_opp module.
 */

/**
 * Implements hook_cron().
 */
function commerce_opp_cron() {
  /** @var \Drupal\commerce_opp\OpenPaymentPlatformServiceInterface $opp_service */
  $opp_service = \Drupal::service('commerce_opp.opp_service');
  $opp_service->processPendingAuthorizations();
  $opp_service->deleteExpiredAuthorizations();
}
