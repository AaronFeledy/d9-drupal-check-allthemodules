<?php

/**
 * @file
 * Contains braintree_api.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function braintree_api_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the braintree_api module.
    case 'help.page.braintree_api':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Enables use of the Braintree API library') . '</p>';
      return $output;

    default:
  }
}
