<?php

/**
 * @file
 * Contains \Drupal\view_password\view_password.install.
 */

/**
 * Implements hook_install().
 */
function view_password_install() {
  // Set default values for config which require dynamic values.
  \Drupal::configFactory()->getEditable('pwd.settings')
    ->set('pwd.form_id_pwd', 'user_login_form')
    ->save();
}

/**
 * Implements hook_uninstall().
 */
function view_password_uninstall() {
  \Drupal::configFactory()->getEditable('pwd.settings')->delete();

}
