<?php

/**
 * @file
 * Contains tumbor_effects_crop.module.
 */

use Drupal\Core\Entity\EntityInterface;
use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function thumbor_effects_crop_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.thumbor_effects_crop':
      $output = '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t("Thumbor Effects Crop allows to change the crop per uploaded image.") . '</p>';
      return $output;
  }
}

/**
 * Implements hook_entity_insert().
 *
 * @see thumbor_effects_crop_entity_update
 */
function thumbor_effects_crop_entity_insert(EntityInterface $entity) {
  /* @var \Drupal\thumbor_effects_crop\ThumborCropManagerInterface $thumbor_crop_manager*/
  $thumbor_crop_manager = \Drupal::service('thumbor_effects_crop.manager');
  $thumbor_crop_manager->onEntityInsert($entity);
}

/**
 * Implements hook_entity_update().
 *
 * Saves the crop for the image file entity about to be saved.
 */
function thumbor_effects_crop_entity_update(EntityInterface $entity) {
  /* @var \Drupal\thumbor_effects_crop\ThumborCropManagerInterface $thumbor_crop_manager*/
  $thumbor_crop_manager = \Drupal::service('thumbor_effects_crop.manager');
  $thumbor_crop_manager->onEntityUpdate($entity);
}

/**
 * Add the image_thumbor_effects_crop widget to the widgets list in IMCE.
 *
 * @param array $widgets
 *   The existing list of widgets to add to.
 */
function thumbor_effects_crop_imce_supported_widgets_alter(array &$widgets) {
  $widgets[] = 'image_thumbor_effects_crop';
}

