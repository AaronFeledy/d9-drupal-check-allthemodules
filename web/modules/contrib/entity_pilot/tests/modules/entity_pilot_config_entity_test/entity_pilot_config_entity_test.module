use Drupal\Core\Entity\EntityTypeInterface;
use Drupal\Core\Field\BaseFieldDefinition;

/**
 * Implements hook_entity_base_field_info().
 */
function entity_pilot_config_entity_test_entity_base_field_info(EntityTypeInterface $entity_type) {
  $fields = [];
  if ($entity_type->id() === 'node') {
    $fields['type2'] = BaseFieldDefinition::create('entity_reference')
      ->setLabel(t('Another node type'))
      ->setDescription(t('Another node type.'))
      ->setSetting('target_type', 'node_type')
      ->setTargetEntityTypeId($entity_type->id())
      ->setRevisionable(TRUE)
      ->setDisplayConfigurable('form', TRUE)
      ->setDisplayConfigurable('view', TRUE);
  }
  return $fields;
}
