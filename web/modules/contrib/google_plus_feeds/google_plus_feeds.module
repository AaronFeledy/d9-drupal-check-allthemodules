<?php

/**
 * @file google_plus_feeds.module
 * Hook implementation and functionality to show Google plus feeds.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Routing\StackedRouteMatchInterface;

// Define the maximum length of the tweet.
const GOOGLE_PLUS_FEEDS_MAX_LENGTH = 80;

/**
 * Implements hook_theme().
 *
 * Registers theme_google_plus_feeds function.
 */
function google_plus_feeds_theme($existing, $type, $theme, $path) {
  return [
    'google_plus_feeds_post' => [
      'variables' => ['google_post' => NULL],
    ],
  ];
}

/**
 * Implements hook_help().
 */
function google_plus_feeds_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.google_plus_feeds':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('This module fetch the Google plus feeds from configured Google account id. It displays the feeds in a block, so that it can be configurable to any region. For more information, see the <a href=":system">online documentation for the System module</a>.', [':system' => 'https://www.drupal.org/project/google_plus_feeds']) . '</p>';
      $output .= '<h3>' . t('Uses') . '</h3>';
      $output .= '<dl>';
      $output .= '<dt>' . t('Managing modules') . '</dt>';
      $output .= '<dd>' . t('Users with appropriate permission can install and uninstall modules from the <a href=":modules">Extend page</a>.');
      $output .= '<dt>' . t('Configuring the module') . '</dt>';
      $output .= '<dd>' . t('Once module enabled / installed from module page or command line, you can go to block layout to configure blocks in region.') . '</dd>';
      $output .= '</dl>';
      return $output;

    case 'google_plus_feeds.admin_settings_form':
      $actions = 'https://console.developers.google.com/project';
      $google_plus_url = 'https://plus.google.com';
      $output = t('To get Google Plus API key, <a href=":link">Click Here </a>', [':link' => $actions]);
      $output .= '<br>';
      $output .= t('To get Google Plus Account Id, go to your google plus account by login on <a href=":google_plus_url"> Google Plus </a>,
        Go to your profile posts, copy the link address of your name hyperlink. This contains your Google Plus Id.
        For eg https://plus.google.com/u/0/XXXXXXXX is mine and in this XXXXXXXX is the account ID.', [':google_plus_url' => $google_plus_url]);

      return $output;
  }
}
