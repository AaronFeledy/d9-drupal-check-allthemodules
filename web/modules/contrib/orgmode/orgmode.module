<?php

/**
 * @file
 * Contains orgmode.module..
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function orgmode_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the orgmode module.
    case 'help.page.orgmode':
      $output = 'The orgmode drupal module is able to import single files, such as articles, and transform it in nodes.';
      $output .= '<h3>' . t('About') . '</h3>';
      return $output;

    default:
  }
}
