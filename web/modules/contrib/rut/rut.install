<?php

/**
 * Implements hook_requirements().
 */
function rut_requirements($phase) {
  $requirements = [];
  if ($phase == 'install') {
    if (!class_exists('\Tifon\Rut\RutUtil')) {
      $requirements['rut_library'] = [
        'description' => t('Rut requires the tifon/rut-php library.'),
        'severity' => REQUIREMENT_ERROR,
      ];
    }
  }

  return $requirements;
}
