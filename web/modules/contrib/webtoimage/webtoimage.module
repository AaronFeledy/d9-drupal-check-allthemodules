<?php

/**
 * @file
 * Drupal module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Url;

/**
 * Implements hook_help().
 */
function webtoimage_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.webtoimage':

      $variables = [
        ':settings' => Url::fromRoute('webtoimage.settings')->toString(),
      ];

      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('The webtoimage module integrate the binary setted in <a href=":settings">Settings</a> and provide a link to print a page to image file.', $variables) . '</p>';

      return $output;
  }
}

/**
 * Implements hook_cron().
 */
function webtoimage_cron() {
  $path = \Drupal::service('file_system')->realpath('public://webtoimage');
  foreach (glob($path . '/*') as $file) {
    unlink($file);
  }

}
