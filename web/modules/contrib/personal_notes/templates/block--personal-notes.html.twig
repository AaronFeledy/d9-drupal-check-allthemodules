{#
/**
 * @file
 * Personal Notes block template.
 *
 * Available variables:
 * - notes: An array containing note titles and text.
 *
 */
#}

<dl id="personalnotes-notes-list">
  {% for title, note in notes %}
    <dd class="personalnotes-note-title">{{ title|slice(0,-5) }}</dd>	{# Last five chars contain serial#  #}
    <dt class="personalnotes-note-note">{{ note }}</dt>
    <svg height="1em" width="100%">													{# Create a seperator line using SVG #}
	   <line x1="0" y1="10" x2="399" y2="10" style="stroke:rgb(51,102,204);stroke-width:3" />
    </svg> 
  {% endfor %}
</dl>
