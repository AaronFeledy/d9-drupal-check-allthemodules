<?php

/**
 * @file
 * Contains patreon_entity.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function patreon_entity_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the patreon_entity module.
    case 'help.page.patreon_entity':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('A bundled entity linked to Patreon') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function patreon_entity_theme() {
  $theme = [];
  $theme['patreon_entity'] = [
    'render element' => 'elements',
    'file' => 'patreon_entity.page.inc',
    'template' => 'patreon_entity',
  ];
  $theme['patreon_entity_content_add_list'] = [
    'render element' => 'content',
    'variables' => ['content' => NULL],
    'file' => 'patreon_entity.page.inc',
  ];
  return $theme;
}

/**
 * Implements hook_theme_suggestions_HOOK().
 */
function patreon_entity_theme_suggestions_patreon_entity(array $variables) {
  $suggestions = [];
  $entity = $variables['elements']['#patreon_entity'];
  $sanitized_view_mode = strtr($variables['elements']['#view_mode'], '.', '_');

  $suggestions[] = 'patreon_entity__' . $sanitized_view_mode;
  $suggestions[] = 'patreon_entity__' . $entity->bundle();
  $suggestions[] = 'patreon_entity__' . $entity->bundle() . '__' . $sanitized_view_mode;
  $suggestions[] = 'patreon_entity__' . $entity->id();
  $suggestions[] = 'patreon_entity__' . $entity->id() . '__' . $sanitized_view_mode;
  return $suggestions;
}
