<?php

/**
 * @file
 * Support for configurable Maintenance Notifications.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use \Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_help().
 */
function maintenance_notifications_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the maintenance_notifications module.
    case 'help.page.maintenance_notifications':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Sends out mails to users when site is set to maintenance mode and set to live.') . '</p>';
      return $output;

    default:
  }
}


/**
 * Implements hook_mail().
 */

function maintenance_notifications_mail($key, &$message, $params) {
  if($key == 'maintenance_notifications_key'){
    $message['from'] = \Drupal::config('system.site')->get('mail');
    $message['subject'] = $params['subject'];
    $message['body'][] = $params['message'];
    $message['headers']['Content-Type'] = 'text/html; charset=UTF-8; format=flowed; delsp=yes';
  }
}
