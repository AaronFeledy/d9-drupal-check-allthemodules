<?php

/**
 * @file
 * Contains ansible.install.
 */

/**
 * Implements hook_requirements().
 */
function ansible_requirements($phase) {
  $requirements = [];
  if ($phase == 'install') {
    if (!class_exists('Asm\Ansible\Ansible')) {
      $requirements['ansible'] = [
        'description' => t('Ansible requires the asm/php-ansible library.'),
        'severity' => REQUIREMENT_ERROR,
      ];
    }
  }
  return $requirements;
}
