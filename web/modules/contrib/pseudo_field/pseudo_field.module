<?php

/**
 * Implements hook_entity_view_alter().
 *
 * Passes entity biew build to pseudo field processor service.
 *
 * @param array $build
 * @param \Drupal\Core\Entity\ContentEntityInterface $context
 */
function pseudo_field_entity_view_alter(&$build, $context) {
  \Drupal::service('pseudo_field.processor')->process($build, $context);
}
