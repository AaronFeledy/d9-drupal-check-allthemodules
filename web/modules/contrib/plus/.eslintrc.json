{
  "extends": "eslint-config-airbnb",
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "Drupal": true,
    "drupalSettings": true,
    "jQuery": true
  },
  "rules": {
    "class-methods-use-this": [0],
    "consistent-return": [0],
    "no-underscore-dangle": [0],
    "max-nested-callbacks": [1, 3],
    "max-len": [0],
    "no-mutable-exports": [0],
    "no-plusplus": [1, {
      "allowForLoopAfterthoughts": true
    }],
    "no-param-reassign": [0],
    "no-prototype-builtins": [0],
    "prefer-destructuring": [0],
    "strict": [0],
    "valid-jsdoc": [1, {
      "prefer": {
        "returns": "return",
        "property": "prop"
      },
      "requireReturn": false
    }],
    "brace-style": ["error", "stroustrup"],
    "no-unused-vars": [1]
  }
}
