<?php

/**
 * @file
 * Selz module
 *
 * Provides a Selz widget formatter for simple text fields. Note that
 * this is just a field formatter for Text fields, not a field. See README.txt
 * for more information.
 */

/**
 * Implements hook_theme().
 */
function selz_theme() {
  return array(
    'selz_output' => array(
      'variables' => array(
        'type' => NULL,
        'position' => NULL,
        'button_color' => NULL,
        'button_color_text' => NULL,
        'header_color_order' => NULL,
        'header_color_order_text' => NULL,
        'button_text' => NULL,
        'logos' => NULL,
        'overlay' => NULL,
        'fixed_width' => NULL,
        'url_value' => NULL,
      ),
      'template' => 'selz-output',
    ),
  );
}
