<?php

/**
 * @file
 * Contains linkit_widget.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function linkit_widget_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the linkit_widget module.
    case 'help.page.linkit_widget':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Adds a widget to replace the core link field with linkit field.') . '</p>';
      return $output;

    default:
  }
}
