<?php

/**
 * @file
 * Hook implementations for commerce worldline.
 */

use Drupal\Core\Field\BaseFieldDefinition;

/**
 * Implements hook_entity_base_field_info().
 */
function commerce_worldline_entity_base_field_info(\Drupal\Core\Entity\EntityTypeInterface $entity_type) {
  // Add our fields to the payment entity.
  if ($entity_type->id() === 'commerce_payment') {
    $fields['sips_response_code'] = BaseFieldDefinition::create('text')
      ->setLabel(t('Response code'))
      ->setDescription(t('SIPS response code.'))
      ->setDefaultValue([]);

    $fields['sips_seal'] = BaseFieldDefinition::create('text')
      ->setLabel(t('SIPS seal'))
      ->setDescription(t('Seal used in the purchase.'))
      ->setDefaultValue([]);;

    return $fields;
  }
}
