<?php

/**
 * @file
 * jquery_view_ticker module help and theme functions.
 */

use Drupal\Core\Routing\RouteMatchInterface;

// Store jquery_view_ticker preprocess theme functions in a separate .inc file.
\Drupal::moduleHandler()->loadInclude('jquery_view_ticker', 'inc', 'jquery_view_ticker.theme');

/**
 * Implements hook_help().
 */
function jquery_view_ticker_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the jquery_view_ticker module.
    case 'help.page.jquery_view_ticker':
      $output = check_markup(file_get_contents(drupal_get_path('module', 'jquery_view_ticker') . '/README.txt'));
      return $output;
  }
}

/**
 * Implements hook_theme().
 */
function jquery_view_ticker_theme($existing, $type, $theme, $path) {
  return array(
    'jquery_view_ticker' => array(
      'file' => 'jquery_view_ticker.theme.inc',
    ),
  );
}
