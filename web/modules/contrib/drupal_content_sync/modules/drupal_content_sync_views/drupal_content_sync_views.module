<?php

/**
 * @file
 * Module file for drupal_content_sync_views.
 */

use Drupal\Core\Entity\EntityInterface;
use Drupal\Core\Entity\FieldableEntityInterface;
use Drupal\Core\Entity\EntityTypeInterface;
use Drupal\Core\Field\BaseFieldDefinition;

/**
 * Implements hook_entity_base_field_info().
 */
function drupal_content_sync_views_entity_base_field_info(EntityTypeInterface $entity_type) {
  $fields = [];

  // Add the dynamic entity reference field to the dcs meta info entity type.
  if ($entity_type->id() === 'dcs_meta_info') {
    $fields['entity'] = BaseFieldDefinition::create('dynamic_entity_reference')
      ->setLabel(t('Entity'))
      ->setDescription(t('Reference to the entity.'))
      ->setCardinality(1)
      ->setReadOnly(TRUE);
  }

  return $fields;
}

/**
 * Implements hook_entity_update().
 */
function drupal_content_sync_views_entity_update(EntityInterface $entity) {
  if ($entity instanceof FieldableEntityInterface) {

    // Set the referenced entity for the meta info entity.
    if ($entity->getEntityTypeId() == 'dcs_meta_info' && is_null($entity->get('entity')->target_id)) {
      $synced_entity = \Drupal::service('entity.repository')->loadEntityByUuid($entity->get('entity_type')->value, $entity->get('entity_uuid')->value);
      $entity->set('entity', $synced_entity);
      $entity->save();
    }
  }
}
