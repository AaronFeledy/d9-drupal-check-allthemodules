<?php

/**
 * @file
 * Module file of chatbro modules.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function chatbro_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the ChatBro module.
    case 'help.page.chatbro':
      $output = '';
      $output .= '<h3>' . t('About ChatBro') . '</h3>';
      $output .= '<p>' . t('Allows us to add a chat to our website, this chat can also be linked to an telegram group') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_page_attachments().
 */
function chatbro_page_attachments(array &$attachments) {
  $config = \Drupal::config('chatbro.settings');
  $chat = $config->get('chatbro_id');
  $attachments['#attached']['library'][] = 'chatbro/chatbro';
  $attachments['#attached']['drupalSettings']['chat'] = $chat;
}
