<?php

/**
 * @file
 * Main module file for Swagger UI Field Formatter.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_theme().
 */
function redoc_field_formatter_theme($existing, $type, $theme, $path) {
  return [
    'redoc_ui_field_item' => [
      'variables' => [
        'field_name' => NULL,
        'delta' => NULL,
        'file_url' => NULL,
      ],
    ],
  ];
}

/**
 * Implements hook_help().
 */
function redoc_field_formatter_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.redoc_field_formatter':
      // $readme = file_get_contents(__DIR__ . '/README.txt');
      $output = '';
      // Add a link to the Drupal.org project.
      $output .= '<p>';
      $output .= t('Visit the <a href=":project_link">project page</a> on Drupal.org for more information.', [
        ':project_link' => 'https://www.drupal.org/project/redoc_field_formatter',
      ]);
      $output .= '</p>';
      return $output;
  }
}
