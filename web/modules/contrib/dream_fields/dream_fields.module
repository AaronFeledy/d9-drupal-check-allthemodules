<?php

/**
 * @file
 * The module file for the dream fields module.
 */

/**
 * Implements hook_theme().
 */
function dream_fields_theme() {
  return [
    'dream_field' => [
      'variables' => [
        'type' => NULL,
        'title' => NULL,
        'description' => '',
        'image' => '',
        'link' => '',
      ],
    ],
  ];
}

/**
 * Implements hook_menu_local_actions_alter().
 */
function dream_fields_menu_local_actions_alter(&$local_actions) {
  foreach ($local_actions as $key => &$local_action) {
    if (substr($local_action['id'], 0, strlen('field_ui.')) === 'field_ui.') {
      $local_action['title'] = t('Add reference');
    }
  }
}
