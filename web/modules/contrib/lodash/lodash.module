<?php

/**
 * Implements hook_js_alter().
 */
function lodash_js_alter(&$js) {
  // Swap out underscore to use lodash
  if (isset($js['core/assets/vendor/underscore/underscore.js'])) {
    $lodash = 'sites/all/libraries/lodash/lodash.js';
    $underscore = 'core/assets/vendor/underscore/underscore.js';
    $js[$underscore]['data'] = $lodash;
    $js[$underscore]['version'] = '_';
    $js[$lodash] = $js[$underscore];
    unset($js[$underscore]);
  }
}
