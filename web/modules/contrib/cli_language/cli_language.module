<?php

/**
 * Implements hook_help().
 */
function cli_language_help($route_name, \Drupal\Core\Routing\RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'cli_language.negotiation_cli_language':
      $output = [
        '#type' => 'html_tag',
        '#tag' => 'p',
        '#attributes' => [],
        '#value' => t('Select the CLI language. If this negotiator is enabled, CLI commands will always use the selected language.')
      ];
      return $output;
  }
}
