<?php

/**
 * @file
 * Contains last_tweets.module..
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function last_tweets_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the last_tweets module.
    case 'help.page.last_tweets':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Last tweets') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function last_tweets_theme() {
  $theme = [
    'tweets_list' => [
      'variables' => [
        'tweets' => [],
        'user_screen_name' => '',
      ],
      'template' => 'tweets-list',
    ],
  ];
  return $theme;
}
