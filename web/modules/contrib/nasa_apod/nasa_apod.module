<?php

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function nasa_apod_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page/nasa_apod':
      return t('
        <h2>NASA Astronomy Picture of the Day (APOD) for Drupal</h2>
        <p>Leverage the NASA API to display the Astronomy Picture of the Day
        as a block on your site!</p>
        <p>You will need an API key, which can be created here:</p>
        <p><a href="https://api.nasa.gov/index.html#apply-for-an-api-key">https://api.nasa.gov/index.html#apply-for-an-api-key</a></p>
      ');
  }
}

/**
 * Implements hook_theme().
 */
function nasa_apod_theme($existing, $type, $theme, $path) {
  return [
    'nasa_apod' => [
      'variables' => [
        'apod_title' => null,
        'date' => null,
        'img' => null,
        'explanation' => null,
        'copyright' => null,
        'error' => FALSE,
      ],
      'template' => 'block--nasa-apod',
    ],
  ];
}
