<?php

/**
 * @file
 * Contains advanced_update.module..
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function advanced_update_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the advanced_update module.
    case 'help.page.advanced_update':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Allow to perform db update up and down without hook_update') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_modules_uninstalled().
 */
function advanced_update_modules_uninstalled($modules) {
  if (in_array('advanced_update', $modules)) {
    \Drupal::state()->delete('advanced_update.update_state');
  }
}
