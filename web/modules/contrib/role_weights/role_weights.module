/**
 * Implements hook_tokens().
 */
function role_weights_tokens($type, $tokens, $data = array(), $options = array()) {
  $url_options = array('absolute' => TRUE);
  if (isset($options['language'])) {
    $url_options['language'] = $options['language'];
    $language_code = $options['language']->language;
  }
  else {
    $language_code = NULL;
  }
  $sanitize = !empty($options['sanitize']);

  $replacements = array();

  if ($type == 'user' && !empty($data['user'])) {
    $account = $data['user'];
    if (array_key_exists('pathauto', $options)) {
      /** @var Drupal\user\Entity\User $account */
      $account = \Drupal\user\Entity\User::load($data['user']->uid);
    }
    $css_pattern = '/[^0-9A-Za-z \-]/';
    foreach ($tokens as $name => $original) {
      switch ($name) {
        case 'lightest-role':
          $lightest_role = role_weights_get_weighted_max($account->getRoles(), 'lightest');
          $replacements[$original] = SafeMarkup::checkPlain($lightest_role);
          break;

        case 'lightest-role-id':
          $lightest_role = role_weights_get_weighted_max($account->getRoles(), 'lightest');
          $replacements[$original] = $lightest_role;
          break;

        case 'lightest-role-class':
          $lightest_role = role_weights_get_weighted_max($account->getRoles(), 'lightest');
          $replacements[$original] = 'role-' . strtolower(str_replace(' ', '-', preg_replace($css_pattern, '', $lightest_role)));
          break;

        case 'heaviest-role':
          $heaviest_role = role_weights_get_weighted_max($account->getRoles(), 'heaviest');
          $replacements[$original] = SafeMarkup::checkPlain($heaviest_role);
          break;

        case 'heaviest-role-id':
          $heaviest_role = role_weights_get_weighted_max($account->getRoles(), 'heaviest');
          $replacements[$original] = $heaviest_role;
          break;

        case 'heaviest-role-class':
          $heaviest_role = role_weights_get_weighted_max($account->getRoles(), 'heaviest');
          $replacements[$original] = 'role-' . strtolower(str_replace(' ', '-', preg_replace($css_pattern, '', $heaviest_role)));
          break;
      }
    }
  }

  return $replacements;
}
