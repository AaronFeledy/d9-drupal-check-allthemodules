<?php

/**
 * @file
 * Main functions of the module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function eway_integration_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.eway_integration':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('This module is implemented using eWAY Rapid 3.1 API. For more information, see the <a href="!documentation">online documentation for the eWAY Rapid 3.1 API</a>.', array('!documentation' => 'https://eway.io/api-v3')) . '</p>';
      $output .= '<h3>' . t('Uses') . '</h3>';
      $output .= '<dl>';
      $output .= '<dt>' . t('Transaction types') . '</dt>';
      $output .= '<dd>' . t('<em>Purchase</em>') . '</dd>';
      $output .= '<dt>' . t('Payment Methods') . '</dt>';
      $output .= '<dd>' . t('<em>ProcessPayment, TokenPayment</em>') . '</dd>';
      $output .= '</dl>';
      return $output;
  }
}
