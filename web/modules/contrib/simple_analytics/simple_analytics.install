/**
 * Implements hook_requirements().
 */
function simple_analytics_requirements($phase) {

  $requirements = [];

  // Check library for status page.
  if ($phase == 'runtime') {
    if (SimpleAnalyticsHelper::checkLibraries(FALSE)) {
      $description = t("The requirement is satisfied");
      $value = t('Chartist-JS Library found');
      $severity = REQUIREMENT_OK;
    }
    else {
      $value = FALSE;
      $severity = REQUIREMENT_WARNING;
      $description = "The Chartist-JS library not found. ";
      $description .= "Please refer to the Simple Analytics help page.";
    }

    $requirements['lib_chartist'] = [
      'title' => t('Simple Analytics library'),
      'description' => $description,
      'value' => $value,
      'severity' => $severity,
      'weight' => 0,
      'settings_data' => '[]',
    ];
  }

  return $requirements;
}

/**
 * Install Default values and empty data (for the archive).
 */
function simple_analytics_install() {

  $con = Database::getConnection();
  $date = strtotime(date("Y-m-d"));

  for ($i = -7; $i < 0; $i++) {
    $date_stt = $date + (86400 * $i);
    $query = $con->merge('simple_analytics_archive')
      ->key(['date' => $date_stt])
      ->fields([
        'date' => $date_stt,
        'visits' => 0,
        'page_view' => 0,
        'mobile' => 0,
        'entry_direct' => 0,
        'bots' => 0,
      ]);
    $query->execute();
  }

  // Set chartist-js if exist.
  SimpleAnalyticsHelper::checkLibraries(TRUE);
}

/**
 * Uninstall config values.
 */
function simple_analytics_uninstall() {
  // Remove Config.
  $config = SimpleAnalyticsHelper::getConfig(TRUE);
  $config->delete();
}

