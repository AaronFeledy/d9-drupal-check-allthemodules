/**
 * Update Simple Analytics Archive database.
 */
function simple_analytics_update_8001() {

  $ret = [];
  $con = Database::getConnection();

  // Remove 'languages' and 'screens' from simple_analytics_archive DB.
  $ret[] = $con->schema()->dropField('simple_analytics_archive', 'languages');
  $ret[] = $con->schema()->dropField('simple_analytics_archive', 'screens');

  // Add 'settings_data' to simple_analytics_archive DB.
  $spec = [
    'type' => 'text',
    'size' => 'medium',
  ];
  $ret[] = $con->schema()->addField('simple_analytics_archive', 'settings_data', $spec);

  return $ret;
}

/**
 * Update Simple Analytics data table and create visit table.
 */
function simple_analytics_update_8002() {

  $ret = [];
  $con = Database::getConnection();

  // Remove HTTP_REFERER field.
  $ret[] = $con->schema()->dropField('simple_analytics_data', 'HTTP_REFERER');

  // Create archive table.
  $schema = simple_analytics_schema();
  $ret[] = $con->schema()->createTable('simple_analytics_visit', $schema['simple_analytics_visit']);

  // Copy data from _data to _visit..
  $signatures = [];
  $query = $con->select('simple_analytics_data', 'd');
  $query->fields('d');

  $result = $query->execute()->fetchAll();
  foreach ($result as $row) {
    if (!isset($signatures[$row->SIGNATURE])) {
      $signatures[$row->SIGNATURE] = 1;
      $con->insert('simple_analytics_visit')
        ->fields((array) $row)
        ->execute();
    }
  }

  // Remove other static fields from data table.
  $fields = [
    'MOBILE',
    'SCREEN',
    'HTTP_USER_AGENT',
    'REMOTE_ADDR',
    'HTTP_HOST',
    'BOT',
  ];
  foreach ($fields as $field) {
    $ret[] = $con->schema()->dropField('simple_analytics_data', $field);
  }

  return $ret;
}

