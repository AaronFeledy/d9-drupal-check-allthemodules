/**
 * Implements hook_page_cron().
 *
 * Archive and clean databases
 *  - Archive yesterday daya
 *  - Delete old datas.
 */
function simple_analytics_cron() {
  SimpleAnalyticsActions::archive();
}

/**
 * Return the client IP address.
 */
function simple_analytics_get_client_ip() {
  return Drupal::request()->getClientIp();
}

/**
 * Return the current user.
 */
function simple_analytics_get_current_user() {
  return Drupal::currentUser();
}

/**
 * Return the current language.
 */
function simple_analytics_get_current_language() {
  return Drupal::languageManager()->getCurrentLanguage();
}

/**
 * Add chartist as template.
 */
function simple_analytics_theme($existing, $type, $theme, $path) {
  return [
    'simple_analytics_chart' => [
      'variables' => [
        'chart_title' => NULL,
        'chart_type' => NULL,
        'chart_id' => NULL,
        'chart_labels' => NULL,
        'chart_series' => NULL,
        'library' => 'simple_analytics/simple_analytics_chart.sa',
      ],
    ],
  ];
}

/**
 * Implements hook_cache_flush().
 */
function simple_analytics_cache_flush() {
  // Update library check.
  SimpleAnalyticsHelper::checkLibraries(TRUE);
}
