<?php

use Drupal\sl_default_content\SLDefaultContentGenerator;

/**
 * Implements hook_install().
 */
function sl_default_content_install() {
  /* install default content generator */
  $contentGenerator = new SLDefaultContentGenerator();
  $contentGenerator->mainGenerator();

  if (\Drupal::moduleHandler()->moduleExists('sl_stats')) {
    $computer = \Drupal::service('sl_stats.computer');
    $computer->sl_stats_reset();
  }
}