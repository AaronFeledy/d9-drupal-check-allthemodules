<?php

/**
 * @file
 * Provides an API to integrate with Omeda.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function omeda_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.omeda':
      return '<p>' . t("The Omeda module provides basic Drupal integration to the Omeda API. It allow syou to connect to the API, automatically store comprehensive brand config in state based on a cron run, and configure basic settings such as whether or not you're in testing mode.") . '</p>';
  }
}

/**
 * Implements hook_cron().
 */
function omeda_cron() {
  $today = date('Y-m-d');
  $last_run_date = \Drupal::state()->get('omeda.last_brand_lookup_date', '');

  if ($today !== $last_run_date) {
    try {
      $brand_lookup = \Drupal::service('omeda')->brandComprehensiveLookup();
      \Drupal::state()->set('omeda.brand_lookup', $brand_lookup);
      \Drupal::state()->set('omeda.last_brand_lookup_date', $today);
    }
    catch (\Exception $e) {
      \Drupal::logger('omeda')->error('Brand comprehensive lookup failed to run on cron');
    }
  }
}
