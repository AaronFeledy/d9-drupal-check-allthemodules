<?php

/**
 * Tests LibreJS module.
 *
 * @group LibreJS
 */
class LibreJsTest extends DrupalWebTestCase {

  /**
   * {@inheritdoc}
   */
  protected $profile = 'testing';

  /**
   * {@inheritdoc}
   */
  public static function getInfo() {
    return array(
      'name' => 'LibreJS',
      'description' => 'Tests for LibreJS module.',
      'group' => 'LibreJS',
    );
  }

  /**
   * {@inheritdoc}
   */
  public function setUp() {
    parent::setUp('librejs');
  }

  /**
   * Tests LibreJS module.
   */
  public function testLibreJs() {
    $admin_user = $this->drupalCreateUser(array('administer site configuration'));
    $this->drupalLogin($admin_user);
    $this->drupalPost('admin/config/development/librejs', array(), t('Submit'));
    $this->assertRaw('The JavaScript code in this page is free software');
    $this->assertNoLink(t('JavaScript license information'));
    $user = $this->drupalCreateUser(array('access jslicense'));
    $this->drupalLogin($user);
    $this->clickLink(t('JavaScript license information'));
    $this->assertUrl('librejs/jslicense');
    $this->assertLink('drupal.js');
    $this->assertLink('GNU-GPL-2.0-or-later');
  }

}
