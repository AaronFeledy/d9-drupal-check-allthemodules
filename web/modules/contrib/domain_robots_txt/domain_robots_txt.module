<?php

/**
 * @file
 * Main domain_robots_txt module file.
 */

use Drupal\Core\Url;
use Drupal\domain\DomainInterface;

/**
 * Implements hook_domain_operations().
 *
 */
function domain_robots_txt_domain_operations(DomainInterface $domain) {
  // Add aliases to the list.
  $operations['domain_robots_txt_settings'] = [
    // TODO: title looks too long. I guess need to update it.
    'title' => t('Robots.txt Configuration for @label', ['@label' => $domain->label()]),
    'url' => Url::fromRoute('domain_robots_txt.robots_txt_settings_form', ['domain' => $domain->id()]),
    'weight' => 102,
  ];
  return $operations;
}
