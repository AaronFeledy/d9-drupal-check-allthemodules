/**
 * Implements hook_install().
 */
function urban_airship_web_push_notifications_uninstall() {
  if ($fid = \Drupal::keyValue('urban_airship_web_push_notifications')->get('sdk_bundle_fid')) {
    File::load($fid)->delete();
  }
  \Drupal::keyValue('urban_airship_web_push_notifications')->deleteAll();
}
