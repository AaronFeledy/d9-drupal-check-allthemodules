<?php

use Drupal\file\Entity\File;

/**
 * Implements hook_schema().
 */
function urban_airship_web_push_notifications_schema() {
  $schema['urban_airship_web_push_notifications'] = [
    'description' => 'Airship Web Notifications History',
    'fields' => [
      'id' => [
        'description' => 'Notification ID',
        'type'        => 'serial',
        'unsigned'    => TRUE,
        'not null'    => TRUE,
      ],
      'nid' => [
        'description' => 'Node ID',
        'type'        => 'int',
        'unsigned'    => TRUE,
        'not null'    => TRUE,
        'default'     => 0,
      ],
      'username' => [
        'description' => 'Username',
        'type'        => 'varchar',
        'length'      => 255,
        'not null'    => TRUE,
        'default'     => '',
      ],
      'notification_title' => [
        'description' => 'Notification Title',
        'type'        => 'varchar',
        'length'      => 255,
        'not null'    => TRUE,
        'default'     => '',
      ],
      'notification_icon' => [
        'description' => 'Notification Icon',
        'type'        => 'varchar',
        'length'      => 255,
        'not null'    => TRUE,
        'default'     => '',
      ],
      'notification_action_url' => [
        'description' => 'Notification Action URL',
        'type'        => 'varchar',
        'length'      => 255,
        'not null'    => TRUE,
        'default'     => '',
      ],
      'notification_text' => [
        'description' => 'Notification Text',
        'type'        => 'text',
