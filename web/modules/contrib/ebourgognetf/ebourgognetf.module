/**
 * Implements hook_page_attachments_alter() to be able to pass php var to ckeditor javascript plugin.
 */
function ebourgognetf_page_attachments_alter(&$page) {
  // $page['#attached']['library'][] = 'ebourgognetf/ebourgognetf';.
  // We retrieve the value of the variable setted in the ConfigForm.
  $config = \Drupal::configFactory()->getEditable('core.site_information');

  // And pass them to "drupalSettings" to be available in javascript.
  $page['#attached']['drupalSettings']['ebourgogne_tf']['liste_tf'] = $config->get('ebourgognetf_teleform');
  $page['#attached']['drupalSettings']['ebourgogne_tf']['ebou_tf_fo_base_url'] = $config->get('ebou_tf_fo_base_url');
}
