<?php

/**
 * @file
 * Update hooks for Healthz.
 */

/**
 * Remove the database_connection plugin from config.
 */
function healthz_update_8001() {
  $config = \Drupal::configFactory()->getEditable('healthz.settings');
  $checks = $config->get('checks');
  unset($checks['database_connection']);
  $config->set('checks', $checks)->save();
}
