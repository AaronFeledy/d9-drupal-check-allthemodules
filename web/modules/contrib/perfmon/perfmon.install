  return $schema;
}

/**
 * Add serial id key to perfmon talbe.
 */
function perfmon_update_8101() {
  $spec = [
    'type' => 'serial',
    'not null' => TRUE,
    'default' => 0,
  ];
  $schema = \Drupal::database()->schema();
  $schema->addField('perfmon', 'id', $spec);
}

/**
 * Update keys of perfmon table.
 */
function perfmon_update_81002() {
  $schema = \Drupal::database()->schema();
  $schema->dropPrimaryKey('perfmon');
  $schema->addPrimaryKey('perfmon', ['id']);
  $schema->addUniqueKey('perfmon', 'testname', ['testname']);
}