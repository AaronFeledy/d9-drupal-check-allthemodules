<?php

/**
 * @file
 * Hook implementations for OAuth 2.0 module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function oauth2_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.oauth2':
      $output = '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('The OAuth2.0 module supplies an <a href="https://tools.ietf.org/html/rfc6749">OAuth 2.0 Authorization</a> provider for web service requests.') . '</p>';
      return $output;
  }
}
