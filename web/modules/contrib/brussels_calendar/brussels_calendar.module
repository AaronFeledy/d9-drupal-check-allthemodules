<?php

/**
 * @file
 * Contains brussels_calendar.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function brussels_calendar_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the brussels_calendar module.
    case 'help.page.brussels_calendar':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Brussels Calendar') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function brussels_calendar_theme() {
  return [
    'brussels_calendar' => [
      'render element' => 'children',
      'variables' => [
    	'events' => '[]',
    	'settings' => '[]',
		'calendar_id'=>'',      
		'javascript_day_function'=>'null',
		'javascript_event_function'=>'null',
		'categories'=>'[]',
      ],
    ],
  ];
}
