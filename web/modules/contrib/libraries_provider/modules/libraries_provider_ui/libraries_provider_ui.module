<?php

/**
 * @file
 * Allows administrators to customize the libraries loaded on the site.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function libraries_provider_ui_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.libraries_provider_ui':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('The Libraries provider UI module provides an interface for managing libraries. A library is a collection of assets, which can be loaded in the frontend of the site</p>');
      $output .= '<h3>' . t('Uses') . '</h3>';
      $output .= '<dl>';
      $output .= '<dt>' . t('Managing libraries') . '</dt>';
      $output .= '<dd>' . t('Users with the <em>Administer libraries</em> permission can edit settings for the custom libraries on the <a href=":library">libraries page</a>.', [
        ':library' => \Drupal::url('entity.library.collection'),
      ]) . '</dd>';
      $output .= '</dl>';
      return $output;
  }
}

/**
 * Implements hook_entity_type_build().
 *
 * Remove when this issue gets into the stable branch.
 * https://www.drupal.org/project/hook_event_dispatcher/issues/3041185
 */
function libraries_provider_ui_entity_type_build(array &$entity_types) {
  /* @var $entity_types \Drupal\Core\Entity\EntityTypeInterface[] */
  $entity_types['library']
    ->setFormClass('add', 'Drupal\libraries_provider_ui\Form\LibraryForm')
    ->setFormClass('edit', 'Drupal\libraries_provider_ui\Form\LibraryForm')
    ->setFormClass('delete', 'Drupal\libraries_provider_ui\Form\LibraryDeleteForm')
    ->setListBuilderClass('Drupal\libraries_provider_ui\LibraryListBuilder')
    ->setLinkTemplate('delete-form', '/admin/structure/libraries/manage/{library}/delete')
    ->setLinkTemplate('edit-form', '/admin/structure/libraries/manage/{library}')
    ->setLinkTemplate('collection', '/admin/structure/libraries')
    ->set('admin_permission', 'administer libraries');
}
