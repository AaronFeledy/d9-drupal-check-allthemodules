<?php

/**
 * Implements hook_page_build().
 */
function dropkick_page_build(&$page) {
  $config = \Drupal::config('dropkick.settings');
  $path = drupal_get_path('module', 'dropkick');
  $lib_path = libraries_get_path('DropKick');

  libraries_load('DropKick');

  if ($config->get('ie8_support')) {
    $page['#attached']['js'][$lib_path . '/plugins/ie8-polyfill.js'] = array();
  }

  if ($config->get('ui_theme') == 'default') {
    $page['#attached']['css'][$lib_path . '/css/dropkick.css'] = array();
  }
  else {
    $page['#attached']['css'][$path . '/css/dropkick-classic.css'] = array();
  }

  $page['#attached']['js'][] = array(
    'data' => array(
      'dropkick' => array(
        'selector' => $config->get('jquery_selector'),
        'mobile_support' => $config->get('mobile_device_support') ? TRUE : FALSE,
      ),
    ),
    'type' => 'setting',
  );

  $page['#attached']['js'][$path . '/js/dropkick.js'] = array();
}

/**
 * Implements hook_libraries_info().
 */
function dropkick_libraries_info() {
  $libraries['DropKick'] = array(
    'name' => 'DropKick Js',
    'vendor url' => 'https://github.com/robdel12/DropKick',
    'download url' => 'https://github.com/Robdel12/DropKick/archive/master.zip',
    'version' => '2.1',
    'files' => array(
      'js' => array('dropkick.js'),
    ),
  );
  return $libraries;
}

/**
 * Returns the path to the DropKick JavaScript file.
 *
 * @return mixed
 *   The path to the JavaScript file or FALSE if no file could be found.
 */
function dropkick_js_path() {
  $path = libraries_get_path('DropKick');

  if (file_exists($path . '/dropkick.js')) {
    return $path . '/dropkick.js';
  }

  return FALSE;
}
