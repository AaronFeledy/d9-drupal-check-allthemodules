<?php

/**
 * @file
 * Contains layout_node_reference.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function layout_node_reference_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the layout_node_reference module.
    case 'help.page.layout_node_reference':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Refer nodes in blocks and implement them in layouts') . '</p>';
      return $output;

    default:
  }
}
