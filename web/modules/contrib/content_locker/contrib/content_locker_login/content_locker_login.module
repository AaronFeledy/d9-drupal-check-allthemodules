use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function content_locker_login_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.content_locker_login':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t("Sign in plugin. Implements a block which locks content for non-authorised users. Block contains 'Log in' and 'Register' buttons.") . '</p>';
      return $output;
  }
}
