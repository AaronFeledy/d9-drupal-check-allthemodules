use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function content_locker_consent_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.content_locker_consent':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t("Consent plugin. Implements a block, which can be unlocked by consent with an agreement or statement. Block contains 'Yes' and 'No' buttons.") . '</p>';
      return $output;
  }
}
