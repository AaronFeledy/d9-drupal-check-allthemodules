<?php
/**
 * @file
 * Basic module file for the module's hooks.
 */

/**
 * Implement hook_entity_display_alter().
 */
function language_display_entity_type_alter(array &$entity_types) {
  /** @var $entity_types \Drupal\Core\Entity\EntityTypeInterface[] */
  // Set the view builder class for nodes to an alternate implementation of the
  // Drupal\node\Entity\NodeViewBuilder.
  $class = 'Drupal\language_display\LanguageDisplayNodeViewBuilder';
  $entity_types['node']->setViewBuilderClass($class);
}
