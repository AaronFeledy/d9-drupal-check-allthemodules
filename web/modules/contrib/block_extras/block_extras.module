<?php

/**
 * @file
 * Contains block_extras.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\block_content\Entity\BlockContent;

/**
 * Implements hook_help().
 */
function block_extras_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the block_extras module.
    case 'help.page.block_extras':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Provides extra functionality for blocks.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_form_alter().
 */
function block_extras_form_alter(&$form, $form_state, $form_id) {
  if (isset($form['id']['#default_value'])) {
    $block_default_value = $form['id']['#default_value'];
    switch ($form_id) {
      case 'block_form':
        // Generate an "edit block content" link to the relevant custom block.
        if (isset($form['id']['#default_value'])) {
          $block_default_value = $form['id']['#default_value'];
          $config = \Drupal::configFactory()->get('block.block.' . $block_default_value);
          if (isset($config)) {
            $data = $config->get('settings');
            $block_plugin_id = $data['id'];
            $block_plugin_id_split = explode(':', $block_plugin_id);
            if (isset($block_plugin_id_split[1])) {
              $block_uuid = $block_plugin_id_split[1];
              $block_query = \Drupal::database()->query('SELECT id FROM block_content WHERE uuid=:block_uuid', [':block_uuid' => $block_uuid])
                ->fetchCol('id');
              if (isset($block_query[0])) {
                $block_id = $block_query[0];
                if (isset($block_id)) {
                  $current_path = \Drupal::service('path.current')->getPath();
                  if ($current_path) {
                    $form['block_extras'] = [
                      '#type' => 'fieldset',
                      '#title' => 'Block Extras'
                    ];
                    $form['block_extras']['block_edit_link'] = [
                      '#markup' => '<a href="/block/' . $block_id . '?destination=' . $current_path . '">Edit this block content</a>',
                    ];
                    // Generate a preview of the block.
                    $block = BlockContent::load($block_id);
                    $render = \Drupal::entityTypeManager()->getViewBuilder('block_content')->view($block);
                    $form['block_extras']['block_preview'] = [
                      '#type' => 'fieldset',
                      '#title' => 'Block preview'
                    ];
                    $form['block_extras']['block_preview']['preview'] = $render;
                  }
                }
              }
            }
          }
        }
        break;
    }
  }
}
