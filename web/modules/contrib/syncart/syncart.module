<?php

/**
 * @file
 * Contains syncart.module.
 */

use Drupal\syncart\Hook\Theme;
use Drupal\syncart\Hook\SyncartPreprocessPage;
use Drupal\syncart\Hook\PreprocessPageAttachments;
use Drupal\syncart\Hook\PreprocessCommerceProduct;
use Drupal\syncart\Hook\FormCommerceCheckoutFlowMultistepDefaultAlter;
use Drupal\syncart\Hook\CommerceOrderReceiptmailAlter;
use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_theme().
 */
function syncart_theme($existing, $type, $theme, $path) {
  return Theme::hook();
}

/**
 * Implements hook_preprocess_page().
 */
function syncart_preprocess_page(&$variables) {
  SyncartPreprocessPage::hook($variables);
}

/**
 * Implements hook_page_attachments().
 */
function syncart_page_attachments(array &$page) {
  PreprocessPageAttachments::hook($page);
}

/**
 * Implements hook_preprocess_commerce_product().
 */
function syncart_preprocess(&$variables, $hook) {
  if ($hook == 'commerce_product') {
    PreprocessCommerceProduct::hook($variables);
  }
}

/**
 * Implements hook_form_FORM_ID_alter().
 */
function syncart_form_commerce_checkout_flow_multistep_default_alter(&$form, FormStateInterface $form_state, $form_id) {
  FormCommerceCheckoutFlowMultistepDefaultAlter::hook($form, $form_state);
}
