<?php

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function media_entity_download_filter_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the media_entity_download_filter_field module.
    case 'help.page.media_entity_download_filter':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Linkit filter to link to Media Entities in the ckeditor.') . '</p>';
      $label = t('Link media direct to download url');
      $filterOverviewUrl = Url::fromRoute('filter.admin_overview')->toString();
      $output .= '<p>' . t('To enable this feature, go to a <a href="@url">Text Filter</a> and enable the filter "@label".', ['@url' => $filterOverviewUrl, '@label' => $label]) . '</p>';

      return $output;

    default:
  }
}
