<?php

/**
 * @file
 * Contains centreon_status.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function centreon_status_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the centreon_status module.
    case 'help.page.centreon_status':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Show service status') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function centreon_status_page_attachments(array &$attachments) {
  $attachments['#attached']['library'][] = 'centreon_status/centreon_status';
}
