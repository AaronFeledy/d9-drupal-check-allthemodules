<?php
/**
 * @file
 * "Mapbox GL" adds integration for Mapbox GL JS.
 */

/**
 * Get all Mapbox GL map definitions.
 *
 * @param string $map
 */
function mapbox_gl_map_get_info($map = NULL) {
  $map_info = Drupal::moduleHandler()->invokeAll('mapbox_gl_map_info');

  // Let other modules alter the map info.
  Drupal::moduleHandler()->alter('mapbox_gl_map_info', $map_info);

  Drupal::cache()->set('mapbox_gl_map_info', $map_info);
  
  if (empty($map)) {
    return $map_info;
  }
  elseif (isset($map_info[$map])) {
    return $map_info[$map];
  }
}
