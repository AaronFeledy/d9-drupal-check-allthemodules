<?php

/**
 * @file
 * Contains easy_google_analytics_counter.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Field\BaseFieldDefinition;
use Drupal\Core\Entity\EntityTypeInterface;

/**
 * Implements hook_help().
 */
function easy_google_analytics_counter_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the easy_google_analytics_counter module.
    case 'help.page.easy_google_analytics_counter':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('This is the easy analytics counter module.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_cron().
 */
function easy_google_analytics_counter_cron() {
  $cron_mode = \Drupal::service('config.factory')->get('easy_google_analytics_counter.admin')->get('independent_cron');
  if (empty($cron_mode)) {
    _easy_google_analytics_counter_independent_cron();
  }
}

/**
 * Prepare page views data from Google Analytics.
 */
function _easy_google_analytics_counter_independent_cron() {
  \Drupal::service('easy_google_analytics_counter.connection')->request();
}

/**
 * Implements hook_entity_base_field_info().
 */
function easy_google_analytics_counter_entity_base_field_info(EntityTypeInterface $entity_type) {
  if ($entity_type->id() === 'node') {
    // Add a property just to user.
    $fields = [];
    $fields['page_views'] = BaseFieldDefinition::create('integer')
      ->setLabel(t('Page views'))
      ->setDescription(t('The google analytics page views of node.'));

    return $fields;
  }
}
