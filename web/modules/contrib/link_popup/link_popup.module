<?php

/**
 * @file
 * Contains link_popup.module..
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Symfony\Component\Validator\Constraints\Null;

/**
 * Implements hook_help().
 */
function link_popup_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the link_popup module.
    case 'help.page.link_popup':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('This module will provide the popup field formatter for field type link.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function link_popup_theme($existing, $type, $theme, $path) {
  return array(
    'link_popup_formatter' => array(
      'variables' => array(
        'attributes' => NULL,
        'link_text' => NULL,
        'link_url' => NULL,
        'width' => NULL,
      ),
      'path' => $path . '/templates',
      'template' => 'link-popup-formatter',
    ),
  );
}