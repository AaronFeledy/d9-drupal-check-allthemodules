<?php

/**
 * @file
 * Contains url_alias_permissions.module.
 */
use Drupal\Core\Form\FormStateInterface;
use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function url_alias_permissions_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the Field Permissions module.
    case 'help.page.url_alias_permissions':
      return '<p>' . t('Grant access to users to edit and create path aliases for each content type.') . '</p>';
  }
}

/**
 * Implements hook_form_BASE_FORM_ID_alter() for node_form().
 *
 * Check if they have access to set the path for the content type.
 */
function url_alias_permissions_form_node_form_alter(&$form, FormStateInterface $form_state) {
  $form_object = $form_state->getFormObject();
  /** @var \Drupal\Core\Session\AccountInterface $account */
  $user = \Drupal::currentUser();
  $node_type = $form_object->getEntity()->bundle();
  $form['path_settings']['#access'] = $user->hasPermission('edit ' . $node_type . ' URL alias');
  $form['path']['#access'] = $user->hasPermission('edit ' . $node_type . ' URL alias');
  $form['path']['widget'][0]['#access'] = $user->hasPermission('edit ' . $node_type . ' URL alias');
}
