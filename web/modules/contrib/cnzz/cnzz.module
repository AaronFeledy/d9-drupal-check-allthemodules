<?php

/**
 * @file
 * This module adds CNZZ statistics service to your site.
 */

use Drupal\Core\Url;
use Drupal\Core\Link;

/**
 * Helper function to get render link.
 */
function cnzz_get_render_link() {
  $uri_cnzz = Url::fromUri('http://www.cnzz.com');
  $link_cnzz = Link::fromTextAndUrl('CNZZ', $uri_cnzz);
  $render_cnzz =  $link_cnzz->toRenderable();
  $render_cnzz['#attributes'] = array('target' => '_blank');

  return $render_cnzz;
}