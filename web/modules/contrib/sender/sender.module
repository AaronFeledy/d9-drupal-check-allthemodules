<?php

/**
 * @file
 * Other hook implementations and global functions.
 */

require_once __DIR__ . '/includes/sender.token.inc';
require_once __DIR__ . '/includes/sender.theme.inc';

/**
 * Implements hook_mail().
 */
function sender_mail($key, &$message, $params) {
  // Handles emails sent by the email method plugin.
  if ($key == 'sender_email') {
    // Send emails in HTML format.
    $message['headers']['Content-Type'] = 'text/html; charset=UTF-8; format=flowed';

    // Prepares subject and body.
    $message['subject'] = $params['subject'];
    $message['body'][] = $params['body'];
  }
}
