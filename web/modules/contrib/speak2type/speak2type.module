<?php

/**
 * @file
 * Contains speak2type module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function speak2type_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the ckwebspeech module.
    case 'help.page.speak2type':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('This is simple plugin for CKEditor 4, adding the ability to type into the editor using speech.') . '</p>';
      return $output;

    default:
  }
}
