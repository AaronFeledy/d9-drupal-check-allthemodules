<?php

/**
 * @file
 * Eboks intergation module.
 */

define('EBOKS_FILE_PREFIX', 'netsshare_');
define('EBOKS_RECEIVER_TYPES', serialize(['CPR' => 'CPR', 'CVR' => 'CVR']));

/**
 * Implements hook_mail().
 *
 * Captures the outgoing mail and sets appropriate message body and headers.
 */
function eboks_mail($key, &$message, $params) {
  if (isset($params['headers'])) {
    $message['headers'] = array_merge($message['headers'], $params['headers']);
  }

  $message['from'] = $params['from'];
  $message['subject'] = $params['subject'];
  $message['body'][] = $params['body'];

  // Add attachment when available.
  if (isset($params['attachment'])) {
    $message['params']['attachments'][] = $params['attachment'];
  }
}
