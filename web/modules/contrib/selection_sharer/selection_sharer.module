<?php

/**
 * @file
 * Contains selection_sharer.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function selection_sharer_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the selection_sharer module.
    case 'help.page.selection_sharer':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Medium like popover menu to share on Twitter or by email any text selected on the page.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_page_attachments().
 */
function selection_sharer_page_attachments(array &$page) {
  $config = \Drupal::service('config.factory')->get('selection_sharer.config');
  $jquery_selectors = $config->get('jquery_selectors');
  if (empty(trim($jquery_selectors))) {
    $jquery_selectors = implode("\n", [
      'div',
      'h1',
      'h2',
      'h3',
      'h4',
      'h5',
      'h6',
      'p',
    ]);
  }
  // Split and clean selectors.
  $dirtySelectors = explode("\n", $jquery_selectors);
  $selectors = [];
  foreach ($dirtySelectors as $selector) {
    if (!empty(trim($selector))) {
      $selectors[] = trim($selector);
    }
  }
  $page['#attached']['drupalSettings']['selection_sharer']['jquery_selectors'] = $selectors;
  $page['#attached']['library'][] = 'selection_sharer/selection-shared';
}
