<?php

/**
 * @file
 * A spin field using the Field Types API.
 */

use Drupal\Component\Utility\SafeMarkup;
use Drupal\Core\Routing\CurrentRouteMatch;

/**
 * Implements hook_help().
 */
function spin_help($route_name, CurrentRouteMatch $route_match) {
  switch ($route_name) {
    case 'help.page.spin':
      $txt = file_get_contents(drupal_get_path('module', 'spin') . '/README.md');
      return str_replace("\n", "\n<br />", SafeMarkup::checkPlain($txt));
  }
  return '';
}

/**
 * Implements hook_theme().
 */
function spin_theme() {
  return [
    'spin_slideshow' => [
      'template'  => 'spin-slideshow',
      'variables' => [
        'data' => NULL,
      ],
    ],
  ];
}
