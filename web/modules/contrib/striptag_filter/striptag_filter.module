<?php

/**
 * @file
 * Contains striptag_filter.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function striptag_filter_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the striptag_filter module.
    case 'help.page.striptag_filter':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Text filter for stripping specific HTML tags from text output') . '</p>';
      $output .= '<p>' . t('Useful if you want to use a full html format but limit one or more specific tags.') . '</p>';
      $output .= '<p><em>' . t('This should not be used as XSS protection, use core filter html for this. Only trusted roles should be able to use this filter.') . '</em></p>';
      return $output;

    default:
  }
}
