<?php

/**
 * @file
 * Contains hangouts.module.
 */

/**
 * Implements hook_theme().
 */
function hangouts_theme() {
  $config = \Drupal::config('hangouts.settings');
  return [
    'hangouts' => [
      'variables' => [
        'hangouts_gid' => '',
        'hangouts_size' => '',
        'hangouts_lnk_classes' => ['hangouts-blk__link'],
        'hangouts_img_classes' => ['hangouts-blk__image'],
        'hangouts_href_basis' => $config->get('link_href_basis'),
        'hangouts_icon_src_prefix' => $config->get('icon_src_prefix'),
        'hangouts_icon_src_suffix' => $config->get('icon_src_suffix'),
      ],
    ],
  ];
}
