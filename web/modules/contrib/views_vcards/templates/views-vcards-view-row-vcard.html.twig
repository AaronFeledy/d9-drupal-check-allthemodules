{#
/**
 * @file
 * Default theme implementation to print individual vCards.
 *
 * Available variables:
 *   - first_name
 *   - middle_name
 *   - last_name
 *   - full_name
 *  -  title
 *   - email
 *   - email2
 *   - email3
 *   - photo
 *   - home_address
 *   - home_city
 *   - home_state
 *   - home_zip
 *   - home_country
 *   - home_phone
 *   - home_cellphone
 *   - home_website
 *   - work_title
 *   - work_company
 *   - work_address
 *   - work_city
 *   - work_state
 *   - work_zip
 *   - work_fax
 *   - work_website
 *
 * @ingroup themeable
 */
#}
{% autoescape false %}
BEGIN:VCARD
VERSION:4.0
N;CHARSET=utf-8:{{ last_name }};{{ first_name }};{{ middle_name }};{{ title }};
FN;CHARSET=utf-8:{{ full_name }}
ADR;INTL;PARCEL;WORK;CHARSET=utf-8:;;{{ work_address }};{{ work_city }};{{ work_state }};{{ work_zip }};{{ work_country }}
ADR;DOM;PARCEL;HOME;CHARSET=utf-8:;;{{ home_address }};{{ home_city }};{{ home_state }};{{ home_zip }};{{ home_country }}
EMAIL;INTERNET:{{ email }}
EMAIL;INTERNET:{{ email2 }}
EMAIL;INTERNET:{{ email3 }}
ORG;CHARSET=utf-8:{{ work_company }}
TEL;WORK:{{ work_phone }}
TEL;FAX;WORK:{{ work_fax }}
TEL;CELL:{{ home_cellphone }}
TEL;HOME:{{ home_phone }}
TITLE;CHARSET=utf-8:{{ work_title }}
URL;WORK:{{ work_website }}
URL:{{ home_website }}{{ photo }}
END:VCARD
{% endautoescape %}
