<?php
use Drupal\Core\Database\Database;

/**
 * @file
 * Contains install and update functions for Chat Channels.
 */

/**
 * Change the "name" field length to 255.
 */
function chat_channels_update_8001() {
  $field_settings = [
    'type' => 'varchar',
    'length' => '255',
    'not null' => FALSE,
  ];
  Database::getConnection()->schema()->changeField('chat_channel', 'name', 'name', $field_settings, $keys_new = array());
}