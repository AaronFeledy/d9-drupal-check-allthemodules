<?php

/**
 * @file
 * Contains mmenu_simple.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function mmenu_simple_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the mmenu_simple module.
    case 'help.page.mmenu_simple':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Simple jQuery.mmenu lib integration.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 *
 */
function mmenu_simple_theme() {
  return [
    'mmenu_template' => [
      'variables' => [
        'items' => NULL,
      ],
      'template' => 'mmenu-simple',
    ],
  ];
}