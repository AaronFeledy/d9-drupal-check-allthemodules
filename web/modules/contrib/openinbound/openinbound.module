<?php

define('OPENINBOUND_VERSION', '8.1.5');
//include_once('src/Controller/OI.php');

function openinbound_page_attachments(array &$page) {
    $config = \Drupal::config('openinbound.settings');
    $script = 'https://api.openinbound.com/tracker.js?tracking_id='.$config->get('settings.openinbound_tracking_id');

    $page['#attached']['drupalSettings']['openinbound'] = [
        'tracking_id' => $config->get('settings.openinbound_tracking_id')
    ];
}

/**
 * Implements hook_preprocess_html()
 */
function openinbound_preprocess_html(&$variables) {

    $config = \Drupal::config('openinbound.settings');
    if ($config->get('settings.openinbound_tracking_id') != '') {
        $variables['#attached']['library'][] = 'openinbound/openinbound';
    };
}