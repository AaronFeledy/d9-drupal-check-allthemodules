<?php

/**
 * @file
 * Primary module hooks for Quadruple Field module.
 */

use Drupal\Core\Entity\EntityInterface;

/**
 * Implements hook_theme().
 */
function quadruple_field_theme() {
  $templates = [
    'item',
    'subfield',
    'definition_list',
    'accordion',
    'tabs',
  ];
  $items = [];
  foreach ($templates as $template) {
    $items['quadruple_field_' . $template] = ['render element' => 'elements'];
  }
  return $items;
}

/**
 * Prepares variables for quadruple-field-item template.
 */
function template_preprocess_quadruple_field_item(&$vars) {
  $vars['settings'] = $vars['elements']['#settings'];
  $vars['item']['first'] = $vars['elements']['#item']->first;
  $vars['item']['second'] = $vars['elements']['#item']->second;
	$vars['item']['third'] = $vars['elements']['#item']->third;
  $vars['item']['fourth'] = $vars['elements']['#item']->fourth;
}

/**
 * Prepares variables for quadruple-field-item template.
 */
function template_preprocess_quadruple_field_subfield(&$vars) {
  $elements = &$vars['elements'];
  $vars['index'] = $index = $elements['#index'];
  $vars['prefix'] = $elements['#settings'][$index]['prefix'];
  $vars['value'] = $elements['#subfield'];
  $vars['suffix'] = $elements['#settings'][$index]['suffix'];
}

/**
 * Prepares variables for quadruple-field-definition-list template.
 */
function template_preprocess_quadruple_field_definition_list(&$vars) {
  $vars['settings'] = $vars['elements']['#settings'];
  $vars['items'] = $vars['elements']['#items'];
}

/**
 * Prepares variables for quadruple-field-accordion template.
 */
function template_preprocess_quadruple_field_accordion(&$vars) {
  $vars['settings'] = $vars['elements']['#settings'];
  $vars['items'] = $vars['elements']['#items'];
}

/**
 * Prepares variables for quadruple-field-definition-tabs template.
 */
function template_preprocess_quadruple_field_tabs(&$vars) {
  $vars['settings'] = $vars['elements']['#settings'];
  $vars['items'] = $vars['elements']['#items'];
}

/**
 * Implements hook_ENTITY_TYPE_update().
 */
function quadruple_field_field_storage_config_update(EntityInterface $entity) {

  /* @var \Drupal\field\Entity\FieldStorageConfig  $entity */
  if ($entity->getType() == 'quadruple_field') {
    $settings = $entity->getSettings();
    $original_settings = $entity->original->getSettings();

    $first_type_is_changed = $settings['storage']['first']['type'] != $original_settings['storage']['first']['type'];
    $second_type_is_changed = $settings['storage']['second']['type'] != $original_settings['storage']['second']['type'];
    $third_type_is_changed = $settings['storage']['third']['type'] != $original_settings['storage']['third']['type'];
    $fourth_type_is_changed = $settings['storage']['fourth']['type'] != $original_settings['storage']['fourth']['type'];

    if ($first_type_is_changed || $second_type_is_changed || $third_type_is_changed || $fourth_type_is_changed) {
      drupal_set_message(t('Since storage type has been changed you need to verify configuration of related widget on manage form display page.'), 'warning');
    }
  }

}

/**
 * Implements hook_validation_constraint_alter().
 */
function quadruple_field_validation_constraint_alter(array &$definitions) {
  // This constraint is required to test empty boolean values.
  $definitions['NotEqualTo']['class'] = '\Symfony\Component\Validator\Constraints\NotEqualTo';
}
