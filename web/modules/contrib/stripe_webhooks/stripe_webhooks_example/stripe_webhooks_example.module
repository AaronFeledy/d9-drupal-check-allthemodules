<?php

/**
 * @file
 * Code for the Stripe Webhooks Example module.
 */

/**
 * Implements hook_mail().
 */
function stripe_webhooks_example_mail($key, &$message, $params) {
  $options = array(
    'langcode' => $message['langcode'],
  );

  switch ($key) {
    case 'stripe_webhooks_example_subscription_event':
      $message['from'] = \Drupal::config('system.site')->get('mail');
      $message['subject'] = t('Stripe notification!', [], $options);
      $message['body'][] = $params['message'];
      break;
  }
}