<?php

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function block_theme_sync_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the block_theme_sync module.
    case 'help.page.block_theme_sync':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Block Theme Sync enables synchronization of blocks between a source theme and a destination theme. Add and edit configuration on the <a href=":theme_mappings">theme mappings page</a>. A theme mapping includes a mapping of source to destination regions.', array(':theme_mappings' => \Drupal::url('entity.theme_mapping.collection'))) . '</p>';
      $output .= '<p>' . t('When a theme mapping is in place, any change to block configuration in the source theme will be applied as well to the destination theme.') . '</p>';
      $output .= '<p>' . t('Say for example that there\'s a theme mapping with Bartik selected as the source theme and Mytheme as the destination theme. Whenever a block is added to Bartik, a corresponding block will be added to Mytheme and assigned to a selected theme region.') . '</p>';

      $output .= '<h3>' . t('Uses') . '</h3>';
      $output .= '<p>' . t('A site based off a distribution may use a custom theme. By default, any block updates received from the distribution will be limited to the distribution\'s theme.') . '</p>';

      $output .= '<p>' . t('Block Theme Sync is designed to enable sites to receive block configuration updates from the distribution.') . '</p>';

      return $output;

    case 'entity.theme_mapping.collection':
      $output = '<p>' . t('Theme mappings control how blocks are synchronized between a source theme and a destination theme. To create a new theme mapping, use the <em>Add theme mapping</em> button.') . '</p>';
      return $output;

  }
}
