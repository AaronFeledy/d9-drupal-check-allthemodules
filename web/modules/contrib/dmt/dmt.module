<?php

/**
 * @file
 * Contains dmt.module.
 */

/**
 * Implements hook_help().
 */
function dmt_help($route_name, Drupal\Core\Routing\RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the dmt module.
    case 'help.page.dmt':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Better usage trends for Drupal modules.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function dmt_theme() {
  return [
    'module' => [
      'render element' => 'elements',
    ],
  ];
}

/**
 * Prepares variables for Module templates.
 *
 * Default template: module.html.twig.
 *
 * @param array $variables
 *   An associative array containing:
 *   - elements: An associative array containing the user information and any
 *   - attributes: HTML attributes for the containing element.
 */
function template_preprocess_module(array &$variables) {
  // Fetch Module Entity Object.
  $module = $variables['elements']['#module'];

  // Helpful $content variable for templates.
  foreach (\Drupal\Core\Render\Element::children($variables['elements']) as $key) {
    $variables['content'][$key] = $variables['elements'][$key];
  }
  $variables['#attached']['library'][] =  'dmt/react.reactjs';
}

