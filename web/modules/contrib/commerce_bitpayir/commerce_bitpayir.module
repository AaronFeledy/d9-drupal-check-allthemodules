<?php

/**
 * @file
 * Contains commerce_bitpayir.module..
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function bitpay_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the commerce_bitpayir module.
    case 'help.page.commerce_bitpayir':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Iranian Bitpay Gateway for Drupal commerce 2.') . '</p>';
      return $output;

    default:
  }
}
