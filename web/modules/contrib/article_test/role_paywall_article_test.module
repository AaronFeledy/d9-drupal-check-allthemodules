<?php

/**
 * @file
 * Hook alters for article test feature.
 */

use Drupal\Core\Routing\CurrentRouteMatch;

/**
 * Implements hook_help().
 */
function role_paywall_article_test_help($route_name, CurrentRouteMatch $route_match) {
  switch ($route_name) {
    // Main module help for the role_paywall module.
    case 'help.page.role_paywall_article_test':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Introduces a 1-article-test feature for role paywall.') . '</p>';
      return $output;
  }
}

/**
 * Implements hook_paywall_barrier_alter().
 */
function role_paywall_article_test_paywall_barrier_alter(&$barrier) {
  $user = \Drupal::currentUser();
  $article_test_manager = \Drupal::service('role_paywall_article_test.manager');
  if ($user->isAnonymous() || $article_test_manager->hasUserAccessToNextTest($user)) {
    $render_barrier = $article_test_manager->renderBarrier();
    $barrier = \Drupal::service('renderer')->renderRoot($render_barrier);
    return;
  }

  // @todo inform that no more article tests are available if is login and no
  // test available
}
