<?php

/**
 * @file
 * Contains auto_alter_translate.module.
 */

use Drupal\Core\Url;

/**
 * Implements hook_modules_installed().
 */
function auto_alter_translate_modules_installed($modules) {
  if (in_array('auto_alter_translate', $modules)) {
    drupal_set_message(t('Microsoft Azure API key and Endpoint URL is not set and it is required for the module to work. Please set it up at the <a href=":settings">Image Automatic Alternative Text Translation settings page</a>.', [
      ':settings' => Url::fromRoute('auto_alter_translate.settings_form')->toString(),
    ]));
  }
}
