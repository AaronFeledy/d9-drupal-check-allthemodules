<?php

/**
 * @file
 * Contains gopay.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function gopay_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the gopay module.
    case 'help.page.gopay':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Module for GoPay') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function gopay_theme($existing, $type, $theme, $path) {
  return [
    'gopay_link' => [
      'path' => drupal_get_path('module', 'gopay') . '/templates',
      'variables' => [
        'gopay_url' => NULL,
        'link_text' => NULL,
      ],
    ],
    'gopay_inline_form' => [
      'path' => drupal_get_path('module', 'gopay') . '/templates',
      'variables' => [
        'gopay_url' => NULL,
        'link_text' => NULL,
        'embed_js' => NULL,
      ],
    ],
  ];

}
