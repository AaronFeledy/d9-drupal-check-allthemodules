<?php

/**
 * @file
 * Install functions for the chatwee module.
 */

/**
 * Implements hook_schema().
 */
function chatwee_schema() {
	$schema['chatwee_users_data'] = array(
		'fields' => array(
			'user_id' => array(
				'type' => 'int',
				'not null' => TRUE
			),
			'chatwee_id' => array(
				'type' => 'varchar',
				'length' => '255',
				'not null' => TRUE
			)
		),
		'primary key' => array('user_id'),
	);
	return $schema;
}
