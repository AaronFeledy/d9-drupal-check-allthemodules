use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function outvoice_help($route_name, RouteMatchInterface $route_match) {

  switch ($route_name) {
    case 'help.page.outvoice':
      $output = '<h3>' . t('OutVoice Help') . '</h3>';
      $output .= '<p>' . t('To use OutVoice, an account is required on the <a href=":platform">OutVoice Platform</a>.', [':platform' => 'https://outvoice.com']) . '</p>';
      $output .= '<p>' . t('This module has no functionality of its own. It adds a class to help you connect with the OutVoice API. The OutVoice UI module provides basic functionality to add OutVoice payment options to nodes.') . '</p>';
      return $output;
  }

}
