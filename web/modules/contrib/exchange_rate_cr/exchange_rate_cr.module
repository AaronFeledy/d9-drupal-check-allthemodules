<?php

/**
 * @file
 * Contains exchange_rate_cr.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function exchange_rate_cr_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the exchange_rate_cr module.
    case 'help.page.exchange_rate_cr':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Exchange rate between CRC and USD') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function exchange_rate_cr_theme() {
  return [
    'exchange_rate_cr' => [
      'render element' => 'children',
    ],
  ];
}
