<?php

/**
 * @file
 * Contact_storage_options_email_recipient module.
 */

/**
 * Implements hook_entity_type_alter().
 */
function contact_storage_options_email_recipient_entity_type_alter(array &$entity_types) {
  $handler_classes = $entity_types['contact_form']->getHandlerClasses();
  $handler_classes['form']['add'] = 'Drupal\contact_storage_options_email_recipient\Form\ContactFormEditForm';
  $handler_classes['form']['edit'] = 'Drupal\contact_storage_options_email_recipient\Form\ContactFormEditForm';
  $entity_types['contact_form']->setHandlerClass('form', $handler_classes['form']);
}
