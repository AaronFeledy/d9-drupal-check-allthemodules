<?php

/**
 * @file
 * Weibo Widget module hooks.
 */

/**
 * Implements hook_theme().
 */
function weibo_widget_theme($existing, $type, $theme, $path) {
  return [
    'weibo_like' => [
      'variables' => [
        'wbml' => NULL,
      ],
    ],
    'weibo_follow' => [
      'variables' => [
        'wbml' => NULL,
      ],
    ],
  ];
}

/**
 * Implements template_preprocess_html().
 */
function weibo_widget_preprocess_html(&$variables) {
  // Add to HTML tag a Weibo attribute.
  $variables['html_attributes']['xmlns:wb'] = "http://open.weibo.com/wb";
}
