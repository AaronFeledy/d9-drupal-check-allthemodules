<?php

/**
* Implementation of hook_uninstall().
*/
function select_remix_uninstall() {
  $types = _content_type_info();

  foreach ($types['content types'] as $content_type => $info) {
	  foreach ($info['fields'] as $field_name => $field_data) {
      if ($field_data['widget']['type'] == 'optionwidgets_select') {
        variable_del('select_remix_'. $content_type .'_'. $field_name); 
      }
	  }
  }
}
