<?php

/**
 * @file
 * This module provide users a quick glance over the site information.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function siteinfo_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.siteinfo':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Siteinfo module helps in displaying site related information such as basic & advance information about site, Drupal, PHP, Database, etc all in a single page. This module extends Drupal to provide brief information about website.') . '</p>';
      return $output;
  }
}
