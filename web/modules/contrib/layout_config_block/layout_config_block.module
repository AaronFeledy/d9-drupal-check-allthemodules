<?php

/**
 * @file
 * Contains layout_config_block.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function layout_config_block_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the layout_config_block module.
    case 'help.page.layout_config_block':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Allows the creating of blocks that aggregate blocks based on layout') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function layout_config_block_theme() {
  return [
    'layout_config_block' => [
      'render element' => 'children',
    ],
  ];
}
