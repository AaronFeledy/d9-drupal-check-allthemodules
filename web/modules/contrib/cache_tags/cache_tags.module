<?php

/**
 * Functions for cache_tags
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function cache_tags_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.cache_tags':
      $output = '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('The cache tags modules outputs configurable Cache Tags') . '</p>';
      $output .= '<dl>';
      $output .= '<h3>' . t('Uses') . '</h3>';
      $output .= '<dd>' . t('To use Cache tags, just activate the module, and 
                  you site should have cache tags in the header of the site. 
                  This module does not invalidate cache tags, to do that you need 
                  something like <a href=:purge>Purge  module</a> and a purger.',
                  [':purge' => 'https://drupal.org/project/purge']) . '</dd>';
      $output .= '</dl>';
      return $output;
  }
}
