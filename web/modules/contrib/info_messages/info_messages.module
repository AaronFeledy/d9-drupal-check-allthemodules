<?php

/**
 * @file
 * Contains info_messages.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function info_messages_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the info_messages module.
    case 'help.page.info_messages':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('A simple message info.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function info_messages_theme() {
  return [
    'info_messages' => [
      'render element' => 'children',
    ],
  ];
}

/**
 * Implements hook_page_attachments().
 */
function info_messages_page_attachments(array &$attachments) {
  $attachments['#attached']['library'][] = 'info_messages/info-messages';
}
