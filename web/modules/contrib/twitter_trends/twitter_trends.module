<?php

/**
 * @file
 * Contains twitter_trends.module..
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function twitter_trends_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the twitter_trends module.
    case 'help.page.twitter_trends':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t("Twitter Trends Based on User\'s Location") . '</p>';
      return $output;

    default:
  }
}

/**
 * Theme hook.
 */
function twitter_trends_theme($existing, $type, $theme, $path) {
  return [
    'twitter_trends' => [
      'variables' => [
        'trends' => NULL,
      ],
    ],
  ];
}
