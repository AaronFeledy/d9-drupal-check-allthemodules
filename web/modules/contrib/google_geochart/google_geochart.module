<?php

/**
 * @file
 * Contains google_geochart.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function google_geochart_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the google_geochart module.
    case 'help.page.google_geochart':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('This module provides the Goole Geochart integration, https://developers.google.com/chart/interactive/docs/gallery/geochart') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function google_geochart_theme() {
  return [
    'google_geochart' => [
      'render element' => 'children',
      '#attached' => [
        'library' => [
          'google_geochart/google_geochart',
        ],
      ],
    ],
  ];
}
