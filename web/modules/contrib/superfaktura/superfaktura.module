<?php

/**
 * @file
 * Functions for the superfaktura module.
 */

use Drupal\Core\Entity\EntityTypeInterface;
use Drupal\Core\Field\BaseFieldDefinition;

/**
 * Implements hook_entity_base_field_info().
 */
function superfaktura_entity_base_field_info(EntityTypeInterface $entity_type) {
  if ($entity_type->id() == 'commerce_order') {
    $fields = [];
    $fields['superfaktura_invoice_id'] = BaseFieldDefinition::create('string')
      ->setLabel('Superfaktura Invoice ID')
      ->setDescription('Field contains Superfaktura Invoice ID')
      ->setCardinality(1)
      ->setDisplayConfigurable('form', TRUE)
      ->setDisplayConfigurable('view', TRUE);

    return $fields;
  }
}
