use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function field_collection_template_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.field_collection_template':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Outputs field collection items from formatter template.') . '</p>';
      return ['#markup' => $output];
  }
}

/**
 * Implements hook_theme().
 */
function field_collection_template_theme() {
  $theme = [
    'field_collection_template_formatter' => [
      'variables' => [
        'item' => NULL,
        'content' => NULL,
        'index' => NULL,
        'entity' => NULL,
      ],
    ],
  ];
  return $theme;
}

/**
