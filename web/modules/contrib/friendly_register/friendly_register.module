<?php

/**
 * @file
 * Adds the required js/css for checking user existence.
 */

/**
 * Implements hook_form_FORM_ID_alter().
 */
function friendly_register_form_user_register_form_alter(&$form, &$form_state, $form_id) {
  $path = drupal_get_path('module', 'friendly_register');

  $form['#attached']['js'] = array(
    'data' => $path . '/js/friendly_register.js',
    'type' => 'file',
    'weight' => 0,
  );

  $form['#attached']['css'] = array(
    'css' => $path . '/css/friendly_register.css',
  );
}
