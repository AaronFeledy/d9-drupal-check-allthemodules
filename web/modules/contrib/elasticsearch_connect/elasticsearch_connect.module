<?php

/**
 * @file
 * Provides a number of utility and helper to access/index Drupal entities.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Entity\EntityInterface;

/**
 * Implements hook_hook_info().
 */
function elasticsearch_connect_hook_info() {
  $hooks = array(
      'elasticsearch_connect_index_alter',
      'elasticsearch_connect_map_alter',
  );
  return array_fill_keys($hooks, array('group' => 'elasticsearch_connect'));
}

/**
 * Implements hook_help().
 */
function elasticsearch_connect_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.elasticsearch_connect':      
      return t('
        <h2>Elasticsearch connect.</h2>
        <h3>Instructions</h3>
        <p>Unpack in the <em>modules</em> folder (currently in the root of your Drupal 8 installation) and enable in <strong>/admin/modules</strong>.</p>
        <h3>Attention</h3>
        <p>Please report bugs and suggestions</p>
      ');
  }
}

/**
 * Implements hook_entity_insert().
 */
function elasticsearch_connect_entity_insert(EntityInterface $entity) {
  \Drupal::service('elasticsearch_connect.index_manager')->updateEntityIndex($entity, 'insert');
}

/**
 * Implements hook_entity_update().
 */
function elasticsearch_connect_entity_update(EntityInterface $entity) {
  \Drupal::service('elasticsearch_connect.index_manager')->updateEntityIndex($entity, 'update');
}

/**
 * Implements hook_entity_delete().
 */
function elasticsearch_connect_entity_delete(EntityInterface $entity) {
  \Drupal::service('elasticsearch_connect.index_manager')->deleteEntityIndex($entity);
}
