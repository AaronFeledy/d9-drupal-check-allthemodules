<?php

/**
 * @file
 * Provides configurable blocks displaying a link content scraped from another source.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function scrpr_block_help($route_name, RouteMatchInterface $route_match) {
  $help_text = '';
  switch ($route_name) {
    case 'help.page.scrpr_block':
      $help_text = '<p>' . t('Provides configurable blocks with a link. The link text is scraped from the URL (selected by CSS selector).') . '</p>';
      return $help_text;
  }
}
