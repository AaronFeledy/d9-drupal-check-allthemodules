<?php

/**
 * @file
 * Contains druminate_sso.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Url;
use Drupal\Core\Form\FormState;

/**
 * Implements hook_help().
 */
function druminate_sso_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the druminate_sso module.
    case 'help.page.druminate_sso':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Covio&#039;s Luminate Online Master-SSO implemented in Drupal.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_form_FORM_ID_alter().
 *
 * Modify the user login form.
 */
function druminate_sso_form_user_login_form_alter(&$form, FormState $form_state) {
  $config = Drupal::config('druminate_sso.settings');

  // Add cache tags from config.
  $form['#cache']['tags'] = array_merge($form['#cache']['tags'], $config->getCacheTags());

  // Add cache contexts from config.
  $form['#cache']['contexts'] = array_merge($form['#cache']['contexts'], $config->getCacheContexts());

  // Add a link to login via LO on the user login form.
  $enabled = $config->get('login_link_enabled');
  if ($enabled) {
    $url = new Url('druminate_sso.luminate_login_form', [], [
      'attributes' => [
        'class' => ['druminate-sso-login-link'],
      ],
    ]);

    $form['druminate_sso_login_link'] = [
      '#type' => 'link',
      '#url' => $url,
      '#title' => $config->get('login_link_label'),
      '#weight' => -1,
    ];
  }
}
