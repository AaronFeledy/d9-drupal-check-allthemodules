use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function cura_help($route_name, RouteMatchInterface $route_match)
{
  switch ($route_name) {
    case 'help.page.cura':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('The Cura Childcare Suite ... For more information, see the <a href=":documentation">online documentation</a>.', [
        ':documentation' => 'https://www.drupal.org/documentation/modules/cura'
      ]) . '</p>';
      $output .= '<h3>' . t('Modules') . '</h3>';
      $output .= '<dl>';
      $output .= '<dt>' . t('Admissions') . '</dt>';
      $output .= '<dd>' . t('See the <a href=":actions">Admissions page</a>.', [
        ':actions' => \Drupal::url('entity.action.collection')
      ]) . '</dd>';
      $output .= '<dt>' . t('Attendance') . '</dt>';
      $output .= '<dd>' . t('See the <a href=":actions">Attendance page</a>.', [
        ':actions' => \Drupal::url('entity.action.collection')
      ]) . '</dd>';
      $output .= '</dl>';
      return $output;
  }
}

/**
 * Implements hook_form_FORM_ID_alter().
 */
function cura_form_node_child_form_alter(&$form, \Drupal\Core\Form\FormStateInterface $form_state, $form_id) {
  $form['#title'] = 'Firstname Lastname';
  \Drupal::messenger()->addMessage(t('Testing.'));
}

/**
 * Implements hook_entity_presave().
 */
function cura_entity_presave(Drupal\Core\Entity\EntityInterface $entity) {
  switch ($entity->bundle()) {
    case 'child':
      // Setting the title with the name of the child.
      $name = $entity->get('firstname')->value . ' ' . $entity->get('lastname')->value;
      $entity->setTitle($name);
      break;
  }
}