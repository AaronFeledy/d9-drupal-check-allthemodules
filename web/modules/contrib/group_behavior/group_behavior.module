<?php

/**
 * @file
 * Primary module hooks for Group Behavior module.
 */

use Drupal\group_behavior\EntityHooks;
use Drupal\group_behavior\FormHooks;

/**
 * Implements hook_form_FORM_ID_alter() for group_content_type_edit_form.
 */
function group_behavior_form_group_content_type_edit_form_alter(&$form, \Drupal\Core\Form\FormStateInterface $form_state, $form_id) {
  FormHooks::alterGroupContentTypeEditForm($form, $form_state, $form_id);
}

/**
 * Implements hook_entity_insert().
 */
function group_behavior_entity_insert(Drupal\Core\Entity\EntityInterface $entity) {
  EntityHooks::insert($entity);
}

/**
 * Implements hook_entity_update().
 */
function group_behavior_entity_update(Drupal\Core\Entity\EntityInterface $entity) {
  EntityHooks::update($entity);
}

/**
 * Implements hook_entity_delete().
 */
function group_behavior_entity_delete(Drupal\Core\Entity\EntityInterface $entity) {
  EntityHooks::delete($entity);
}

/**
 * Implements hook_module_implements_alter().
 */
function group_behavior_module_implements_alter(&$implementations, $hook) {
  if ($hook == 'entity_delete') {
    // @see \Drupal\group_behavior\EntityHooks::delete
    unset($implementations['group']);
  }
}
