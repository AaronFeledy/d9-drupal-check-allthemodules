<?php

/**
 * @file
 * Contains flyout_menu.module.
 */

/**
 * Implements hook_theme().
 */
function flyout_menu_theme($existing, $type, $theme, $path) {
  return [
    'flyout_menu_toggle' => [
      'template' => 'flyout-menu-toggle',
      'variables' => [],
    ],
    'flyout_menu' => [
      'template' => 'flyout-menu',
      'variables' => [
        'menu_name' => NULL,
        'items' => [],
        'attributes' => [],
      ],
    ],
  ];
}

/**
 * Implements hook_preprocess_html().
 */
function flyout_menu_preprocess_html(&$variables) {
  $position = \Drupal::config('flyout_menu.settings')->get('position');

  $variables['attributes']['class'][] = 'flyout-menu';
  $variables['attributes']['class'][] = 'flyout-menu-' . $position;
}

/**
 * Implements hook_preprocess_block().
 */
function flyout_menu_preprocess_block(&$variables) {
  if ($variables['plugin_id'] == 'flyout_menu_toggle') {
    $variables['attributes']['class'][] = 'flyout-menu-toggle-block';

    unset($variables['title_suffix']['contextual_links']);
  }
  elseif ($variables['plugin_id'] == 'flyout_menu') {
    $variables['attributes']['class'][] = 'flyout-menu-block';
  }
}
