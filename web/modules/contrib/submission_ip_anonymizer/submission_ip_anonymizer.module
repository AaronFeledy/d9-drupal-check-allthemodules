<?php

/**
 * @file
 * Contains submission_ip_anonymizer.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

use \Drupal\submission_ip_anonymizer\ListBuilder\SubmissionIpAnonymizerListBuilder;
use Drupal\webform\WebformSubmissionInterface;
/**
 * Implements hook_help().
 */
function submission_ip_anonymizer_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the submission_ip_anonymizer module.
    case 'help.page.submission_ip_anonymizer':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Anonymize Submission ip addresses') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_entity_type_alter().
 */
function submission_ip_anonymizer_entity_type_alter(array &$entity_types) {
  /* @var $entity_types \Drupal\Core\Entity\EntityTypeInterface[] */
  $entity_types['webform_submission']->setListBuilderClass(SubmissionIpAnonymizerListBuilder::class);
}

/**
 * Implements hook_entity_type_presave().
 *
 * Generate unique user ID based on ip address for new submissions.
 */
function submission_ip_anonymizer_webform_submission_presave(WebformSubmissionInterface $webform_submission) {
  $helper = Drupal::service('submission_ip_anonymizer.hash_generator_service');
  $webform_submission->remote_addr->value = $helper->generateHash($webform_submission->remote_addr->value);
}
