/**
 * Implements hook_config_schema_info_alter().
 *
 * Inspired by config_translation_config_schema_info_alter().
 */
function configelement_config_schema_info_alter(&$definitions) {
  $formElement = [
    'label' => 'textfield',
    'string' => 'textfield',
    'text' => 'textarea',
    'date_format' => 'textfield',
    'text_format' => 'textfield',
    'plural_label' => 'textfield',
    'boolean' => 'checkbox',
    'integer' => 'number',
    'float' => 'number',
  ];

  foreach ($definitions as $type => &$definition) {
    if (!isset($definition['configelement_form_element'])) {
      if (isset($formElement[$type])) {
        $definition['configelement_form_element'] = $formElement[$type];
      }
    }
  }
}
