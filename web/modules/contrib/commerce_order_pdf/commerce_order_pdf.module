<?php

/**
 * @file
 * Contains commerce_order_pdf.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function commerce_order_pdf_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the commerce_order_pdf module.
    case 'help.page.commerce_pdf':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('This module provides the facility to print the invoice in pdf format.') . '</p>';
      $output .= '<h3>' . t('Uses') . '</h3>';
      $output .= '<p>' . t(' For now, this module is providing a link as  www.example.com/commerce/order/{commerce_order_id}/pdf. To print the invoice you can use this link. You have to pass your order id in the url in place of {commerce_order_id}. ') . '</p>';

      return $output;

    default:
  }
}
