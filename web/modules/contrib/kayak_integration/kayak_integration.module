use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function kayak_integration_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the Kayak Integration module.
    case 'help.page.kayak_integration':
      $output = '';
      $output .= '<h3>' . t('About Kayak Integration') . '</h3>';
      $output .= '<p>' . t('Add a block with kayak widget.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
