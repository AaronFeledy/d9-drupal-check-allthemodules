/**
 * Implements hook_help().
 */
function vk_community_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.vk_community':

      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Its a simple block display widget from vk api. More info in https://www.drupal.org/project/vk_community') . '</p>';

      return $output;
  }
}

/**
 * Implements hook_theme().
 */
function vk_community_theme($existing, $type, $theme, $path) {

  $items['block_vk_community'] = [
    'variables' => [
      'title' => NULL,
      'group_id' => NULL,
      'layout' => NULL,
      'width' => NULL,
      'height' => NULL,
      'bg_color' => NULL,
      'text_color' => NULL,
      'button_color' => NULL,
    ],
  ];
  return $items;
}
