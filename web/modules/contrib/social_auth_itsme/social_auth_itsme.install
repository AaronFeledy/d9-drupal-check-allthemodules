<?php

/**
 * @file
 * Social_auth_itsme install file.
 */

use Drupal\social_auth\Controller\SocialAuthController;

/**
 * Implements hook_install().
 */
function social_auth_itsme_install() {
  SocialAuthController::setLoginButtonSettings('social_auth_itsme', 'social_auth_itsme.redirect_to_itsme', 'img/itsme_logo.svg');
}

/**
 * Implements hook_uninstall().
 */
function social_auth_itsme_uninstall() {
  SocialAuthController::deleteLoginButtonSettings('social_auth_itsme');
}
