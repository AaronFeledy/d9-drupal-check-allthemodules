<?php

/**
 * @file
 * Taggd Module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function taggd_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the readremaining module.
    case 'help.page.taggd':
      $output = file_get_contents(drupal_get_path('module', 'taggd') . '/README.md');
      return '<pre>' . $output . '</pre>';

    break;
    default:
  }
}

/**
 * Implements template_preprocess_image_widget().
 */
function taggd_preprocess_image_widget(&$variables) {
  $element = $variables['element'];

  if (isset($element['taggd_image_data']) && !empty($element['preview'])) {
    // Add class to widget wrapper.
    $variables['attributes']['class'][] = 'taggd-image';
    if (!empty($element['#files'])) {
      $fids = array_keys($element['#files']);
      // Add fid as attribute to image wrapper.
      $variables['attributes']['data-taggd'] = reset($fids);
    }
  }

}
