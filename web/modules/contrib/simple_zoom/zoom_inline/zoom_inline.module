<?php

/**
 * @file
 * Contains zoom_inline.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_help().
 */
function zoom_inline_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the zoom_inline module.
    case 'help.page.zoom_inline':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Adds zoom feature to inline images') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function zoom_inline_theme() {
  return [
    'zoom_inline' => [
      'render element' => 'children',
    ],
  ];
}

/**
 * Implements hook_form_FORMID_alter().
 */
function zoom_inline_form_editor_image_dialog_alter(&$form, FormStateInterface $form_state, $form_id) {
  $form['attributes']['data-action'] = [
    '#title' => t('Data action attribute'),
    '#type' => 'hidden',
    '#value' => 'zoom',
  ];
}

/**
 * Implements hook_preprocess_page().
 */
function zoom_inline_preprocess_page(&$variables) {
  $variables['#attached']['library'][] = 'simple_zoom/zoom';
}
