<?php

/**
 * @file
 * Contains discord_widget.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function discord_widget_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the discord_widget module.
    case 'help.page.discord_widget':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Provides a block to integrate the Discord chat with Drupal.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function discord_widget_theme() {
  return [
    'discord_widget' => [
      'variables' => [
        'server_id' => 0,
        'color_theme' => 'dark',
        'width' => 350,
        'height' => 500,
      ],
    ],
  ];
}

/**
 * Implements hook_preprocess_HOOK().
 */
function discord_widget_preprocess_discord_widget(array &$variables) {
  $variables['content'] = [
    '#type' => 'html_tag',
    '#tag' => 'iframe',
    '#attributes' => [
      'src' => "https://discordapp.com/widget?id=${variables['server_id']}&theme=${variables['color_theme']}",
      'width' => $variables['width'],
      'height' => $variables['height'],
      'allowtransparency' => "true",
      'frameborder' => "0",
    ],
  ];
}