    'description' => 'The table that set a template for per node.',
    'fields' => array(
      'cid' => array(
        'description' => 'The unique id this setting.',
        'type'     => 'serial',
        'unsigned' => TRUE,
        'not null' => TRUE,
      ),
      'nid' => array(
        'description' => 'The nid of the node.',
        'type'     => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default'  => 0,
      ),
      'template' => array(
        'description' => 'The template name of the node.',
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE,
        'default' => '',
      ),
    ),
    'primary key' => array('cid'),
  );

  $schema['node_template_alias'] = array(
    'description' => 'The table that set a template for per node.',
    'fields' => array(
      'aid' => array(
        'description' => 'The unique id this alias.',
        'type'     => 'serial',
        'unsigned' => TRUE,
