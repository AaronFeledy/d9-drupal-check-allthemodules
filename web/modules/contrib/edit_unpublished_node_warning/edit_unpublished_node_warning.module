<?php

/**
 * @file
 * Contains edit_unpublished_node_warning.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\node\NodeInterface;

/**
 * Implements hook_help().
 */
function edit_unpublished_node_warning_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the edit_unpublished_node_warning module.
    case 'help.page.edit_unpublished_node_warning':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Shows a warning message to users when they are viewing or editing an unpublished node.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_preprocess_HOOK().
 *
 * Adds a message to users when viewing or editing a node that is unpublished.
 */
function edit_unpublished_node_warning_preprocess_page(&$variables) {
  // Attempt to load the node from the route parameter.
  $node = \Drupal::routeMatch()->getParameter('node');

  if ($node instanceof NodeInterface && !$node->isPublished()) {
    \Drupal::messenger()
      ->addWarning(t('This content is unpublished. This will not be visible to site users until it is published.'));
  }
}
