<?php

/**
 * @file
 * Contains config_perms_context.module.
 */

use Drupal\config_perms_context\Form\Settings;
use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function config_perms_context_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the config_perms_context module.
    case 'help.page.config_perms_context':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Context integration with custom permissions') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_preprocess_HOOK() for menu-local-task templates.
 */
function config_perms_context_preprocess_menu_local_task(&$variables) {
  if (!\Drupal::state()->get(Settings::DEBUG_KEY)) {
    return;
  }

  if (isset($variables['element']['#link']['url'])) {
    /** @var Drupal\Core\Url $url */
    $url = $variables['element']['#link']['url'];
    $routeName = $url->getRouteName();
    $variables['attributes']['class'][] = 'route___' . $routeName;
  }
}
