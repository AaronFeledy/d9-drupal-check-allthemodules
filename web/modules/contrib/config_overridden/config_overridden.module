use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_form_alter().
 */
function config_overridden_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  config_overridden_service_overrider()
    ->findPlugin($form, $form_state, $form_id)
    ->highlightOverrides();
}

/**
 * Shortcut function to get overrider service.
 *
 * @return \Drupal\config_overridden\Plugin\ConfigFormOverriderManager
 *   Return Config Form Overrider Manager.
 */
function config_overridden_service_overrider() {
  return \Drupal::service('plugin.manager.config_overridden.config_form_overrider');
}
