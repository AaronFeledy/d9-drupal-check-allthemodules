<?php

/**
 * @file
 * Contains quenforcer.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Form\FormStateInterface;
use Drupal\quenforcer\Quotas\Quota;

/**
 * Implements hook_help().
 */
function quenforcer_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the quenforcer module.
    case 'help.page.quenforcer':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Enforces quotas set for the entire Drupal site') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function quenforcer_theme() {
  return [
    'quenforcer' => [
      'template' => 'quenforcer',
      'render element' => 'children',
    ],
  ];
}

/**
 * Implements hook_form_BASE_FORM_ID_alter() for Nodes.
 */
function quenforcer_form_node_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  $form['#validate'][] = 'quenforcer_validate_entity_creation';
}

/**
 * Implements hook_form_BASE_FORM_ID_alter() for Users.
 */
function quenforcer_form_user_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  $form['#validate'][] = 'quenforcer_validate_entity_creation';
}

function quenforcer_validate_entity_creation(array &$form, FormStateInterface $form_state) {
  Quota::setFormErrorIfExceeded($form_state);
}

/**
 * Implements hook_requirements().
 *
 * Adds quota information to the status page.
 */
function quenforcer_requirements($phase) {
  $requirements = [];

  if ($phase == 'runtime') {
    $requirements['quenforcer'] = Quota::getStatusPageInfo();
  }

  return $requirements;
}
