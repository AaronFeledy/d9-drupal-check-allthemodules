<?php

/**
 * @file
 * Module file.
 */

use Drupal\Core\Entity\ContentEntityFormInterface;
use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_form_alter().
 */
function dirty_form_api_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  if (!$form_state->getFormObject() instanceof ContentEntityFormInterface) {
    return;
  }

  $form['#attached']['library'][] = 'dirty_form_api/api';

  // @TODO, could make this conditional if it modules want to subscribe to the
  // events and handle this themselves.
  $include_prevent_navigation = TRUE;
  \Drupal::moduleHandler()->alter('prevent_navigation', $include_prevent_navigation, $form, $form_id);

  if ($include_prevent_navigation) {
    $form['#attached']['library'][] = 'dirty_form_api/prevent-navigation';
  }
}
