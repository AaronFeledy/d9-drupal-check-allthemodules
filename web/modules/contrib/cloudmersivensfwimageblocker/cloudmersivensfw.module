<?php
/**
 * @file
 * Controls behaviour of integration with CloudmersiveNsfw.
 */

use Drupal\cloudmersivensfw\Scanner;
use Drupal\Core\StreamWrapper\StreamWrapperInterface;

/**
 * Implements hook_entity_create().
 *
 * Attach a scanner to all entities that implement Drupal\file\FileInterface.
 */
function cloudmersivensfw_entity_create($entity) {
  if (is_a($entity, 'Drupal\file\FileInterface')) {
    $entity->cloudmersivensfw_attemptScan = TRUE;
  }
}

/**
 * Implements hook_file_validate().
 */
function cloudmersivensfw_file_validate(Drupal\file\FileInterface $file) {
  $errors = array();

  // This hook can be called on actions that do not justify scanning
  // (such as removing an existing file).
  // The entity-action attaches a property "cloudmersivensfw_attemptScan" for actions
  // where the file should be scanned.
  if (empty($file->cloudmersivensfw_attemptScan)) {
    return $errors;
  }

  $scanner = \Drupal::service('cloudmersivensfw');
  if ($scanner->isEnabled() && $scanner->isScannable($file)) {
    if ($scanner->isVerboseModeEnabled()) {
      \Drupal::logger('Cloudmersive NSFW')->debug('File %filename is scannable.', array('%filename' => $file->getFilename()));
    }

    $result = $scanner->scan($file);
    switch ($result) {
      // File is infected.
      case Scanner::FILE_IS_INFECTED:
        $errors[] = t('Unsafe, inappropriate or offensive content was detected in this image and it was blocked.');
        break;

      // File couldn't be scanned (perhaps the CloudmersiveNsfw service is unavailable).
      case Scanner::FILE_IS_UNCHECKED:
        // Check whether unscanned files are permitted
        if (!$scanner->allowUncheckedFiles()) {
          $errors[] = t('The Cloudmersive NSFW scanner could not check the file, so the file cannot be uploaded. Contact the site administrator if this problem persists.');
        }
        break;
    }
  }
  // In verbose mode, log files that were not checked.
  elseif ($scanner->isVerboseModeEnabled()) {
    $message  = 'Uploaded file %filename was not checked, and was uploaded without checking.';
    $replacements = array(
      '%filename' => $file->getFilename(),
    );
    \Drupal::logger('Cloudmersive NSFW')->info($message, $replacements);
  }

  return $errors;
}
