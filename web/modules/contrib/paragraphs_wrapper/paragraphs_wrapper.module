<?php

/**
 * Implements hook_theme().
 */
function paragraphs_wrapper_theme($existing, $type, $theme, $path) {
  return [
    'paragraphs_wrapper_container' => [
      'variables' => ['wraps' => []],
    ],
    'paragraphs_wrapper_wrap' => [
      'variables' => ['bundle' => '', 'items' => [], 'parent' => []],
    ],
  ];
}

/**
 * Implements hook_theme_suggestions_HOOK().
 */
function paragraphs_wrapper_theme_suggestions_paragraphs_wrapper_wrap(array $variables) {
  $suggestions = [];
  $suggestions[] = $variables['theme_hook_original'] . '__' . $variables['bundle'];
  return $suggestions;

}
