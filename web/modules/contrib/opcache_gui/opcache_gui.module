<?php

/**
 * @file
 * Contains opcache_gui.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function opcache_gui_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the opcache_gui module.
    case 'help.page.opcache_gui':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Displays Zend OPcache information') . '</p>';
      return $output;

    default:
  }
}

function opcache_gui_theme() {
  $theme = [];

  $theme['opcache_gui'] = [
    'variables' => [
      'opcache' => NULL,
    ],
  ];

  return $theme;
}
