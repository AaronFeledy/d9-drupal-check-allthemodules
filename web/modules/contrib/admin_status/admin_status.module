<?php

/**
 * @file
 * Defines the Admin Status module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function admin_status_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.admin_status':
      return t('<p>The Admin Status module displays messages to users with certain permissions for important status-related infromation such as if there are errors or warnings on the core status page.</p>
      <p>Visit the <a href=":project_page">project page on Drupal.org</a> for more details.</p>',
        [
          ':project_page' => 'https://www.drupal.org/project/admin_status',
        ]);
  }
}
