<?php

/**
 * @file
 * Contains workflow_task.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function workflow_task_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the workflow_task module.
    case 'help.page.workflow_task':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Task based workflow module to setup Agile &amp; Kanban like systems.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function workflow_task_theme() {
  $theme = [];
  $theme['workflow_task'] = [
    'render element' => 'elements',
    'file' => 'workflow_task.page.inc',
    'template' => 'workflow_task',
  ];
  $theme['workflow_task_content_add_list'] = [
    'render element' => 'content',
    'variables' => ['content' => NULL],
    'file' => 'workflow_task.page.inc',
  ];
  return $theme;
}

/**
* Implements hook_theme_suggestions_HOOK().
*/
function workflow_task_theme_suggestions_workflow_task(array $variables) {
  $suggestions = [];
  $entity = $variables['elements']['#workflow_task'];
  $sanitized_view_mode = strtr($variables['elements']['#view_mode'], '.', '_');

  $suggestions[] = 'workflow_task__' . $sanitized_view_mode;
  $suggestions[] = 'workflow_task__' . $entity->bundle();
  $suggestions[] = 'workflow_task__' . $entity->bundle() . '__' . $sanitized_view_mode;
  $suggestions[] = 'workflow_task__' . $entity->id();
  $suggestions[] = 'workflow_task__' . $entity->id() . '__' . $sanitized_view_mode;
  return $suggestions;
}
