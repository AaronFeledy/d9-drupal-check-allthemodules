<?php

/**
 * @file
 * Drupal Module: UUID Map.
 *
 * Implements entity hooks to manage records in the entity uuid map table.
 */

use Drupal\Core\Entity\EntityInterface;

/**
 * Implements hook_entity_insert().
 */
function uuid_map_entity_insert(EntityInterface $entity) {
  \Drupal::service('uuid_map')->insertEntity($entity);
}

/**
 * Implements hook_entity_delete().
 */
function uuid_map_entity_delete(EntityInterface $entity) {
  \Drupal::service('uuid_map')->deleteEntity($entity);
}
