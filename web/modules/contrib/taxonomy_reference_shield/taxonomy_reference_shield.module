<?php

/**
 * @file
 * Hook implementations for Taxonomy reference shield.
 */

use Drupal\Core\Entity\EntityInterface;
use Drupal\Core\Session\AccountInterface;
use Drupal\taxonomy\TermInterface;
use Drupal\taxonomy_reference_shield\EntityOperations;
use Drupal\taxonomy_reference_shield\Form\ShieldDeleteForm;

/**
 * Implements hook_ENTITY_TYPE_access().
 */
function taxonomy_reference_shield_taxonomy_term_access(TermInterface $term, $operation, AccountInterface $account) {
  return \Drupal::service('class_resolver')
    ->getInstanceFromDefinition(EntityOperations::class)
    ->onTermAccess($term, $operation, $account);
}

/**
 * Implements hook_entity_type_alter().
 */
function taxonomy_reference_shield_entity_type_alter(array &$entity_types) {
  if (!isset($entity_types['taxonomy_term'])) {
    return;
  }
  $canonical = $entity_types['taxonomy_term']->getLinkTemplate('canonical');
  $entity_types['taxonomy_term']->setLinkTemplate('shield_delete', $canonical . '/shield-delete');
  $entity_types['taxonomy_term']->setFormClass('shield_delete', ShieldDeleteForm::class);
}

/**
 * Implements hook_entity_operation().
 */
function taxonomy_reference_shield_entity_operation(EntityInterface $entity) {
  return \Drupal::service('class_resolver')
    ->getInstanceFromDefinition(EntityOperations::class)
    ->entityOperation($entity);
}
