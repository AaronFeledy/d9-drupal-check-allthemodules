<?php

/**
 * @file
 * Hooks to add AdChoices link into a menu.
 */

/**
 * Implements hook_menu_links_discovered_alter().
 */
function ad_choices_link_menu_links_discovered_alter(array &$links) {
  \Drupal::service('ad_choices_link.link_insert')->insert($links);
}

/**
 * Implements hook_preprocess_menu().
 */
function ad_choices_link_preprocess_menu(&$variables, $hook) {
  \Drupal::service('ad_choices_link.link_alter')->alter($variables);
}
