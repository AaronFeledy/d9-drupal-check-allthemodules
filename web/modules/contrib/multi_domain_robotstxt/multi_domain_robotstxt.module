<?php

/**
 * Implements hook_robotstxt().
 * Allow for additional robots.txt lines for different domains
 */
function multi_domain_robotstxt_robotstxt() {
  $_domain = \Drupal::service('domain.negotiator')->getActiveDomain();
  
  if (!empty($_domain)) {
    $domain_robotstxt = \Drupal::config('domain_robotstxt_admin_settings.settings')->get('domain_robotstxt_setting');

    if (!empty($domain_robotstxt['domain_id:' . $_domain->id()])) {
       echo $domain_robotstxt['domain_id:' . $_domain->id()];
       //return;
    }
  }
}

