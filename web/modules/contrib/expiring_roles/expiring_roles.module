<?php

/**
 * @file
 * Contains expiring_roles.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function expiring_roles_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the expiring_roles module.
    case 'help.page.expiring_roles':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Gives the ability to grant roles with a fixed expiration date.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_cron().
 */
function expiring_roles_cron() {
  $er_manager = \Drupal::service('expiring_roles.expiring_roles_manager');
  $er_manager->updateRoles();
}
