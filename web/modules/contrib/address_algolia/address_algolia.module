<?php

/**
 * @file
 * Contains address_algolia.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function address_algolia_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the address_algolia module.
    case 'help.page.address_algolia':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Integrates address fields with the <a href=":library_url" target="_blank">Algolia Places library</a>.', [':library_url' => 'https://community.algolia.com/places']) . '</p>';
      return $output;
  }
}
