<?php

/**
 * Implements hook_local_tasks_alter().
 */
function measuremail_local_tasks_alter(&$local_tasks) {
  // Change local tasks for config translation if language module is not enabled.
  if (isset($local_tasks['entity.measuremail.config_translation_overview']) && !\Drupal::moduleHandler()
      ->moduleExists('language')) {
    unset($local_tasks['entity.measuremail.config_translation_overview']);
  }
}
