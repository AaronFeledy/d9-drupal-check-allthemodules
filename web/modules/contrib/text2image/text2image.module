<?php

/**
 * @file
 * Contains text2image.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function text2image_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the text2image module.
    case 'help.page.text2image':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Text field formatter to generate images from strings.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Return an array of selected fonts saved to config.
 *
 * @return array
 *   Array of font paths => names.
 */
function text2image_get_selected_fonts() {

  $selected = [];
  $config = \Drupal::config('text2image.settings');
  try {
    if ($list = $config->get('fonts_selected')) {
      $selected = unserialize($list);
    }
  }
  catch (Exception $exc) {
    $selected = [];
  } finally {
    return $selected;
  }
}
