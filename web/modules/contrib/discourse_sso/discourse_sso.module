<?php

/**
 * @file
 * Provides a Single Sign On integration for a Discourse forum.
 */

use Drupal\Core\Session\AccountInterface;

/**
 * Implements hook_user_logout().
 */
function discourse_sso_user_logout(AccountInterface $account) {
  $uid = $account->id();
  $service = \Drupal::service('discourse_sso.logout');
  $service->logout($uid);
}
