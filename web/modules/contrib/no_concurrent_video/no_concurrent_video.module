<?php

/**
 * @file
 * Contains no_concurrent_video.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */

function no_concurrent_video_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the no_concurrent_video module.
    case 'help.page.no_concurrent_video':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('A module that will prevent HTML 5 videos with a class of \'video\' to be played simultaneously.') . '</p>';
      return $output;
    default:
  }
}

function no_concurrent_video_page_attachments(array &$attachments) {
  $config = \Drupal::config('no_concurrent_video.settings');
  $attachments['#attached']['library'][] = 'no_concurrent_video/global-styling';
  $attachments['#attached']['drupalSettings']['no_concurrent_video']['video_class'] = $config->get('video_class');
}

