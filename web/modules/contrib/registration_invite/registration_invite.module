<?php

/**
 * @file
 * Contains registration_invite.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_help().
 */
function registration_invite_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the registration_invite module.
    case 'help.page.registration_invite':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('User registration by invitation only.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function registration_invite_theme() {
  return [
    'registration_invite' => [
      'render element' => 'children',
    ],
  ];
}

/**
 * Implements hook_form_alter().
 */
function registration_invite_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  if ($form_id == 'user_admin_settings') {
    $form['registration_cancellation']['user_register']['#options']['invite_only'] = t('New user registration by invitation only.');
  }
}
