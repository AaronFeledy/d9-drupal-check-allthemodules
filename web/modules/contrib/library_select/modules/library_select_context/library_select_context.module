<?php

/**
 * @file
 * Contains library_select_context.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function library_select_context_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the library_select_context module.
    case 'help.page.library_select_context':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Library Select with Context') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_page_attachments_alter().
 */
function library_select_context_page_attachments_alter(array &$attachments) {
  /** @var \Drupal\context\ContextManager $context_manager */
  $context_manager = \Drupal::service('context.manager');

  foreach ($context_manager->getActiveReactions('library_select') as $reaction) {
    $attachments['#attached']['library'][] = 'library_select/' . $reaction->execute();
  }
}
