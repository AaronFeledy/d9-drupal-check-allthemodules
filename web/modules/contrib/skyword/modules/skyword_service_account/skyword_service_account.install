<?php

use Drupal\user\Entity\User;

/**
 * Implements hook_install().
 */
function skyword_service_account_install() {
  $user = User::create([
    'name' => 'skyword',
    'mail' => 'support@skyword.com',
    'status' => 1,
  ]);
  $user->enforceIsNew();
  $user->addRole('skyword');
  $user->save();
}

