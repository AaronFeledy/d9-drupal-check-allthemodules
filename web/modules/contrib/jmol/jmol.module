use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function jmol_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the jmol module.
    case 'help.page.jmol':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('The Jmol plugin requires the site administrator to install the Jmol library on the local server. View lib/README for instructions.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function jmol_theme(array $existing, $type, $theme, $path) {
  return [
    'jmol_full_template' => [
      'variables' => [
        'attributes' => [],
      ],
    ],
    'jmol_formatter_template' => [
      'variables' => [
        'attributes' => [],
      ],
    ],
  ];
}
