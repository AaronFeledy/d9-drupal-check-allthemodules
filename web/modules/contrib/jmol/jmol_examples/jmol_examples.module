<?php

/**
 * @file
 * The Drupal hooks implemented by jmol_examples.
 */

/**
 * Implements hook_theme().
 */
function jmol_examples_theme(array $existing, $type, $theme, $path) {
  return [
    'jmol_examples_lite' => [
      'variables' => [
        'info' => [],
      ],
    ],
    'jmol_examples_lite2' => [],
  ];
}

/**
 * Implements hook_help().
 */
function jmol_examples_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the jmol module.
    case 'help.page.jmol_examples':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('The JSMol Examples module contains some demonstrations of the module in action. Visit <a href="jmol-example" to see the list of examples.') . '</p>';
      return $output;

    default:
  }
}

