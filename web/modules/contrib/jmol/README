//Files will go in the libraries directory. If it does not exist, create it
cd {Drupal_base}/libraries
mkdir jmol
cd jmol
// Get the latest jmol library. For example:
wget http://downloads.sourceforge.net/project/jmol/Jmol/Version%2014.6/Version%2014.6.0/Jmol-14.6.0_2016.06.14-binary.tar.gz

// Unpack the tarball
tar -xzf *.gz

// Move JSMol to the lib directory
find ./ -name jsmol.zip | xargs mv -t .

// Unzip the file
unzip jsmol.zip

// Move the required files to lib
mv jsmol/j2s .
mv jsmol/JSmol.min.nojq.js .
mv jsmol/JSmol.lite.nojq.js .

// Remove everything we don't need
rm *.gz
rm -rf jm*
rm -rf jsmol
rm jsmol.zip
