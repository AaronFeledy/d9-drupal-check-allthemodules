/**
 * @param $suggestions
 * @param $variables
 * @param $hook
 */
function unveil_theme_suggestions_image_alter(&$suggestions, $variables) {
  $config = \Drupal::config('unveil.settings');
  if (!empty($config->get('unveil_preprocess_image'))) {
    $suggestions[] = 'unveil_image';
  }
}

/**
 * Implements hook_theme().
 */
function unveil_theme($existing, $type, $theme, $path) {
  $items['unveil_image'] = array(
    'variables' => array('vars' => NULL),
    'function' => 'theme_unveil_image',
  );
  return $items;
}

/**
 * Theme hook called to make sure images are formatted correct for unveil.js.
 *
 * On purpose we're excluding the image size, because we want to allow the
 *   theme full control over the image. Adding image size attributes to the
 *   image can interfere with responsive web design.
 */
function theme_unveil_image(&$variables) {
  global $base_url;

  $attributes = array('title' => $variables['title'], 'alt' => $variables['alt']);
  // Attributes.
  $attributes += $variables['attributes'];
  $attributes['src'] = $base_url . '/' . drupal_get_path('module', 'unveil') . '/image_placeholder.gif';
  $attributes['data-src'] = file_create_url($variables['uri']);
  $attributes['height'] = $variables['height'];
  $attributes['width'] = $variables['width'];
  $attributes['class'] = 'unveil image-style-' . $variables['style_name'];


  // No script attributes.
  $noscript_attributes = $attributes;
  $noscript_attributes['src'] = file_create_url($variables['uri']);
  unset($noscript_attributes['data-src']);

  // Return unveil HTML.
  $attributes = new Drupal\Core\Template\Attribute($attributes);
  $noscript_attributes = new Drupal\Core\Template\Attribute($noscript_attributes);
  $noscript = '<noscript><img' . (string) $noscript_attributes . ' /></noscript>';
  return '<img' . (string) $attributes . ' />' . $noscript;
}

/**
 * Implements hook_page_attachments_alter().
 */
function unveil_page_attachments_alter(array &$page) {
  $config = \Drupal::config('unveil.settings');
  if (!empty($config->get('unveil_preprocess_image'))) {
    $page['#attached']['library'][] = 'unveil/unveil';
    $page['#attached']['library'][] = 'unveil/unveil-behavior';

    $page['#attached']['drupalSettings']['unveil']['unveil_preprocess_image_unveiled'] = $config->get('unveil_preprocess_image_unveiled');
  }
}
