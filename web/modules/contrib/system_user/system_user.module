<?php

/**
 * @file
 * System user module file.
 */

use Drupal\Core\Entity\EntityTypeInterface;
use Drupal\Core\Field\BaseFieldDefinition;

/**
 * Implements hook_entity_base_field_info().
 */
function system_user_entity_base_field_info(EntityTypeInterface $entity_type) {
  $fields = [];

  if ($entity_type->id() == 'user') {
    $fields['system_user'] = BaseFieldDefinition::create('boolean')
      ->setLabel('System User')
      ->setName('System User')
      ->setDefaultValue(0);
  }

  return $fields;
}
