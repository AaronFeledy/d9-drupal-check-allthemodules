<?php

/**
 * @file
 * Provides Twitch iframes.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 *
 * @inheritdoc
 */
function video_embed_twitch_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.video_embed_twitch':
      $text = file_get_contents(dirname(__FILE__) . '/README.txt');
      if ($text) {
        return '<pre>' . $text . '</pre>';
      }
  }
  return NULL;
}
