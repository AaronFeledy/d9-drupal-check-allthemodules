<?php

/**
 * @file
 * Contains paragraphs_wizard.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function paragraphs_wizard_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the paragraphs_wizard module.
    case 'help.page.paragraphs_wizard':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Implements a field formatter for paragraphs to show them as a wizard') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function paragraphs_wizard_theme() {
  $arr = [];
  $arr['paragraphswizard'] = [
    'template' => 'paragraphswizard',
    'render element' => 'children',
    'variables' => ['data' => NULL]
  ];
  return $arr;
}