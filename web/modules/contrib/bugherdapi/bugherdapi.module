<?php

/**
 * @file
 * Contains bugherdapi.module..
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function bugherdapi_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the bugherd module.
    case 'help.page.bugherdapi':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Adds &lt;a href=&quot;http://www.bugherd.com/&quot;&gt;BugHerd&lt;/a&gt; issue reporting to your site') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_page_attachments().
 */
function bugherdapi_page_attachments(array &$attachments) {
  /** @var \Drupal\bugherdapi\Manager\BugherdApiManager $manager */
  $manager = Drupal::service('bugherdapi.manager');

  // Checks if bugherd should be loaded.
  if ($manager->pageApplies()) {

    // Pass the settings.
    $attachments['#attached']['drupalSettings']['bugherdapi'] = $manager->getJsSettings();

    // Load the bugherd js library.
    $attachments['#attached']['library'][] = 'bugherdapi/bugherdapi';
  }
}
