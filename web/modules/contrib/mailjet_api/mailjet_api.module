<?php

/**
 * @file
 * Contains mailjet_api.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function mailjet_api_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the mailjet_api module.
    case 'help.page.mailjet_api':

      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Enables site to send emails using Mailjet API v3.1') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function mailjet_api_theme($existing, $type, $theme, $path) {
  return [
    'mailjet' => [
      'variables' => [
        'message' => [],
      ],
      'mail theme' => TRUE,
    ],
  ];
}

/**
 * Implements hook_theme_suggestions_HOOK().
 */
function mailjet_api_theme_suggestions_mailjet(array $variables) {
  $suggestions = [];
  $suggestions[] = 'mailjet';
  $suggestions[] = 'mailjet__' . $variables['message']['module'];
  $suggestions[] = 'mailjet__' . $variables['message']['module'] . '__' . $variables['message']['key'];
  return $suggestions;
}

/**
 * Prepares variables for mailgjet templates.
 *
 * Default template: mailjet.html.twig.
 *
 * @param array $variables
 *   An associative array containing:
 *   - message: An associative array containing the message array.
 *   - body: The processed body.
 */
function template_preprocess_mailjet(array &$variables) {
  $variables['subject'] = $variables['message']['subject'];
  $variables['body'] = $variables['message']['body'];
}

/**
 * Implements hook_mail().
 */
function mailjet_api_mail($key, &$message, $params) {

  switch ($key) {
    case 'test_form_email':
      foreach ($params as $name => $value) {
        $message[$name] = $value;
      }
      break;
  }
}
