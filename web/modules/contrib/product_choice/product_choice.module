<?php

/**
 * @file
 * Contains product_choice.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function product_choice_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the product_choice module.
    case 'help.page.product_choice':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Product Choice Lists and Terms for use with Commerce Products') . '</p>';
      return $output;

    case 'entity.product_choice_list.terms_list':
      $list = $route_match->getParameter('product_choice_list');
      $output = '';
      $output .= t('<h3>%label Terms</h3>', ['%label' => $list->getLabel()]);
      $output .= t('<p>@help</p>', ['@help' => $list->getHelpText()]);
      return $output;

    case 'entity.product_choice_term.add_form':
      $list = $route_match->getParameter('product_choice_list');
      $output = '';
      $output .= t('<h3>%label Term</h3>', ['%label' => $list->getLabel()]);
      $output .= t('<p>@help</p>', ['@help' => $list->getHelpText()]);
      return $output;

    // Parameters type-hinting isn't working for product_choice_list parameter.
    case 'entity.product_choice_term.edit_form':
      $term = $route_match->getParameter('product_choice_term');
      $storage_handler = \Drupal::entityTypeManager()->getStorage('product_choice_list');
      $list = $storage_handler->load($term->getList());
      $output = '';
      $output .= t('<h3>%label Term</h3>', ['%label' => $list->getLabel()]);
      $output .= t('<p>@help</p>', ['@help' => $list->getHelpText()]);
      return $output;

    default:
  }
}
