<?php

use Drupal\Core\Field\BaseFieldDefinition;

/**
* Implements hook_entity_base_field_info()
*/
function posse_twitter_entity_base_field_info(\Drupal\Core\Entity\EntityTypeInterface $entity_type) {
    // Add the organization reference to the contact entity type.
    $fields['twitter_id'] = BaseFieldDefinition::create('string')
      ->setLabel(t('Twitter ID'))
      ->setDescription(t('The unique id associated with this entity on twitter.'))
      ->setSettings(array(
        'default_value' => '',
        'max_length' => 255,
      ))
      ->setDisplayConfigurable('form', TRUE)
      ->setDisplayConfigurable('view', TRUE);
      return $fields;
}
