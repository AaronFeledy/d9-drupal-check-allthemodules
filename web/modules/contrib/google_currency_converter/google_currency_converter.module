<?php
/**
 * @file
 * Google Currency Converter Module file.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function google_currency_converter_help($route_name, RouteMatchInterface $route_match) {
  if ($route_name == 'help.page.google_currency_converter') {
    $output = '';
    $output .= '<h3>' . t('About') . '</h3>';
    $output .= '<p>' . t('This module will help your website to convert currency using google finance calculator. It will give you defult block option to convert currency from one format to another.') . '</p>';
    return $output;
  }
}
