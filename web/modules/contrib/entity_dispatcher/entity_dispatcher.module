<?php

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Entity\EntityInterface;
use Drupal\Core\Entity\Display\EntityViewDisplayInterface;
use Drupal\Core\Session\AccountInterface;
use Drupal\entity_dispatcher\Event\EntityInsertEvent;
use Drupal\entity_dispatcher\Event\EntityUpdateEvent;
use Drupal\entity_dispatcher\Event\EntityDeleteEvent;
use Drupal\entity_dispatcher\Event\EntityPresaveEvent;
use Drupal\entity_dispatcher\Event\EntityViewEvent;
use Drupal\entity_dispatcher\Event\EntityAccessEvent;
use Drupal\entity_dispatcher\Event\EntityCreateEvent;
use Drupal\entity_dispatcher\Event\EntityLoadEvent;

/**
 * Implements hook_help().
 */
function entity_dispatcher_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.entity_dispatcher':
      $output = file_get_contents(drupal_get_path('module', 'entity_dispatcher') . '/README.txt');
      return '<pre>' . $output . '</pre>';
  }
}


/**
 * Implements hook_entity_insert().
 */
function entity_dispatcher_entity_insert(EntityInterface $entity) {
  /** @var \Drupal\entity_dispatcher\Manager\EntityDispatcherManager $manager */
  $manager = Drupal::service('entity_dispatcher.manager');
  $manager->register(new EntityInsertEvent($entity));
}

/**
 * Implements hook_entity_update().
 */
function entity_dispatcher_entity_update(EntityInterface $entity) {
  /** @var \Drupal\entity_dispatcher\Manager\EntityDispatcherManager $manager */
  $manager = Drupal::service('entity_dispatcher.manager');
  $manager->register(new EntityUpdateEvent($entity));
}

/**
 * Implements hook_entity_delete().
 */
function entity_dispatcher_entity_delete(EntityInterface $entity) {
  /** @var \Drupal\entity_dispatcher\Manager\EntityDispatcherManager $manager */
  $manager = Drupal::service('entity_dispatcher.manager');
  $manager->register(new EntityDeleteEvent($entity));
}

/**
 * Implements hook_entity_presave().
 */
function entity_dispatcher_entity_presave(EntityInterface $entity) {
  /** @var \Drupal\entity_dispatcher\Manager\EntityDispatcherManager $manager */
  $manager = Drupal::service('entity_dispatcher.manager');
  $event = $manager->register(new EntityPresaveEvent($entity));

  $entity = $event->getEntity();
}

/**
 * Implements hook_entity_access().
 */
function entity_dispatcher_entity_access(EntityInterface $entity, $operation, AccountInterface $account) {
  /** @var \Drupal\entity_dispatcher\Manager\EntityDispatcherManager $manager */
  $manager = Drupal::service('entity_dispatcher.manager');
  /** @var \Drupal\entity_dispatcher\Event\EntityAccessEvent $event */
  $event = $manager->register(new EntityAccessEvent($entity, $operation, $account));

  return $event->getAccessResult();
}

/**
 * Implements hook_entity_create().
 */
function entity_dispatcher_entity_create(EntityInterface $entity) {
  /** @var \Drupal\entity_dispatcher\Manager\EntityDispatcherManager $manager */
  $manager = Drupal::service('entity_dispatcher.manager');
  $manager->register(new EntityCreateEvent($entity));
}

/**
 * Implements hook_entity_load().
 */
function entity_dispatcher_entity_load(array $entities, $entity_type_id) {
  /** @var \Drupal\entity_dispatcher\Manager\EntityDispatcherManager $manager */
  $manager = Drupal::service('entity_dispatcher.manager');
  $manager->register(new EntityLoadEvent($entities, $entity_type_id));
}

/**
 * Implements hook_entity_view().
 */
function entity_dispatcher_entity_view(array &$build, EntityInterface $entity, EntityViewDisplayInterface $display, $view_mode) {
  /** @var \Drupal\entity_dispatcher\Manager\EntityDispatcherManager $manager */
  $manager = Drupal::service('entity_dispatcher.manager');
  /** @var \Drupal\entity_dispatcher\Event\EntityViewEvent $event */
  $event = $manager->register(new EntityViewEvent($build, $entity, $display, $view_mode));

  $build = $event->getBuild();
}