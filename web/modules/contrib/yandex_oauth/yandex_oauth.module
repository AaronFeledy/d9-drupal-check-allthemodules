use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function yandex_oauth_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'yandex_oauth.admin':
      $output = '<p>' . t('First of all <a href="https://oauth.yandex.com" target="_blank">set up your client application</a>: create the new one or edit an existing which is not used by any other website or application.') . '</p>';
      $output .= '<p>' . t('Ensure the following scopes (permissions) are enabled: <ul><li>Yandex.Passport API: Access to username, first name and surname, gender;</li><li>Other scopes that modules you are installing told you.</li></ul>') . '</p>';
      $output .= '<p>' . t('Fill in the Callback URL input field with the URL shown in the form below.') . '</p>';
      $output .= '<p>' . t('Finally submit that form. After that you will be presented with your application ID and password. Copy them and paste to corresponding fields in the form below.') . '</p>';
      return $output;
  }
}
