<?php

/**
 * @file
 * Adds support for embedding paragraph fields into entities.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function paragraphs_normalizer_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.paragraphs_normalizer':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('This module adds support for embedding paragraphs into serialized entities for JSON or XML.</p>');
      return $output;
  }
}
