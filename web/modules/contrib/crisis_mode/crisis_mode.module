<?php

/**
 * @file
 * Provides a crisis mode block.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function crisis_mode_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.crisis_mode':
      $output = '';
      $output .= '<h3>' . t('Crisis Mode') . '</h3>';
      $output .= '<p>' . t('This Module adds a sitewide block in case of a crisis.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function crisis_mode_theme($existing, $type, $theme, $path) {
  return [
    'crisis_mode' => [
      'variables' => ['content' => NULL],
    ],
  ];
}
