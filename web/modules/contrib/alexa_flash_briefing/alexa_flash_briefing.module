<?php

/**
 * @file
 * Contains the post-render hook needed to adjust response headers.
 */

use Drupal\alexa_flash_briefing\Plugin\views\style\FlashBriefingJson;
use Drupal\views\Plugin\views\cache\CachePluginBase;
use Drupal\views\ViewExecutable;

/**
 * Implements hook_views_post_render().
 */
function alexa_flash_briefing_views_post_render(ViewExecutable $view, &$output, CachePluginBase $cache) {

  // Apply appropriate header (except when doing live previews)
  if (!empty($view->live_preview)) {
    return;
  }

  if ($view->style_plugin instanceof FlashBriefingJson) {
    $view->getResponse()->headers->set('Content-Type', 'application/json');
  }
}
