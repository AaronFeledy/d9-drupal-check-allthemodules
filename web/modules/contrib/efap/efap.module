<?php

/**
 * @file
 * Contains efap.module.
 */

use Drupal\Core\Entity\Display\EntityViewDisplayInterface;
use Drupal\Core\Entity\EntityInterface;
use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function efap_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the efap module.
    case 'help.page.efap':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Extra Fields As Plugin') . '</p>';
      return $output;
  }

  return [];
}

/**
 * Implements hook_entity_extra_field_info().
 */
function efap_entity_extra_field_info() {
  $info = [];

  /* @var $manager \Drupal\efap\ExtraFieldPluginManager */
  $manager = \Drupal::service('efap.plugin_manager');
  if ($definitions = $manager->getDefinitions()) {
    foreach ($definitions as $definition) {
      /** @var \Drupal\efap\ExtraFieldInterface $instance */
      $instance = $manager->createInstance($definition['id']);
      $info = array_merge_recursive($info, $instance->info());
    }
  }

  return $info;
}

/**
 * Implements hook_entity_view().
 */
function efap_entity_view(array &$build, EntityInterface $entity, EntityViewDisplayInterface $display, $view_mode) {
  /* @var $manager \Drupal\efap\ExtraFieldPluginManager */
  $manager = \Drupal::service('efap.plugin_manager');
  if ($definitions = $manager->getDefinitions()) {
    foreach ($definitions as $definition) {
      if ($display->getComponent($definition['id'])) {
        /** @var \Drupal\efap\ExtraFieldInterface $instance */
        $instance = $manager->createInstance($definition['id']);
        $build[$definition['id']] = $instance->view($build, $entity, $display, $view_mode);
      }
    }
  }
}
