<?php

/**
 * @file
 * Contains flood_bypass.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function flood_bypass_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the flood_bypass module.
    case 'help.page.flood_bypass':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('This module bypass user login on flood') . '</p>';
      return $output;

    default:
  }
}

use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_form_alter() on behalf of flood_bypass.module.
 */
function flood_bypass_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  if($form_state->getBuildInfo()['callback_object']->getFormId() == 'user_login_form') {
    $form['#validate'][] = '_bypass_flood';
  }
}

function _bypass_flood($form, FormStateInterface $form_state) {
  $name   = $form_state->getValues()['name'];
  $user   = user_load_by_name($name);
  if ($user) {
    $byPassFlood = \Drupal::service('flood_bypass.default')->byPassFlood($user);
  }
}