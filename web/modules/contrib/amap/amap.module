<?php

/**
 * @file
 * Contains amap.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * @param $variables
 * @param $hook
 */
function amap_preprocess(&$variables, $hook)
{

  $module_handler = \Drupal::service('module_handler');
  $variables['amap_module_path'] = $module_handler->getModule('amap')->getPath();

}

/**
 * Implements hook_help().
 */
function amap_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the amap module.
    case 'help.page.amap':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Add an ajax map as a block') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function amap_theme() {
  return [
    'amap' => [
      'render element' => 'children',
      'variables' => array(
        'items' => array(),
        'attributes' => [
          'class' => ['amap-class'],
        ], //
      ),
    ],
  ];
}
