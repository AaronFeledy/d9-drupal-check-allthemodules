<?php

/**
 * @file
 * Provides an Null authentication provider.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function null_auth_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the null_auth module.
    case 'help.page.null_auth':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Null Auth') . '</p>';
      $output .= '<p>' . t('The Null Authentication provider allow anonymous user access to Drupal 8 REST Resources.') . '</p>';

      return $output;
  }
}
