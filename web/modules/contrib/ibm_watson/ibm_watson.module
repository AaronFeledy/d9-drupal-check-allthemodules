/**
 * Get Mime type.
 */
function ibm_watson_mime_type($mimetype) {
  if ($mimetype == 'audio/mpeg') {
    $output = 'audio/mpeg';
  }
  elseif ($mimetype == 'audio/x-wav') {
    $output = 'audio/wav';
  }
  elseif ($mimetype == 'audio/ogg') {
    $output = 'audio/ogg';
  }
  elseif ($mimetype == 'application/x-flac') {
    $output = 'audio/flac';
  }
  return $output;
}

