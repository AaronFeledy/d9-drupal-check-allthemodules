<?php

/**
 * @file
 * This module holds functions useful for the IBP Catalog.
 */

/**
 * Implements hook_theme().
 */
function ibpcatalog_theme() {
  return array(
    'ibpcatalog' => array(
      'variables' => array(
        'items' => NULL,
        'language' => NULL,
        'target' => NULL,
        'sub_category_key' => NULL,
        'friendly_size' => NULL,
        'product_domain' => NULL,
        'company' => NULL,
      ),
      'file' => 'ibpcatalog.pages.inc',
      'template' => 'ibpcatalog',
    ),
  );
}

/**
 * Implements hook_permission().
 */
function ibpcatalog_permission() {
  return array(
    'access ibpcatalog' => array(
      'description' => t('View ibpcatalog report and setup unique key'),
      'title' => t('Access IBP Catalog'),
    ),
  );
}
