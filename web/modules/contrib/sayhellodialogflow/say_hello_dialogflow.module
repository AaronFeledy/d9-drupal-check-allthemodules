<?php

/**
 * @file
 * Contains say_hello_dialogflow.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function say_hello_dialogflow_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.say_hello_dialogflow':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Dialogflow example.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function say_hello_dialogflow_theme($existing, $type, $theme, $path) {
  return [
    'say_hello_dialogflow' => [
      'variables' => [],
    ],
  ];
}

/**
 * Default preprocessor function for the say_hello_dialogflow theme hook.
 */
function template_preprocess_say_hello_dialogflow(&$variables) {
  $variables['attributes'] = [
    'class' => ['dialogflow'],
  ];

}

/**
 * Implements hook_theme_suggestions_HOOK().
 */
function say_hello_dialogflow_theme_suggestions_say_hello_dialogflow($variables) {
  $suggestions = [];

  return $suggestions;
}