<?php

/**
 * @file
 * Contains certificatelogin.module.
 */

use Drupal\Core\Form\FormStateInterface;
use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Url;

/**
 * Implements hook_help().
 */
function certificatelogin_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the certificatelogin module.
    case 'help.page.certificatelogin':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Allows users to log in with a certificate') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function certificatelogin_theme() {
  return [
    'certificatelogin' => [
      'render element' => 'children',
    ],
  ];
}

/**
 * Implements hook_form_FORM_ID_alter().
 *
 * Alters the user login form.
 */
function certificatelogin_form_user_login_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  $configuration = \Drupal::config('certificatelogin.settings');

  if (!$configuration->get('enabled')) {
    return;
  }

  $form['certificatelogin_login_link'] = [
    '#title' => $configuration->get('login_link_label') ?: 'Log in with a certificate',
    '#type' => 'link',
    '#url' => Url::fromRoute('certificatelogin.login'),
    '#attributes' => [
      'title' => $configuration->get('login_link_description') ?: 'Instead of logging in with a username and password, use a digital certificate installed in your browser.',
    ],
  ];
}
