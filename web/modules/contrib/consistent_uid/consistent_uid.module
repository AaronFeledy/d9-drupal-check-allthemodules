<?php
/**
 * @file
 * Contains hooks implementations for consistent_uid module.
 */

use Drupal\consistent_uid\HookHandler\ConsistentUidHookHandler;
use Drupal\Core\Entity\EntityInterface;

/**
 * Implements hook_ENTITY_TYPE_presave().
 */
function consistent_uid_user_presave(EntityInterface $entity) {

  \Drupal::classResolver()
    ->getInstanceFromDefinition(ConsistentUidHookHandler::class)
    ->hookUserPreSave($entity);
}
