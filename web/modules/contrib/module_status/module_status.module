<?php

/**
 * @file
 * Contains module_status.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function module_status_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the module_status module.
    case 'help.page.module_status':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Module Status') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function module_status_theme() {
  return [
    'module_status_overview' => [
      'variables' => [
        'last_update_label' => '',
        'last_update_date' => '',
        'refresh_link' => [],
        'module_status_overview_table' => [],
        'module_status_overview_data' => [],
      ],
      'file' => 'module_status.overview.inc',
    ],
  ];
}
