<?php

/**
 * @file
 * Integrates Teamleader with Drupal core Contact module.
 */

/**
 * Implements hook_form_FORM_ID_alter() for contact_form_form().
 */
function teamleader_contact_form_contact_message_form_alter(&$form, &$form_state, $form_id) {
  $service = \Drupal::service('teamleader_contact');
  $form['actions']['submit']['#submit'][] = [$service, 'addContactToTeamleader'];
}
