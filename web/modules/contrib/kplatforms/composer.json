{
    "name": "koumbit/kplatforms",
    "description": "Project for building various Drupal platforms used at Koumbit",
    "license": "gplv2+",
    "authors": [
        {
            "name": "Kienan Stewart",
            "email": "kienan@koumbit.org"
        }
    ],
    "minimum-stability": "dev",
    "require": {},
    "require-dev": {
        "drush/drush": "8.x",
        "PraxisLabs/make_diff": "master"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "PraxisLabs/make_diff",
                "version": "master",
                "source": {
                    "url": "https://github.com/PraxisLabs/make_diff.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "ln -s ../../../PraxisLabs/make_diff/ vendor/drush/drush/commands/make_diff && ./vendor/bin/drush cc drush"
        ]
    }
}
