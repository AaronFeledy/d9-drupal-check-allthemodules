<?php

/**
 * @file
 * Contains message_time_interval.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function message_time_interval_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.message_time_interval':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Message Time Interval module used for disappearing message box.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_page_attachments().
 */
function message_time_interval_page_attachments(array &$page) {
  $config = \Drupal::config('message_time_interval.settings');
  if ($config->get('message_time_interval_value')) {
    $page['#attached']['library'][] = 'message_time_interval/message_time_interval';
    $page['#attached']['drupalSettings']['message_time_interval'] = [
      'message_fadeOut' => $config->get('message_time_interval'),
      'message_enabled' => $config->get('message_time_interval_enabled'),
      'message_effect' => $config->get('message_time_interval_effect'),
    ];
  }
}
