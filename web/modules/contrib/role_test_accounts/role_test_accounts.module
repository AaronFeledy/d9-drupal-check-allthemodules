<?php

/**
 * @file
 * Hook implementations for this module.
 */

use Drupal\Core\Entity\EntityInterface;

/**
 * Implements hook_ENTITY_TYPE_insert().
 */
function role_test_accounts_user_role_insert(EntityInterface $entity) {
  $config = \Drupal::config('role_test_accounts.settings');
  if ($config->get('selection_method') === 'exclude') {
    \Drupal::service('role_test_accounts.manager')->createTestAccount($entity->id());
  }
}

/**
 * Implements hook_ENTITY_TYPE_delete().
 */
function role_test_accounts_user_role_delete(EntityInterface $entity) {
  \Drupal::service('role_test_accounts.manager')->deleteTestAccount($entity->id());
}
