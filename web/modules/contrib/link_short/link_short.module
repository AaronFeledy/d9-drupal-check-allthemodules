<?php

/**
 * Implements hook_field_widget_info_alter().
 */
function link_short_field_widget_info_alter(array &$info) {
  // Add link_short to available field types.
  $info['link_default']['field_types'][] = 'link_short';
}

/**
 * Implements hook_field_widget_info_alter().
 */
function link_short_field_formatter_info_alter(array &$info) {
  // Add link_short to available field types.
  $info['link']['field_types'][] = 'link_short';
  $info['link_separate']['field_types'][] = 'link_short';
}

