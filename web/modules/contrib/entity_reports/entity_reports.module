<?php

/**
 * @file
 * Hook implementations for this module.
 */

/**
 * Implements hook_menu_links_discovered_alter().
 */
function entity_reports_menu_links_discovered_alter(&$links) {
  // Add paragraph report link if paragraphs module is installed.
  if (\Drupal::moduleHandler()
    ->moduleExists('paragraphs')) {
    $links['entity_reports.paragraphs_type_structure'] = array(
      'title' => new \Drupal\Core\StringTranslation\TranslatableMarkup('Paragraph types structure'),
      'route_name' => 'entity_reports.paragraph_types_structure',
      'description' => new \Drupal\Core\StringTranslation\TranslatableMarkup('View the structure of the available paragraph types.'),
      'parent' => 'system.admin_reports',
      'weight' => -8,
    );
  }
}
