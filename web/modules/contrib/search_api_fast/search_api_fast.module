<?php

/**
 * @file
 * The search_api_fast module file.
 *
 * Index search_api by using many workers simultaneously.
 */

// Workers for indexing queues.
// Each worker is actually a seperate drush process.
define('SEARCH_API_FAST_INDEX_WORKERS', \Drupal::config('search_api_fast.performance')->get('index_workers'));

// Batches to be handled by each worker before it's respawned.
// If chaning this, you should take memory consumption into account.
define('SEARCH_API_FAST_MAX_BATCHES_WORKER_RESPAWN', \Drupal::config('search_api_fast.performance')->get('max_batches_worker_respawn'));

// Batch size (items to index).
// Each worker handles batches from it's own queue.
define('SEARCH_API_FAST_WORKER_BATCH_SIZE', \Drupal::config('search_api_fast.performance')->get('worker_batch_size'));

// Drush binary.
define("SEARCH_API_FAST_DRUSH", \Drupal::config('search_api_fast.performance')->get('drush'));
