name = Attributions Demo
description = Module to demonstrate how to include attributions in a project's .info-file.
core = 7.x

; While the value 'allowed license' for the 'exception' field is used in the example below, this value is not permitted yet.

; Twitter Bootstrap.
attributions[bootstrap][type] = 'code'
attributions[bootstrap][exception] = 'allowed license'
attributions[bootstrap][work_template] = '@title by @author, available under @license'
attributions[bootstrap][author] = 'Twitter, Inc.'
attributions[bootstrap][title] = 'Bootstrap'
attributions[bootstrap][work_url] = 'http://getbootstrap.com/'
attributions[bootstrap][license] = 'the MIT License'
attributions[bootstrap][license_url] = 'https://github.com/twbs/bootstrap/blob/master/LICENSE'
; Open Sans (font).
attributions[open_sans][type] = 'asset'
attributions[open_sans][exception] = 'allowed license'
attributions[open_sans][title] = 'Open Sans'
attributions[open_sans][work_url] = 'http://flickr.com/photos/paulk/2062848161/'
attributions[open_sans][author] = 'Steve Matteson'
attributions[open_sans][author_url] = 'https://profiles.google.com/107777320916704234605/about'
attributions[open_sans][license] = 'Apache License 2.0'
attributions[open_sans][license_url] = 'http://www.apache.org/licenses/LICENSE-2.0.html'
; Microsoft Windows Cache (custom license)
attributions[wincache][type] = 'code'
attributions[wincache][exception] = '#2392941'
attributions[wincache][template] = 'Windows Cache for PHP by @author is relicensed for Drupal under GPLv2+ with permission from the authors.'
attributions[wincache][author] = 'Microsoft Corporation'
; Comment (note negative weight to get it moved to top).
attributions[comment][type] = 'comment'
attributions[comment][template] = 'The following list of attributions are only displayed for demo purposes. None of these resources are actually used by this module:'
attributions[comment][weight] = -1
; Creative Commons (unadapted work)
attributions[cc_work][type] = 'asset'
attributions[cc_work][title] = 'Griffin Head'
attributions[cc_work][work_url] = 'http://flickr.com/photos/paulk/2062848161/'
attributions[cc_work][author] = 'Paul Keller'
attributions[cc_work][author_url] = 'http://flickr.com/people/paulk/'
attributions[cc_work][license] = 'CC BY 2.0'
attributions[cc_work][license_url] = 'http://creativecommons.org/licenses/by/2.0/deed.no'
; Public domain (no attribution requirement)
attributions[pd][type] = 'asset'
attributions[pd][exception] = 'allowed license'
attributions[pd][hide] = TRUE
attributions[pd][title] = 'Empty Purse'
attributions[pd][work_url] = 'https://openclipart.org/detail/196212/empty-purse---portemonnaie'
attributions[pd][author] = 'IggyOblomov'
attributions[pd][author_url] = 'https://openclipart.org/user-detail/IggyOblomov'
attributions[pd][license] = 'public domain'
attributions[pd][license_url] = 'https://openclipart.org/share'
; Creative Commons (adapted work)
attributions[cc_adaption][type] = 'asset'
attributions[cc_adaption][exception] = 'allowed license'
attributions[cc_adaption][hide] = TRUE
attributions[cc_adaption][title] = 'Fantasy'
attributions[cc_adaption][author] = 'Kari Aaas'
attributions[cc_adaption][license] = 'CC BY 3.0'
attributions[cc_adaption][license_url] = 'http://creativecommons.org/licenses/by-sa/3.0/no/'
attributions[cc_adaption][org_title] = 'Griffin Head'
attributions[cc_adaption][org_work_url] = 'http://flickr.com/photos/paulk/2062848161/'
attributions[cc_adaption][org_author] = 'Paul Keller'
attributions[cc_adaption][org_author_url] = 'http://flickr.com/people/paulk/'
attributions[cc_adaption][org_license] = 'CC BY 2.0'
attributions[cc_adaption][org_license_url] = 'http://creativecommons.org/licenses/by/2.0/deed.no'
; Wikipedia (adapted work)
attributions[wikipedia_adaption][type] = 'asset'
attributions[wikipedia_adaption][exception] = 'allowed license'
attributions[wikipedia_adaption][title] = 'PHP'
attributions[wikipedia_adaption][license_url] = 'http://creativecommons.org/licenses/by-sa/3.0/no/'
