<?php

/**
 * @file
 * Module to demonstrate how to use hook_attributions().
 */

/**
 * Implements hook_help().
 */
function attributions_demo_help($path, $arg) {
  if ($path == 'admin/help#attributions_demo') {
    return '<p>' . t("This module demonstrates how to register attributions in a project's .info-file. Please note that the attributions defined in this way will not appear until you also enable <strong>Attributions</strong>.") . '</p>';
  }
}

