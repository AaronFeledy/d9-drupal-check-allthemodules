use Drupal\Core\Form\FormStateInterface;
use Drupal\blank_node_title\Hook\FormNodeFormAlter;
use Drupal\blank_node_title\Hook\NodePresave;

/**
 * Implements hook_form_TYPE_alter().
 */
function blank_node_title_form_node_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  FormNodeFormAlter::hook($form, $form_state, $form_id);
}

/**
 * Implements hook_form_TYPE_alter().
 */
function blank_node_title_form_node_edit_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  FormNodeFormAlter::hook($form, $form_state, $form_id);
}

/**
 * Implements hook_ENTITY_TYPE_presave().
 */
function blank_node_title_node_presave($entity) {
  NodePresave::hook($entity);
}
