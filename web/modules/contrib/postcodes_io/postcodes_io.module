<?php
/**
 * @file
 * Postcode lookup.
 */

use Drupal\Component\Serialization\Json;

/**
 * Simple postcode lookup conversion.
 *
 * return JSON array
 */
function postcode_io_convert_postcode_to_coordinates(&$postcode) {
  $url = 'https://api.postcodes.io/postcodes?q='.$postcode;
  $json = Json::decode(file_get_contents($url));

  return $json;
}
