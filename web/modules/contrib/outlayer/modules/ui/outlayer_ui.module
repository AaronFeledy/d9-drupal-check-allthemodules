<?php

/**
 * @file
 * Provides the Outlayer UI.
 */

/**
 * Implements hook_entity_type_build().
 */
function outlayer_ui_entity_type_build(array &$entity_types) {
  /* @var $entity_types \Drupal\Core\Entity\EntityTypeInterface[] */
  $outlayer = $entity_types['outlayer'];
  $outlayer->setListBuilderClass('Drupal\outlayer_ui\Controller\OutlayerListBuilder');
  $outlayer->setFormClass('add', 'Drupal\outlayer_ui\Form\OutlayerForm');
  $outlayer->setFormClass('edit', 'Drupal\outlayer_ui\Form\OutlayerForm');
  $outlayer->setFormClass('delete', 'Drupal\outlayer_ui\Form\OutlayerDeleteForm');
  $outlayer->setFormClass('duplicate', 'Drupal\outlayer_ui\Form\OutlayerForm');

  $outlayer->set('admin_permission', 'administer outlayer');

  $outlayer->setLinkTemplate('add-form', '/admin/structure/outlayer/add');
  $outlayer->setLinkTemplate('edit-form', '/admin/structure/outlayer/{outlayer}');
  $outlayer->setLinkTemplate('delete-form', '/admin/structure/outlayer/{outlayer}/delete');
  $outlayer->setLinkTemplate('duplicate-form', '/admin/structure/outlayer/{outlayer}/duplicate');
  $outlayer->setLinkTemplate('collection', '/admin/structure/outlayer');
}

/**
 * Implements hook_help().
 */
function outlayer_ui_help($route_name) {
  if ($route_name == 'help.page.outlayer_ui') {
    $output = file_get_contents(dirname(dirname(dirname(__FILE__))) . '/README.md');
    return function_exists('blazy_parse_markdown') ? blazy_parse_markdown($output) : '<pre>' . $output . '</pre>';
  }
  return '';
}
