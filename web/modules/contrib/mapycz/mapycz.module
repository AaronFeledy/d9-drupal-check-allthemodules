<?php

/**
 * @file
 * Contains mapycz.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function mapycz_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the mapycz module.
    case 'help.page.mapycz':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Module providing support for MapyCZ') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function mapycz_theme() {
  return [
    'mapycz_map' => [
      'variables' => [
        'map_id' => NULL,
        'zoom' => 0,
        'type' => 'default',
        'center' => [
          'lat' => 0,
          'lng' => 0,
        ],
        'markers' => [],
        'print_markers_address' => FALSE,
        'width' => '100%',
        'height' => '250px',
      ],
    ],
    'mapycz_address' => [
      'variables' => [
        'map_id' => NULL,
        'marker' => [],
      ],
    ],
  ];

}
