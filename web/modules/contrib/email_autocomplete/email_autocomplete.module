<?php

/**
 * @file
 * This is the module to provides autocomplete suggestions to Email fields type.
 */

use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_form_alter().
 */
function email_autocomplete_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  $form['#attached']['library'][] = 'email_autocomplete/email_autocomplete';
  $domains = \Drupal::config('email_autocomplete.settings')->get('domains');
  $form['#attached']['drupalSettings']['email_autocomplete']['domains'] = $domains;
}
