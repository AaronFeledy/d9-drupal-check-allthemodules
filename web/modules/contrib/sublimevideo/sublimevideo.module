<?php

/**
 * Implements hook_menu().
 */
function sublimevideo_menu() {
  $items['admin/config/media/sublimevideo'] = array(
    'title' => 'SublimeVideo',
    'description' => '',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('sublimevideo_admin_settings'),
    'access arguments' => array('administer site configuration'),
  );

  return $items;
}

/**
 * Settings form.
 */
function sublimevideo_admin_settings($form, &$form_state) {
  $config = config('sublimevideo.settings');
  $form['sublimevideo_site_token'] = array(
    '#type' => 'textfield',
    '#title' => t('SublimeVideo site\'s token'),
    '#description' => 'Get the site\'s token from your SublimeVideo account at https://my.sublimevideo.net/sites (you must be logged)',
    '#default_value' => $config->get('sublimevideo_site_token'),
    '#size' => 40,
    '#maxlength' => 90,
    '#required' => TRUE,
  );

  return system_config_form($form, $form_state);
}

/**
 * Form submission handler for sublimevideo_admin_settings().
 */
function sublimevideo_admin_settings_submit($form, &$form_state) {
  config('sublimevideo.settings')
    ->set('sublimevideo_site_token', $form_state['values']['sublimevideo_site_token'])
    ->save();
}

/**
 * Implements hook_theme().
 */
function sublimevideo_theme() {
  return array(
    'sublimevideo' => array(
      'variables' => array(
        'file_url' => '',
        'file_mime' => '',
        'options' => array(),
      ),
      'template' => 'sublimevideo',
    ),
  );
}

/**
 * Implements hook_field_formatter_info().
 */
function sublimevideo_field_formatter_info() {
  $formatters = array(
    'sublimevideo' => array(
      'label' => t('SublimeVideo'),
      'field types' => array('file', 'video'), // added a field type 'video' for using in the Video module
    ),
  );
  return $formatters;
}

/**
 * Implements hook_field_formatter_view().
 */
function sublimevideo_field_formatter_view($entity_type, $entity, $field, $instance, $langcode, $items, $display) {
  $element = array();

  if ($display['type'] == 'sublimevideo') {

    $files = array();
    foreach ($items as $delta => $item) {
      $files[$delta] = (object) $item;
    }

    $file_url = file_create_url($item['uri']);
    $file_mime = $item['filemime'];

    foreach ($files as $delta => $file) {
      $element[$delta] = array(
        '#theme' => 'sublimevideo',
        '#file_url' => $file_url,
        '#file_mime' => $file_mime,
      );
    }
  }
  return $element;
}

/**
 * Implements hook_preprocess_hook()
 */
function sublimevideo_preprocess_sublimevideo(&$variables) {

  drupal_add_js('http://cdn.sublimevideo.net/js/' . variable_get('sublimevideo_site_token') . '.js', 'external');

}
