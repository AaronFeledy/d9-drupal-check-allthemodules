<?php

/**
 * @file
 * Contains twig_backlink.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function twig_backlink_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the twig_backlink module.
    case 'help.page.twig_backlink':
      $output = '';
      $output .= '<h3>' . t('About Twig Backlink filter') . '</h3>';
      $output .= '<p>' . t('The Twig Backlink Twig extension builds a 
      list of URL of the parents of the node based on the field name passed in 
      the Twig extension parameter.') . '</p>';
      $output .= '<p>' . t('Usage:').
        '<br /><code>{{ twig_backlink(\'field_name\') }}</code></p>';

    case 'twig_backlink.admin_overview':
      $output = '<p>' . t('Configure the Backlink label to display on nodes, above the list of parents. The label will not be displayed if the node does not have any parents.') . '</p>';

      return $output;
  }
}
