<?php

/**
 * @file
 * Contains views_link_attributes.module.
 */

/**
 * Implements hook_form_FORM_ID_alter().
 */
function views_link_attributes_form_views_ui_config_item_form_alter(&$form, \Drupal\Core\Form\FormStateInterface $form_state, $form_id) {
  $storage = $form_state->getStorage();
  // Fields section.
  if (isset($storage['handler']) && ($storage['handler'] instanceof \Drupal\views\Plugin\views\field\FieldPluginBase)) {
    \Drupal::service('views_link_attributes.views_ui_config_item_form')->form($form, $form_state);
  }
}
