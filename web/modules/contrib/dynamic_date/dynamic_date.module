<?php

/**
 * @file
 * Dynamic date module.
 */

/**
 * Implements hook_theme().
 */
function dynamic_date_theme($existing, $type, $theme, $path) {
  return [
    'dynamic_date' => [
      'variables' => [
        'time' => '',
        'ensure_past' => FALSE,
      ],
    ],
  ];
}

/**
 * Implements hook_preprocess_HOOK().
 */
function dynamic_date_preprocess_dynamic_date(&$variables) {
  if (empty($variables['time'])) {
    $variables['time'] = time();
  }
  /** @var \Drupal\Core\Datetime\DateFormatterInterface $df */
  $df = \Drupal::service('date.formatter');
  // @todo: Make configurable?
  $variables['text'] = t('@time ago', ['@time' => $df->formatTimeDiffSince($variables['time'])]);
  // @todo: Make configurable?
  $variables['title'] = $df->format($variables['time'], 'long');
  if (empty($variables['#attached'])) {
    $variables['#attached'] = [];
  }
  $variables['#attached']['library'][] = 'dynamic_date/dynamic_date';
}
