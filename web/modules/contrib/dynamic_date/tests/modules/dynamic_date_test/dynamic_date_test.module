<?php

/**
 * @file
 * Test module.
 */

/**
 * Implements hook_preprocess_HOOK().
 */
function dynamic_date_test_preprocess_page(&$variables) {
  $variables['page']['content']['dynamic_date'] = [
    '#theme' => 'dynamic_date',
    '#time' => time(),
    '#prefix' => '<div class="past">',
    '#suffix' => '</div>',
  ];
  $variables['page']['content']['dynamic_date_future'] = [
    '#theme' => 'dynamic_date',
    '#time' => time() + 3600,
    '#ensure_past' => TRUE,
    '#prefix' => '<div class="future">',
    '#suffix' => '</div>',
  ];
}
