<?php

/**
 * @file
 * Contains smart_content_segments.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function smart_content_segments_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the smart_content_segments module.
    case 'help.page.smart_content_segments':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Define re-usable groups of conditions into segments.') . '</p>';
      return $output;

    default:
  }
}
