<?php

/**
 * @file
 * Contains restricted_access.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function restricted_access_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the restricted_access module.
    case 'help.page.restricted_access':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Restrict access to the site depending on IP and email address.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function restricted_access_theme() {
  return [
    'restricted_access' => [
      'render element' => 'children',
    ],
  ];
}
