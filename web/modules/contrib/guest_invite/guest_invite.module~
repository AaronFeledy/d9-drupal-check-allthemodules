<?php
/**
 * @file
 * Provides the route functionalities.
 */
use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function guest_invite_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.guest_invite':
      $output = '<h3>' . t('Refer a friend and colleague') . '</h3>';
      $output .= '<p>';
      $output .= t('This form helps the user to refer friend and new guest . User can invite a new user to join the community by entering guest user email id & write message in the form.');
      $output .= '</p>';
      return $output;
  }
}

/**
 * Implements hook_theme().
 */
function guest_invite_theme($existing, $type, $theme, $path) {
	return [
		'guest_invite_form' => [
			'render element' => 'form',
		],
  	];
}

