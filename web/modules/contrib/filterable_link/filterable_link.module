<?php

/**
 * @file
 * Contains filterable_link.module.
 */

use Drupal\Core\Form\FormStateInterface;
use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function filterable_link_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the filterable_link module.
    case 'help.page.filterable_link':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Filter link field references by bundle type.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_form_alter().
 */
function filterable_link_form_alter(&$form, FormStateInterface $form_state, $form_id) {
    // Attach filterable_link library to enhance UX.
    if (isset($form_id) && $form_id == 'field_config_edit_form') {
        $form['#attached']['library'][] = 'filterable_link/filterable_link';
    }
}
