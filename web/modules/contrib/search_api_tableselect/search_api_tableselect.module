<?php

/**
 * @file
 * Contains search_api_tableselect.module.
 */

/**
 * Implements hook_theme().
 *
 * Register views theming functions and those that are defined via views plugin
 * definitions.
 */
function search_api_tableselect_theme($existing, $type, $theme, $path) {
  $module_dir = drupal_get_path('module', 'search_api_tableselect');
  $hooks = [];
  $hooks['views_view_tableselect'] = [
    'variables' => [
      'view' => NULL,
      'options' => NULL,
      'rows' => NULL,
      'title' => NULL,
      'form' => NULL,
    ],
    'path' => $module_dir . '/templates',
    'includes' => [$module_dir . '/search_api_tableselect.theme.inc'],
    'template' => 'views-view-tableselect',
  ];
  $hooks['views_view_tableselect_form'] = [
    'path' => $module_dir . '/templates',
    'includes' => [$module_dir . '/search_api_tableselect.theme.inc'],
    'template' => 'views-view-tableselect-form',
    'render element' => 'form',
  ];
  return $hooks;
}
