<?php

/**
 * @file
 * Contains stats_field.module.
 */


/**
 * Implements hook_field_widget_info_alter().
 */
function stats_field_field_widget_info_alter(&$info) {
  if (isset($info['options_buttons'])) {
    $info['options_buttons']['field_types'][] = 'stat';
  }
  elseif (isset($info['options_select'])) {
    $info['options_select']['field_types'][] = 'stat';
  }
}

/**
 * Implements hook_field_formatter_info_alter().
 */
function stats_field_field_formatter_info_alter(array &$info) {
  if (isset($info['list_default'])) {
    $info['list_default']['field_types'][] = 'stat';
  }
}
