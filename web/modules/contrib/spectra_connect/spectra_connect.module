<?php

/**
 * @file
 * Spectra Connect Module.
 */

use Drupal\Core\Entity\EntityInterface;
use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\spectra_connect\SpectraConnectTest;

/**
 * Implements hook_help().
 */
function spectra_connect_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.spectra_connect':
      $filepath = dirname(__FILE__) . '/README.txt';
      if (file_exists($filepath)) {
        $readme = file_get_contents($filepath);
        $output = '<pre>' . $readme . '</pre>';

        return $output;
      }
  }
}

/**
 * Implements hook_entity_operation().
 */
function spectra_connect_entity_operation(EntityInterface $entity) {
  return \Drupal::service('class_resolver')
    ->getInstanceFromDefinition(SpectraConnectTest::class)
    ->entityOperation($entity);
}
