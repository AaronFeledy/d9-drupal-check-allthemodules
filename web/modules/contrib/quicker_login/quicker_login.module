<?php

/**
 * @file
 * Contains quicker_login.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function quicker_login_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the quicker_login module.
    case 'help.page.quicker_login':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Development module to quickly log in to an account via a path or visit any page as a specific user.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements template_preprocess_page().
 */
function quicker_login_preprocess_page(&$variables) {
  drupal_set_message(t('Note: The Quicker Login module is currently enabled and should not be enabled on a production server.'), 'warning');
}
