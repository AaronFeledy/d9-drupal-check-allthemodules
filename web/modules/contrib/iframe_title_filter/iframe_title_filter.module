<?php

/**
 * @file
 * Contains iframe_title_filter.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function iframe_title_filter_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the iframe_title_filter module.
    case 'help.page.iframe_title_filter':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Add a missing title attribute to iFrames') . '</p>';
      $output .= '<p>' . t('Enable the filter for whatever text formats you want. Once enabled, if an iFrame is missing a title, one is programmatically generated based on the "src" attribute of the iFrame.') . '</p>';
      return $output;

    default:
  }
}
