<?php

/**
 * @file
 * Contains flashpoint_course_content.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Entity\EntityInterface;
use Drupal\Core\Entity\Display\EntityViewDisplayInterface;
use Drupal\flashpoint_course_content\Entity\FlashpointCourseContentType;

/**
 * Implements hook_help().
 */
function flashpoint_course_content_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the flashpoint_course_content module.
    case 'help.page.flashpoint_course_content':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Contains the Course Content Entity base.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function flashpoint_course_content_theme() {
  $theme = [];
  $theme['flashpoint_course_content'] = [
    'render element' => 'elements',
    'file' => 'flashpoint_course_content.page.inc',
    'template' => 'flashpoint_course_content',
  ];
  $theme['flashpoint_course_content_content_add_list'] = [
    'render element' => 'content',
    'variables' => ['content' => NULL],
    'file' => 'flashpoint_course_content.page.inc',
  ];
  return $theme;
}

/**
* Implements hook_theme_suggestions_HOOK().
*/
function flashpoint_course_content_theme_suggestions_flashpoint_course_content(array $variables) {
  $suggestions = [];
  $entity = $variables['elements']['#flashpoint_course_content'];
  $sanitized_view_mode = strtr($variables['elements']['#view_mode'], '.', '_');

  $suggestions[] = 'flashpoint_course_content__' . $sanitized_view_mode;
  $suggestions[] = 'flashpoint_course_content__' . $entity->bundle();
  $suggestions[] = 'flashpoint_course_content__' . $entity->bundle() . '__' . $sanitized_view_mode;
  $suggestions[] = 'flashpoint_course_content__' . $entity->id();
  $suggestions[] = 'flashpoint_course_content__' . $entity->id() . '__' . $sanitized_view_mode;
  return $suggestions;
}

/**
 * Implements hook_entity_extra_field_info() to add the view fields to relevant entities
 */
function flashpoint_course_content_entity_extra_field_info() {
  $ret = array();

  foreach (FlashpointCourseContentType::loadMultiple() as $bundle) {
    $ret['flashpoint_course_content'][$bundle->id()]['display']['progress_buttons'] = [
      'label' => t('Course Progress Buttons'),
      'description' => t('Shows the module-generated Flashpoint course.'),
      'weight' => 10,
    ];
  }


  return $ret;
}

/**
 * Implements hook_ENTITY_TYPE_view().
 */
function flashpoint_course_content_flashpoint_course_content_view(array &$build, EntityInterface $entity, EntityViewDisplayInterface $display, $view_mode) {
  $course = $entity->getCourse();
  $build['progress_buttons'] = \Drupal::formBuilder()->getForm('\Drupal\flashpoint_course_content\Form\FlashpointCourseContentProgressButtons', $entity, $course);
}
