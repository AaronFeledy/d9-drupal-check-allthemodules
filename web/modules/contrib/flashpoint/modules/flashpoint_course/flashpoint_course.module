<?php

/**
 * @file
 * Contains flashpoint_course.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Entity\EntityInterface;
use Drupal\Core\Entity\Display\EntityViewDisplayInterface;

/**
 * Implements hook_help().
 */
function flashpoint_course_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the flashpoint_course module.
    case 'help.page.flashpoint_course':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Contains the Flashpoint Course entity, and the course purchase/access logic') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_entity_extra_field_info() to add the view fields to relevant entities
 */
function flashpoint_course_entity_extra_field_info() {
  $ret = array();

  $ret['group']['course']['display']['flashpoint_course_rendered'] = [
    'label' => t('Flashpoint Course'),
    'description' => t('Shows the module-generates Flashpoint course.'),
    'weight' => 10,
  ];

  return $ret;
}

/**
 * Implements hook_ENTITY_TYPE_view().
 */
function flashpoint_course_group_view(array &$build, EntityInterface $entity, EntityViewDisplayInterface $display, $view_mode) {
  if ($entity->bundle() === 'course') {
    $build['rendered_course'] = \Drupal::formBuilder()->getForm('\Drupal\flashpoint_course\Form\FlashpointCourse', $entity->id());
  }
}
