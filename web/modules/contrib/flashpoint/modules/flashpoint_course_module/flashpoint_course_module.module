<?php

/**
 * @file
 * Contains flashpoint_course_module.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\group\Entity\GroupContent;

/**
 * Implements hook_help().
 */
function flashpoint_course_module_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the flashpoint_course_module module.
    case 'help.page.flashpoint_course_module':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Contains the course module entity') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_inline_entity_form_reference_form_alter().
 */
function flashpoint_course_module_inline_entity_form_reference_form_alter(&$reference_form, &$form_state) {
  $applicable_fields = ['field_instructional_content', 'field_examination_content', 'field_prerequisite_modules'];
  if ($reference_form['#entity_type'] === 'flashpoint_course_content' &&
    array_intersect($reference_form['#parents'], $applicable_fields)) {
    if (empty($reference_form['entity_id']['#selection_settings']['view']['arguments'])) {
      $context = \Drupal::request()->query->get('group_context');
      // Use the group_context parameter if set.
      if ($context && is_numeric($context)) {
        $reference_form['entity_id']['#selection_settings']['view']['arguments'][] = $context;
      }
      // Get the group from the module's group membership.
      else {
        $routematch = \Drupal::routeMatch();
        $module = $routematch->getParameter('flashpoint_course_module');
        if ($module) {
          $gc = GroupContent::loadByEntity($module);
          if ($gc) {
            // The module should only belong to one group.
            $gc = array_shift($gc);
            $gid = $gc->get('gid')->getValue()[0]['target_id'];
            $reference_form['entity_id']['#selection_settings']['view']['arguments'][] = $gid;
          }
        }
      }
    }
  }
}

/**
 * Implements hook_theme().
 */
function flashpoint_course_module_theme() {
  return [
    'flashpoint_course_module' => [
      'render element' => 'children',
    ],
  ];
}
