<?php

/**
 * @file
 * CreditGuard payment module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function cg_payment_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.cg_payment':
      $text = file_get_contents(dirname(__FILE__) . '/README.md');
      if (\Drupal::moduleHandler()->moduleExists('markdown')) {
        // Use the Markdown filter to render the README.
        $filter_manager = \Drupal::service('plugin.manager.filter');
        $settings = \Drupal::configFactory()->get('markdown.settings')->getRawData();
        $config = ['settings' => $settings];
        $filter = $filter_manager->createInstance('markdown', $config);
        return $filter->process($text, 'en');
      }
      else {
        return '<pre>' . $text . '</pre>';
      }
  }
  return NULL;
}

/**
 * Implements hook_cron().
 */
function cg_payment_cron() {
  // Change the status of expired transactions to "expired".
  /** @var \Drupal\cg_payment\Manager\TransactionManager $transaction_manager */
  $transaction_manager = \Drupal::service('cg_payment.transaction_manager');

  $expired_transactions = $transaction_manager->getExpiredTransactions() ?: [];

  /** @var \Drupal\cg_payment\Entity\Transaction $transaction */
  foreach ($expired_transactions as $transaction) {
    $message = 'Status of transaction @trid has been changed to expired.';
    \Drupal::logger('cg_payment')->info($message, ['@trid' => $transaction->id()]);

    $transaction->set('status', 'expired');
    $transaction->save();
  }
}

/**
 * Implements hook_theme().
 */
function cg_payment_theme($existing, $type, $theme, $path) {
  return [
    'payment_complete' => [
      'template' => 'payment-complete',
      'variables' => [
        'attributes' => NULL,
        'is_success' => NULL,
        'transaction' => NULL,
        'cg_redirect_return' => NULL,
      ],
    ],
  ];
}
