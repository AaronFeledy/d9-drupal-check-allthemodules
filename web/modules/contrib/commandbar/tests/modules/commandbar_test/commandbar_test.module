<?php

/**
 * @file
 * A dummy module to test API interaction with the Commandbar module.
 */

/**
 * Implements hook_commandbar_build_alter().
 */
function commandbar_test_commandbar_build_alter(&$matches, &$continue, $string) {
  if ($string == 'commandbar_test') {
    $matches['commandbar_test'] = 'commandbar_test_result';
    $continue = FALSE;
  }
}

/**
 * Implements hook_commandbar_matches_alter().
 */
function commandbar_test_commandbar_matches_alter(&$matches, $string) {
  if ($string == 'commandbar_match_test') {
    $matches['commandbar_match_test'] = 'commandbar_match_test_result';
  }
}

/**
 * Implements hook_commandbar_submit_alter().
 */
function commandbar_test_commandbar_submit_alter($string, &$continue) {
  if ($string == 'commandbar_submit_test') {
    drupal_goto('test-page');
  }
}