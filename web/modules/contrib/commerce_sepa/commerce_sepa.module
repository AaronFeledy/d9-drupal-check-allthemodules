<?php

/**
 * @file
 * Code for the Commerce SEPA module.
 */

/**
 * Implements hook_mail().
 */
function commerce_sepa_mail($key, &$message, $params) {
  switch ($key) {
    case 'sepa_notification':
      $message['subject'] = $params['subject'];
      $message['body'][] = $params['body'];

      break;
  }
}
