<?php

/**
 * @file
 * Install, uninstall and update hooks for Media entity Panopto module.
 */

/**
 * Implements hook_install().
 */
function media_entity_panopto_install() {
  $source = drupal_get_path('module', 'media_entity_panopto') . '/images';
  $destination = \Drupal::config('media_entity.settings')->get('icon_base');
  media_entity_copy_icons($source, $destination);
}
