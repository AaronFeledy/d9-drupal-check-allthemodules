<?php

/**
 * @file
 * Contains backstop_generator.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function backstop_generator_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the backstop_generator module.
    case 'help.page.backstop_generator':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Generates backstop.json files automagically from your Drupal site.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Makes queries tagged with random return in a random order.
 *
 * Required since Drupal doesn't let us use orderRandom() in our SQL queries.
 */
function backstop_generator_query_random_alter($query) {
  $query->orderRandom();
}

/**
 * Set theme for configuration viewing page.
 */
function backstop_generator_theme($existing, $type, $theme, $path) {
  return [
    'backstop_configuration_view' => [
      'variables' => ['modulename' => 'backstop generator'],
    ],
  ];
}
