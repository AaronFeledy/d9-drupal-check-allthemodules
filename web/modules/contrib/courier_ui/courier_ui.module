<?php

/**
 * @file
 * Main module file.
 */

/**
 * Implements hook_entity_type_build().
 */
function courier_ui_entity_type_build(array &$entity_types) {
  $entity_types['courier_template_collection']
    ->setClass('Drupal\courier_ui\Entity\ExtendedTemplateCollection')
    ->setFormClass('add', 'Drupal\courier_ui\Form\EditTemplateCollection')
    ->setFormClass('edit', 'Drupal\courier_ui\Form\EditTemplateCollection')
    ->setFormClass('templates', 'Drupal\courier_ui\Form\EditCollectionTemplates')
    ->setFormClass('delete', 'Drupal\courier_ui\Form\DeleteTemplateCollection')
    ->setListBuilderClass('Drupal\courier_ui\Controller\ListTemplateCollection')
    ->setLinkTemplate('collection', '/admin/content/courier-template-collections')
    ->setLinkTemplate('edit', '/admin/content/courier-template-collections/{courier_template_collection}/edit')
    ->setLinkTemplate('templates', '/admin/content/courier-template-collections/{courier_template_collection}/templates')
    ->setLinkTemplate('delete', '/admin/content/courier-template-collections/{courier_template_collection}/delete');
}
