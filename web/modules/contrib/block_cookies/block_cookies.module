<?php

/**
 * @file
 * Contains block_cookies.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function block_cookies_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the block_cookies module.
    case 'help.page.block_cookies':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Remove all cookies if the user does not agree on using cookies.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_page_attachments().
 */
function block_cookies_page_attachments(array &$attachments) {
  // Check if it should block js cookies.
  if (\Drupal::currentUser()->id() === 0 && \Drupal::config('block_cookies.settings')->get('force_allow_cookies_auth_users') !== 0) {
    $attachments['#attached']['library'][] = 'block_cookies/block-cookies';
  }
}

/**
 * Implements hook_eu_cookie_compliance_show_popup_alter().
 */
function block_cookies_eu_cookie_compliance_show_popup_alter(&$show_popup) {
  if (isset($_SERVER['HTTP_COOKIE'])) {
    $cookies = explode(';', $_SERVER['HTTP_COOKIE']);
    foreach ($cookies as $cookie) {
      $parts = explode('=', $cookie);
      $name = trim($parts[0]);

      if ($name && $name == 'cookie-agreed' && isset($parts[1]) && $parts[1] == '0') {
        $show_popup = FALSE;
      }
    }
  }
}
