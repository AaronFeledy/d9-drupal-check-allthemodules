{
  "name": "drupal/erg",
  "type": "drupal-module",
  "require" : {
    "php": "~7.1",
    "bartfeenstra/fu": "^0.3.4",
    "drupal/core": "~8.3"
  },
  "require-dev" : {
    "drupal/coder": "~8.2.12"
  },
  "autoload": {
    "psr-4": {
      "Drupal\\erg\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Drupal\\Tests\\erg\\": "tests/src"
    }
  },
  "scripts": {
    "initCodeSniffer": [
      "cp -R ./vendor/drupal/coder/coder_sniffer/Drupal ./vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/Drupal",
      "cp -R ./vendor/drupal/coder/coder_sniffer/DrupalPractice ./vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/DrupalPractice"
    ],
    "post-install-cmd": [
      "@initCodeSniffer"
    ],
    "post-update-cmd": [
      "@initCodeSniffer"
    ]
  }
}
