#!/usr/bin/env sh

(
    cd `dirname "$0"`/.. &&
    ./vendor/bin/phpcbf --colors --standard=Drupal --extensions=php,module -nv ./src &&
    ./vendor/bin/phpcbf --colors --standard=Drupal --extensions=php,module -nv ./modules &&
    ./vendor/bin/phpcbf --colors --standard=Drupal --extensions=php -nv ./tests/src
)
