#!/usr/bin/env sh

(
    cd `dirname "$0"`/.. &&
    ./vendor/bin/phpcs --colors --standard=Drupal --extensions=php,module -v ./src &&
    ./vendor/bin/phpcs --colors --standard=Drupal --extensions=php,module -v ./modules &&
    ./vendor/bin/phpcs --colors --standard=Drupal --extensions=php -v ./tests/src
)
