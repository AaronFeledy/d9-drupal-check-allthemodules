<?php

/**
 * @file
 * Contains onehub.module.
 */

use Drupal\onehub\OneHubFileManager;
use Drupal\Core\Entity\EntityInterface;
use Drupal\onehub\OneHubUpdater;

define('ONEHUB_BASE_URL', 'https://ws-api.onehub.com');
define('ONEHUB_REDIRECT_URI', '/oauth/callback');

/**
 * Implements hook_theme().
 */
function onehub_theme() {
  return [
    'onehub_file' => [
      'variables' => ['form' => NULL],
    ],
    'onehub_select' => [
      'variables' => ['form' => NULL],
    ],
    'onehub_views_file' => [
      'variables' => [
        'form' => NULL,
        'id' => NULL,
        'index' => NULL,
      ],
    ],
  ];
}

/**
 * Prepares variables for the onehub field formatter.
 *
 * Default template: onehub-file.html.twig.
 */
function template_preprocess_onehub_file(&$vars) {
  $form = \Drupal::formBuilder()->getForm('Drupal\onehub\Form\OneHubDownloadForm');
  $vars['download'] = $form;
}

/**
 * Prepares variables for the onehub field formatter.
 *
 * Default template: onehub-select.html.twig.
 */
function template_preprocess_onehub_select(&$vars) {
  $form = \Drupal::formBuilder()->getForm('Drupal\onehub\Form\OneHubSelectDownloadForm');
  $vars['download'] = $form;
}

/**
 * Prepares variables for the onehub field formatter.
 *
 * Default template: onehub-file.html.twig.
 */
function template_preprocess_onehub_views_file(&$vars) {
  \Drupal::service('onehub.formid')->setFormId($vars['index']);
  $form = \Drupal::formBuilder()->getForm('Drupal\onehub\Form\OneHubViewsDownloadForm', $vars['id']);
  $vars['download'] = $form;
}

/**
 * Implements hook_entity_insert().
 */
function onehub_entity_insert(EntityInterface $entity) {
  $ohm = (new OneHubFileManager($entity))->processFile();
}

/**
 * Implements hook_entity_update().
 */
function onehub_entity_update(EntityInterface $entity) {
  $ohm = (new OneHubFileManager($entity))->processFile();
}

/**
 * Implements hook_cron().
 */
function onehub_cron() {
  $queue = \Drupal::queue('onehub_queue');
  $items = (new OneHubUpdater())->updateOneHub(FALSE);
  foreach ($items as $item) {
    // Add to queue.
    $queue->createItem($item);
  }
}
