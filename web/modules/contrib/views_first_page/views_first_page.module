<?php

/**
 * @file
 * Contains views_first_page.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function views_first_page_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the views_first_page module.
    case 'help.page.views_first_page':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('This module lets users display a separate number of items on the first page of Views.') . '</p>';
      $output .= '<p>' . t('To use: Under the "" settings for a View, choose either:') . '</p>';
      $output .= '<ul>';
      $output .= '<li>' . t('Paged output, separate count on first page') . ', ' . t('or') . '</li>';
      $output .= '<li>' . t('Paged output, mini pager, separate count on first page') . '</li>';
      $output .= '</ul>';
      return $output;

    default:
      break;
  }
}
