<?php

/**
 * @file
 * Contains remodal.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function remodal_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the remodal module.
    case 'help.page.remodal':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('API for remodal library') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function remodal_theme() {
  return [
    'remodal_content_wrapper' => array(
      'variables' => ['content' => ''],
    ),
  ];
}
