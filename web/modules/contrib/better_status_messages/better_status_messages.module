<?php

/**
 * @file
 * Better Drupal status messages with a close button.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 *
 * @inheritdoc
 */
function better_status_messages_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the  better_status_messages module.
    case 'help.page. better_status_messages':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Style the drupal status messages and add a close button') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme_suggestions_HOOK_alter().
 *
 * Add twig file suggestion for the status_messages.
 */
function better_status_messages_theme_suggestions_status_messages_alter(array &$suggestions, array $variables) {
  if (!_better_status_messages_is_admin_page()) {
    $suggestions[] = 'status_messages__better';
  }
}

/**
 * Implements hook_theme().
 *
 * Use this modules custom twig files fortheme hook status_messages.
 */
function better_status_messages_theme() {
  return [
    'status_messages__better' => [
      'variables' => ['status_headings' => [], 'message_list' => NULL],
      'template' => 'status-messages--better',
    ],
  ];
}

/**
 * Check if current page is admin page.
 *
 * @return bool
 *   TRUE if admin page.
 *   FALSE if not.
 */
function _better_status_messages_is_admin_page() {
  $route = \Drupal::routeMatch()->getRouteObject();

  $is_admin = FALSE;
  if (!empty($route)) {
    $is_admin_route = \Drupal::service('router.admin_context')
      ->isAdminRoute($route);
    $has_node_operation_option = $route->getOption('_node_operation_route');
    $is_admin = ($is_admin_route || $has_node_operation_option);
  }
  else {
    $current_path = \Drupal::service('path.current')->getPath();
    if (preg_match('/node\/(\d+)\/edit/', $current_path, $matches)) {
      $is_admin = TRUE;
    }
    elseif (preg_match('/taxonomy\/term\/(\d+)\/edit/', $current_path, $matches)) {
      $is_admin = TRUE;
    }
  }

  return $is_admin;
}

/**
 * Implements hook_preprocess_HOOK().
 *
 * Pass colors from settings form to twig file.
 */
function better_status_messages_preprocess_status_messages__better(&$variables) {
  $config = \Drupal::config('better_status_messages.settings');

  $variables['color_status_text'] = $config->get('color_status_text') ?? 'white';
  $variables['color_status_bg'] = $config->get('color_status_bg') ?? '#3D9970';
  $variables['color_close_button'] = $config->get('color_close_button') ?? 'white';
  $variables['color_error_bg'] = $config->get('color_error_bg') ?? '#DD0C15';
  $variables['color_error_text'] = $config->get('color_error_text') ?? 'white';

}
