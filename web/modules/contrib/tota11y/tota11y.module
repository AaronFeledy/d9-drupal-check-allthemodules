<?php

/**
 * @file
 * Contains tota11y.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function tota11y_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the tota11y module.
    case 'help.page.tota11y':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('tota11y helps visualize how your site performs with assistive technologies.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_page_attachments_alter().
 */
function tota11y_page_attachments_alter(array &$attachments) {
  if (\Drupal::currentUser()->hasPermission('use tota11y')) {
    $attachments['#attached']['library'][] = 'tota11y/tota11y';
  }
}