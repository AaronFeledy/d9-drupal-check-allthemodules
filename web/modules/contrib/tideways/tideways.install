<?php

/**
 * Implements hook_requirements().
 */
function tideways_requirements($phase) {
  if ($phase == 'runtime') {
    // Autoloading won't work during install phase, unless
    // you manually register the library.
    $installer = new \Drupal\tideways\Install();
    return $installer->requirements($phase);
  }
  else {
    return [];
  }
}
