<?php

/**
 * @file
 * Contains iransans.module.
 */

/**
 * Implements hook_page_attachments().
 */
function iransans_page_attachments(array &$attachments) {
  // enable on farsi language
  if (\Drupal::languageManager()->getCurrentLanguage()->getId() === 'fa') {
    $attachments['#attached']['library'][] = 'iransans/core';
  }
}
