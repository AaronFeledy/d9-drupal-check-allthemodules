<?php

/**
 * @file
 * Implements IBAN validator for Field validation module using PHP-IBAN library.
 */

/**
 * Implements hook_libraries_info().
 */
function iban_validator_libraries_info() {
  $libraries['php-iban'] = array(
    'name' => 'PHP IBAN',
    'vendor url' => 'https://github.com/globalcitizen/php-iban',
    'download url' => 'https://github.com/globalcitizen/php-iban/releases',
    'version callback' => 'iban_validator_get_library_version',
    'files' => array(
      'php' => array(
        'php-iban.php',
      ),
    ),
  );

  return $libraries;
}

/**
 * Implements helper for hook_libraries_info().
 */
function iban_validator_get_library_version() {
  return 'N/A';
}
