<?php
function comparison_builder_form_alter(&$form, \Drupal\Core\Form\FormStateInterface $form_state, $form_id) {
 
  if($form_id == 'field_config_edit_form') {
    //for grouping fields
    $entity = $form_state->getFormObject()->getEntity();
  	$form['third_party_settings']['comparison_builder']['field_group_name'] = array(
  		'#type' => 'textfield',
  		'#title' => t('Field Group Name'),
  		'#default_value' => $entity->getThirdPartySetting('comparison_builder', 'field_group_name'),
  	);
  }
}