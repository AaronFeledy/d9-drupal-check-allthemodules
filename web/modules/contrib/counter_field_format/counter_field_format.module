<?php

/**
 * @file
 * Contains counter_field.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function counter_field_format_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the counter_field module.
    case 'help.page.counter_field':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Creates a counter field formatter') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function counter_field_format_theme() {
  return [
    'counter_field_format' => [
      'variables' => [
        'item' => NULL,
        'counter_attributes' => NULL,
      ],
    ],
  ];
}
