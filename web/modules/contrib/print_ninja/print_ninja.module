<?php

/**
 * @file
 * Contains print_ninja.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function print_ninja_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the print_ninja module.
    case 'help.page.print_ninja':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Export nodes and their comments as a pdf file, along with all attachment of the node and/or comments') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function print_ninja_theme() {
  return [
    'print_ninja' => [
      'render element' => 'children',
    ],
  ];
}

