<?php

/**
 * @file
 * Contains webform_simplenews_handler.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function webform_simplenews_handler_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the webform_simplenews_handler module.
    case 'help.page.webform_simplenews_handler':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Webform Simplenews Handler give the possibility to automatically subscribe to the newsletter.') . '</p>';
      return $output;

    default:
  }
}

/******************************************************************************/
// Theme hooks.
/******************************************************************************/

/**
 * Implements hook_theme().
 */
function webform_simplenews_handler_theme() {
  $info = [
    'webform_handler_submission_newsletter_summary' => [
      'variables' => ['settings' => NULL, 'handler' => NULL],
    ],
  ];

  return $info;
}
