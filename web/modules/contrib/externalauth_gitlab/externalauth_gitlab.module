<?php

/**
 * @file
 * Contains externalauth_gitlab.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function externalauth_gitlab_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the externalauth_gitlab module.
    case 'help.page.externalauth_gitlab':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Authenticate via oauth and a running gitlab instance') . '</p>';
      return $output;

    default:
  }
}
