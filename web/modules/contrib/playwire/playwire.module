<?php

/**
 * @file
 * Contains playwire.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function playwire_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the playwire module.
    case 'help.page.playwire':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Create a field to be used for Playwire video id') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function playwire_theme() {
  return [
    'playwire' => [
      'variables' => [
        'playwire_app_id' => NULL,
        'video_id' => NULL,
      ],
    ],
  ];
}
