/**
* @file
* Custom functionality for Twinesocial module.
*/


/**
* Implements hook_help().
*/
function twinesocial_help($path, $arg) {
  switch($path){
    case 'help.page.twinesocial':{
      $ret_val = '<h2>'.t('About the TwineSocial Drupal Plugin').'</h2>';
      $ret_val .= '<p>'.t('Showcase your brand\'s social media, beautifully presented on your Drupal pages.').'</p>';
      $ret_val .= '<p>'.t('TwineSocial provides the tools you need to grow and engage your social audience. Display any social media content on your digital properties, and drive massive social engagement.').'</p>';
      $ret_val .= '<p>'.t('This module makes it super easy to add your social media content (including #hashtags, @accounts and locations) from any social media network to your Drupal pages. TwineSocial is richly interactive and engaging. Get beautiful presentation of your photos, videos, and other social media elements on your digital properties. Your customers see your brand in action, making TwineSocial the perfect social media hub.').'</p>';
      $ret_val .= '<p>'.t('TwineSocial is fully responsive, and supports infinite scroll.').'</p>';

      $ret_val .= '<h3>'.t('Installation').'</h3>';
      $ret_val .= '<p>'.t('First, go to <a target="_BLANK" href="https://twinesocial.com?utm_source=drupal">TwineSocial</a> and sign up for an account. Installing the plugin without a TwineSocial account will not work properly.').'</p>';
      $ret_val .= '<p>'.t('TwineSocial can be displayed on the Drupal, embedded in your page as an iFrame.').'</p>';

      $ret_val .= '<hr>';
      $ret_val .= '<h2>'.t('Frequently Asked Questions').'</h2>';
      $ret_val .= '<br>';
      $ret_val .= '<h4>'.t('What is TwineSocial?').'</h4>';
      $ret_val .= '<p>'.t('<a href="https:////twinesocial.com?utm_source=drupal">TwineSocial</a> provides the tools you need to grow and engage your social audience. Display any social media content on your digital properties, and drive massive social engagement.').'</p>';

      $ret_val .= '<h4>'.t('What can I use TwineSocial for?').'</h4>';
      $ret_val .= '<p>'.t('Connect any combination of social media feeds, including hashtags, from any social media network and TwineSocial will aggregate your content onto one stunning destination on your website, TV, video wall, or display.').'</p>';
      $ret_val .= '<p>'.t('TwineSocial is richly interactive and engaging. Get beautiful presentation of your photos, videos, and other social media elements on your digital properties.').'</p>';

      $ret_val .= '<h4>'.t('How do I start using TwineSocial?').'</h4>';
      $ret_val .= '<p>'.t('First sign up for a free account at <a href="https:////twinesocial.com?utm_source=drupal">TwineSocial</a>. This Drupal module then allows you to embed your TwineSocial feed into your Drupal site. Go to the Configuration->Twinesocial tab to easily learn how.').'</p>';

      $ret_val .= '<h4>'.t('I\'m stuck. Now what?').'</h4>';
      $ret_val .= '<p>'.t('Feel free to Tweet us at @twinesocial, visit our <a href="https://www.facebook.com/TwineSocial">Facebook Page</a>, visit our <a href="https://support.twinesocial.com">support forum</a>. You can also read our extensive <a href="https://twinesocial.com/docs?utm_source=drupal">online documentation</a>.').'</p>';

      $ret_val .= '<hr>';
      $ret_val .= '<h4>'.t('Need Help? Ask us!').'</h4>';
      $ret_val .= '<p>'.t('Stuck? We\'re here to help. Visit our Support Community, or ask us a question.').'</p>';
      $ret_val .= '<p>'.t('<a href="http://support.twinesocial.com/" target="_BLANK" class="button">Support Forum</a>').'</p>';


      $ret_val .= '<hr>';
      return $ret_val;
      break;
    }
  }
}
