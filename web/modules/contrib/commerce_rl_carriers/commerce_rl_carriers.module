<?php

/**
 * @file
 * Contains commerce_rl_carriers.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function commerce_rl_carriers_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the commerce_rl_carriers module.
    case 'help.page.commerce_rl_carriers':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Integrate Commerce shipping with R&amp;L Carriers.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function commerce_rl_carriers_theme() {
  return [
    'commerce_rl_carriers' => [
      'render element' => 'children',
    ],
  ];
}
