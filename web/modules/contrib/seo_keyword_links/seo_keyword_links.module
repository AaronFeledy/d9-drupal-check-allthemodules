use Drupal\Core\Entity\Display\EntityViewDisplayInterface;
use Drupal\Core\Entity\EntityInterface;
use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function seo_keyword_links_help(
    $route_name,
    RouteMatchInterface $route_match
) {
  switch ($route_name) {
    // Main module help for the keyword_link module.
    case 'help.page.keyword_link':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t(
            'This module helps you to automatically link
        defined keywords to certain articles on your own blog,
        or elsewhere on the internet.'
        ) . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_entity_view_alter().
 */
function seo_keyword_links_entity_view_alter(
    array &$build,
    EntityInterface $entity,
    EntityViewDisplayInterface $display
) {
  $config = \Drupal::config('seo_keyword_links.settings');
  $links = $config->get('links');
  $node_types = $config->get('node_types');

  $body = @$build["#node"]->body->value;

  $affected = function () use ($node_types, $build) {
    if (is_array($node_types) && in_array(
        $build["#node"]->getType(),
        $node_types
    )) {
      return TRUE;
    }

    return FALSE;
  };

  if ($body && is_array($links) && $affected()) {
    $apply_keyword_links = function ($link, $word) use (&$body) {
      if (strpos($body, $word) !== FALSE) {
        $body
          = preg_replace(
        "/\b$word\b/u",
        "<a href='" . $link . "'>" . $word . "</a>",
        $body
        );
      }
    };

    array_walk($links, $apply_keyword_links);

    $build["body"][0]["#text"] = $body;
  }
}
