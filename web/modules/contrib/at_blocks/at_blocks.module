<?php

/**
 * @file
 * Provide some basic help for at blocks.
 */

/**
 * Implements hook_theme().
 */
function at_blocks_theme() {
  return array_merge(drupal_common_theme(), array(
    // Normally theme suggestion templates are only picked up when they are in
    // themes. We explicitly define theme suggestions here so that the block
    // templates in core/modules/system/templates are picked up.
    'block__at_blocks_page_title_block' => array(
      'base hook' => 'block',
      'template' => 'block--at-blocks-page-title-block',
    ),
    'block__at_blocks_page_tabs_block' => array(
      'base hook' => 'block',
      'template' => 'block--at-blocks-page-tabs-block',
    ),
  ));
}

/**
 * Implements hook_preprocess_HOOK() for block templates.
 */
function at_blocks_preprocess_block(&$variables) {
  switch ($variables['base_plugin_id']) {

    case 'at_blocks_page_title_block':
      $variables['title'] = '';
      if($variables['content']['title']['#markup']) {
        $variables['title'] = $variables['content']['title']['#markup'];
      }
      break;

    case 'at_blocks_page_tabs_block':
      $variables['tabs'] = '';
      if($variables['content']['tabs']['#markup']) {
        $variables['tabs'] = $variables['content']['tabs']['#markup'];
      }
      break;
  }
}

