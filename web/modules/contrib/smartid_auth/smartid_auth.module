<?php

/**
 * @file
 * Contains smartid_auth.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Entity\EntityTypeInterface;

/**
 * Implements hook_help().
 */
function smartid_auth_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the smartid module.
    case 'help.page.smartid_auth':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('ID card and mobile ID login') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function smartid_auth_theme($existing, $type, $theme, $path) {
  $theme = [];

  $theme['smartid_auth_login_content'] = [
    'variables' => [
      'forms' => NULL,
      'client_id' => NULL,
      'login_redirect' => NULL,
    ],
    'template' => 'smartid-auth-login-content',
  ];

  $theme['smartid_auth_login_form'] = [
    'render element' => 'form',
    'template' => 'smartid-auth-login-form',
  ];

  return $theme;
}

/**
 * Implements hook_entity_bundle_field_info_alter().
 */
function smartid_auth_entity_bundle_field_info_alter(&$fields, EntityTypeInterface $entity_type, $bundle) {
  if ($bundle == 'user') {
    if (isset($fields['field_personal_id_code'])) {
      /* @var $fields \Drupal\field\Entity\FieldConfig[] */
      $fields['field_personal_id_code']->addConstraint('UniqueField', ['message' => t('User with same personal id code already exists!')]);
    }
  }
}

/**
 * Implements hook_preprocess_HOOK().
 */
function smartid_auth_preprocess_smartid_auth_login_content(&$variables) {
  $variables['module_path'] = base_path() . drupal_get_path('module', 'smartid_auth');
}
