<?php

/**
 * @file
 * Simple 404 message and styling.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements theme_preprocess_HOOK().
 *
 * On 404 pages, replace page content with default text in a twig wrapper.
 */
function better_page_not_found_preprocess_page(&$variables) {

  $route_name = \Drupal::routeMatch()->getRouteName();
  switch ($route_name) {
    case 'system.401':
      $variables['page']['content'] = [
        '#theme' => 'better_system_message',
        '#text' => t('Sorry, you are not authorized to access this page.'),
      ];
      break;

    case 'system.403':
      $variables['page']['content'] = [
        '#theme' => 'better_system_message',
        '#text' => t('Sorry, you are not authorized to access this page.'),
      ];
      break;

    case 'system.404':
      $variables['page']['content'] = [
        '#theme' => 'better_system_message',
        '#text' => t('The requested page could not be found.'),
      ];
      break;
  }
}

/**
 * Implements hook_theme().
 *
 * Create a theme function that wraps messages in a twig container.
 */
function better_page_not_found_theme() {
  return [
    'better_system_message' => [
      'variables' => ['text' => ''],
      'template' => 'better-system-message',
    ],
  ];
}

/**
 * Implements hook_page_attachments().
 *
 * Add this moduls css file on 404 pages.
 */
function better_page_not_found_page_attachments(array &$page) {
  $route_name = \Drupal::routeMatch()->getRouteName();

  if (in_array($route_name, ['system.401', 'system.403', 'system.404'])) {
    $page['#attached']['library'][] = 'better_page_not_found/css';
  }
}

/**
 * Implements hook_help().
 *
 * @inheritdoc
 */
function better_page_not_found_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the  better_status_messages module.
    case 'help.page. better_page_not_found':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Style the page not found pages by default.') . '</p>';
      return $output;

    default:
  }
}
