<?php

/**
 * @file
 * Contains menu_manipulator.install.
 */

/**
 * Implements hook_install().
 */
function menu_manipulator_install() {
  $base_url = $GLOBALS['base_url'];
  drupal_set_message(
    t(
      "Menu Manipulator enabled. " . 
      "Visit the configuration page under <a href='@config_url'>Administer > Site configuration > User Interface</a>.",
      ['@config_url' => "$base_url/admin/config/user-interface/menu-manipulator"]
    )
  );
}
