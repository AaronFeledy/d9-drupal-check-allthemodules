 * Please contribute!
 */


use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function grassroot_interests_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.grassroot_interests':
      $output  = '<h3>' . t('Welcome to Grassroots') . '</h3>';
      $output .= '<dl>';
      $output .= '<dt>' . t('As the name suggests get you the common interest out of specific
      keyword.') . '<dt>';
      $output .= '<dd>' . t('The GI Search menu module displays the extra
      panel at the top of the search showing the common term or url you wish to focus
      when a certain "keyword" is searched. This module is not dependent
      on search but it takes the argument passed in URL to match with the
      mannually entered keywords bind them with title having a URL or
      our choice within the site or some external URL. You can add keywords from
      <a href="!gi_search">GI-search configuration page.</a>', array( '!gi_search' => \Drupal::url('grassroot_interests.grassroot_add'))) . '</dd>';
      $output .= '</dt>';
      return $output;
  }
}
