<?php

/**
 * @file
 * Contains wistia_integration.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function wistia_integration_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the wistia_integration module.
    case 'help.page.wistia_integration':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Wistia Integration') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function wistia_integration_theme() {
  return [
    'wistia_video_field' => [
      'template' => 'wistia_video_field',
      'render element' => 'children',
    ],
  ];
}

/**
 * Implements hook_library_info_alter().
 */
function wistia_integration_library_info_alter(&$libraries, $extension) {

  if ($extension === 'ckeditor' && isset($libraries['drupal.ckeditor'])) {
    $config = \Drupal::config('wistia_integration.wistiasettings');
    $token = $config->get('wistia_token');
    // @todo Find a good way to attach chooser library to load in ckeditor.
    $libraries['drupal.ckeditor']['dependencies'][] = 'wistia_integration/wistia-chooser-lib';
    $libraries['drupal.ckeditor']['drupalSettings']['token'] = $token;
  }

}
