<?php

/**
 * Implements hook_preprocess_paragraph().
 */
function paragraphs_title_preprocess_paragraph__title(&$variables) {
  $request = \Drupal::request();
  $route_match = \Drupal::routeMatch();
  $variables['title'] = \Drupal::service('title_resolver')->getTitle($request, $route_match->getRouteObject());
}

/**
 * Implements hook_theme().
 */
function paragraphs_title_theme($existing, $type, $theme, $path) {
  return array(
    'paragraph__title' => array(
      'base hook' => 'paragraph',
    ),
  );
}