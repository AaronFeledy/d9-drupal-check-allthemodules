<?php

/**
 * @file
 * Contains video_playlist.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function video_playlist_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the field_formatter_test module.
    case 'help.page.field_formatter_test':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Video Playlist module.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme()
 */

function video_playlist_theme(){
  return array(
    'video_file_display' => array(
      'variables' => array(
        'items' => array(
          'uri' => NULL, 'filename' => NULL, 'description' => NULL),
        ),
      'template' => 'video-file-display',
    ),
  );
}

function video_playlist_page_attachments(array &$attachments) {
  $attachments['#attached']['library'][] = 'video_playlist/video-playlist';
}























