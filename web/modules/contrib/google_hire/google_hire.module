<?php

/**
 * @file
 * Contains google_hire.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function google_hire_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the google_hire module.
    case 'help.page.google_hire':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Google Hire integration.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function google_hire_theme() {
  return [
    'google_hire_positions_listing' => [
      'variables' => [
        'title' => NULL,
        'positions' => [],
      ],
      'template' => 'google-hire-positions-listing',
    ],
  ];
}
