<?php

/**
 * @file
 * Contains waterfall_views.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

// Store WaterFall preprocess theme functions in a separate .inc file.
\Drupal::moduleHandler()->loadInclude('waterfall_views', 'inc', 'waterfall_views.theme');

/**
 * Implements hook_help().
 */
function waterfall_views_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the waterfall_views module.
    case 'help.page.waterfall_views':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Adds a Views style plugin for WaterFall') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function waterfall_views_theme() {
  return [
    'waterfall_views' => [
      'render element' => 'children',
      'file' => 'waterfall_views.theme.inc',
    ],
  ];
}
