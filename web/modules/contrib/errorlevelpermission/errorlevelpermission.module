<?php

use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_form_FORM_ID_alter() for system_logging_settings().
 */
function errorlevelpermission_form_system_logging_settings_alter(&$form, FormStateInterface $form_state, $form_id) {
  $form['error_level'] = [
    '#type' => 'item',
    '#title' => t('Error messages to display'),
    '#description' => t('Error Level Permission module took this over with <a href="@link">its permissions</a>.',
      ['@link' => \Drupal\Core\Url::fromRoute('user.admin_permissions', [], ['fragment' => 'module-errorlevelpermission'])->toString()]),
  ];
}
