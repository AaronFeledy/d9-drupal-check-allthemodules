<?php
/**
 * @file
 * A client to send submitted contact forms to a Collect service.
 */

use Drupal\collect_client\Plugin\QueueWorker\CollectClientQueueWorker;
use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_form_feedback_contact_message_form_alter().
 */
function collect_client_contact_form_feedback_contact_message_form_alter(&$form, FormStateInterface $form_state) {
  // Add an additional submit handler.
  $form['actions']['submit']['#submit'][] = 'collect_client_contact_form_feedback_contact_message_form_submit';
}

/**
 * Submit handler for the feedback_contact_message_form.
 */
function collect_client_contact_form_feedback_contact_message_form_submit(&$form, FormStateInterface $form_state) {
  // Add the submitted message entity to the collect_client queue.
  /** @var \Drupal\contact\MessageForm $message_form */
  $message_form = $form_state->getFormObject();
  $message = $message_form->getEntity();
  $item = array(
    'date' => REQUEST_TIME,
    'account' => \Drupal::currentUser(),
    'message' => $message,
  );
  \Drupal::queue(CollectClientQueueWorker::QUEUE_NAME)->createItem($item);
}
