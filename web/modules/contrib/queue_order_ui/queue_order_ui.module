<?php

/**
 * @file
 * Contains queue_order_ui.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Url;

/**
 * Implements hook_help().
 */
function queue_order_ui_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.queue_order_ui':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('This is the module that provide UI to control sorting of queue workers definitions.') . '</p>';
      $output .= '<h3>' . t('Configuration') . '</h3>';
      $output .= '<p>' . t(
          'Use the <a href=":path">sorting form</a> to override queue workers order defined by the related annotations.',
          [
            ':path' => Url::fromRoute('queue_order_ui.order_form')
              ->toString(),
          ]
        ) . '</p>';
      $output .= '<p>' . t('Kindly refer the README.md file for more details.') . '</p>';
      return $output;
  }

}
