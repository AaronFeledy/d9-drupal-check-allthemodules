<?php

/**
 * @file
 * Contains route_iframes.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function route_iframes_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the route_iframes module.
    case 'help.page.route_iframes':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Allow iframes to be associated to routes. For local tasks of entities, allow settings for different scopes.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function route_iframes_theme() {
  return [
    'route_iframe' => [
      'variables' => [
        'config' => '',
        'iframe_height' => 3000,
      ],
      'template' => 'route-iframes',
    ],
  ];
}
