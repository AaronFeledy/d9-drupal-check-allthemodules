<?php

/**
 * @file
 * Define string unique field.
 */

/**
 * Implements hook_field_widget_info_alter().
 *
 * @param array $info
 */
function string_unique_field_widget_info_alter(array &$info) {
  // Add string_unique to available field types.
  $info['string_textfield']['field_types'][] = 'string_unique';
}

/**
 * Implements hook_field_widget_info_alter().
 *
 * @param array $info
 */
function string_unique_field_formatter_info_alter(array &$info) {
  // Add string_unique to available field types.
  $info['string']['field_types'][] = 'string_unique';
}
