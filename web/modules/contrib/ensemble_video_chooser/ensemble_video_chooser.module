<?php
/**
 * @file
 * Ensemble Video Chooser module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 *
 * Displays help and module information.
 */
function ensemble_video_chooser_help($route_name, RouteMatchInterface $route_match) {
  $output = '';
  switch ($route_name) {
    case 'help.page.ensemble_video_chooser':
      $output = '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('The Ensemble Video Chooser module provides wysiwyg editor integration
        enabling content editors to embed video and playlists from an Ensemble Video installation.') . '</p>';
      return $output;

    case 'ensemble_video_chooser.admin_settings':
      $output = '<p>' . t('In order for this module to integrate with your Ensemble Video installation,
        you need to configure LTI settings below. The corresponding settings can be set and retrieved
        by an Institution Administrator in the Institutional Settings area within Ensemble Video.') . '</p>';
      return $output;
  }
}

/**
 * Implements hook_theme().
 */
function ensemble_video_chooser_theme() {
  return array(
    'evchooser_launch' => array(
      'variables' => array(
        'launch_url' => '',
        'launch_data' => array(),
      ),
      'file' => 'ensemble_video_chooser.theme.inc',
    ),
    'evchooser_return' => array(
      'variables' => array(),
      'file' => 'ensemble_video_chooser.theme.inc',
    ),
  );
}
