<?php

/**
 * @file
 * Contains decoupled_quiz_example.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function decoupled_quiz_example_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the decoupled_quiz module.
    case 'help.page.decoupled_quiz_example':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Integration example of Decoupled Quiz module as block') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function decoupled_quiz_example_theme() {
  $theme['decoupled_quiz_example_block'] = [
    'template' => 'decoupled_quiz_example.block',
    'variables' => [
      'qid' => NULL,
      'url' => NULL,
    ],
  ];

  return $theme;
}
