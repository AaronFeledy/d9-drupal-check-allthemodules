<?php

/**
 * @file
 * Contains vuetable.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\vuetable\ToolbarHandler;

/**
 * Implements hook_help().
 */
function vuetable_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the vuetable module.
    case 'help.page.vuetable':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('vuetable module') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function vuetable_theme() {
  return [
    'vuetable_element' => [
          'render element' => 'element',
          'variables' => array(
          //By default the sort parameter for Vuetable looks like this 'sort=name|asc'
          //But for a REST API generated by a View in Drupal, the sort parameter is 'sort_by'
          //So you can specify the parameter name here if your server API accept a diffirent name 
              'sort' => 'sort',
              'page' => 'page',
          ),
      ],
  ];
}
