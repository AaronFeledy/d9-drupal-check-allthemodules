 */
function sieroty_help($route_name, RouteMatchInterface $route_match) {
  $text =
    <<<EOT
           <h1>Moduł sieroty</h1>
           <h3>Zapobiega jednoliterowym spójnikom na końcu wersów</h3>
           <h4>How to use:</h4>
           <ol>
           <li>Włącz moduł.</li>
           <li><b>Configuration > Content authoring > Text formats and editors</b></li>
           <li>Stwórz text formatter. <i>(opcjonalnie)</i></li>
           <li>Zaznacz opcję Sieroty Text Filter w edycji.</li>
</ol>
EOT;
  return $text;
}
